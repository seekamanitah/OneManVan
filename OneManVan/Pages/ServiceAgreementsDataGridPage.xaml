<UserControl x:Class="OneManVan.Pages.ServiceAgreementsDataGridPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1400"
      Background="{DynamicResource BackgroundBrush}"
      Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Status colors -->
        <SolidColorBrush x:Key="StatusDraftBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="StatusPendingBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="StatusActiveBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="StatusExpiringSoonBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="StatusExpiredBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="StatusCancelledBrush" Color="#9CA3AF"/>
        
        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" 
                Padding="20,15" BorderThickness="0,0,0,1" 
                BorderBrush="{DynamicResource Surface2Brush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="??" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Service Agreements" FontSize="20" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock x:Name="SubtitleText" Text="Maintenance contracts and recurring services" 
                                   FontSize="12" Foreground="{DynamicResource SubtextBrush}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="?? Export" Click="ExportButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}" 
                            ToolTip="Export agreements to CSV" Margin="0,0,10,0"/>
                    <Button x:Name="AddButton" Content="? New Agreement" Click="AddButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="{DynamicResource Surface2Brush}" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="5" 
                        BorderThickness="1" BorderBrush="{DynamicResource Surface2Brush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="??" FontSize="14" VerticalAlignment="Center" 
                                   Margin="10,0,5,0" Foreground="{DynamicResource SubtextBrush}"/>
                        <TextBox x:Name="SearchBox" Grid.Column="1" 
                                 Text="" BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="{DynamicResource TextBrush}"
                                 VerticalAlignment="Center"
                                 TextChanged="SearchBox_TextChanged"/>
                        <Button x:Name="ClearSearchButton" Grid.Column="2" Content="?" 
                                Click="ClearSearchButton_Click"
                                Visibility="Collapsed" Background="Transparent" 
                                BorderThickness="0" Padding="8,0" Cursor="Hand"
                                Foreground="{DynamicResource SubtextBrush}"/>
                    </Grid>
                </Border>

                <!-- Status Filter -->
                <ComboBox x:Name="StatusFilter" Grid.Column="1" Margin="10,0,0,0" Width="150"
                          SelectionChanged="StatusFilter_SelectionChanged">
                    <ComboBoxItem Content="All Statuses" IsSelected="True"/>
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Expiring Soon"/>
                    <ComboBoxItem Content="Draft"/>
                    <ComboBoxItem Content="Pending"/>
                    <ComboBoxItem Content="Expired"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>

                <!-- Type Filter -->
                <ComboBox x:Name="TypeFilter" Grid.Column="2" Margin="10,0,0,0" Width="140"
                          SelectionChanged="TypeFilter_SelectionChanged">
                    <ComboBoxItem Content="All Types" IsSelected="True"/>
                    <ComboBoxItem Content="Basic"/>
                    <ComboBoxItem Content="Standard"/>
                    <ComboBoxItem Content="Premium"/>
                    <ComboBoxItem Content="Annual"/>
                    <ComboBoxItem Content="Semi-Annual"/>
                    <ComboBoxItem Content="Quarterly"/>
                    <ComboBoxItem Content="Custom"/>
                </ComboBox>

                <!-- Quick Filters -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="20,0,0,0">
                    <RadioButton x:Name="AllRadio" Content="All" GroupName="QuickFilter" 
                                 IsChecked="True" Margin="0,0,15,0"
                                 Foreground="{DynamicResource TextBrush}"
                                 Checked="QuickFilter_Changed"/>
                    <RadioButton x:Name="ActiveRadio" Content="Active" GroupName="QuickFilter" 
                                 Margin="0,0,15,0" Checked="QuickFilter_Changed"
                                 Foreground="{DynamicResource TextBrush}"/>
                    <RadioButton x:Name="DueForServiceRadio" Content="Due for Service" GroupName="QuickFilter" 
                                 Margin="0,0,15,0" Checked="QuickFilter_Changed"
                                 Foreground="{DynamicResource TextBrush}"/>
                    <RadioButton x:Name="ExpiringRadio" Content="Expiring (30d)" GroupName="QuickFilter" 
                                 Checked="QuickFilter_Changed"
                                 Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>

                <!-- Refresh -->
                <Button Grid.Column="5" Content="??" Click="RefreshButton_Click"
                        Background="Transparent" BorderThickness="0" 
                        Padding="10,5" Cursor="Hand" FontSize="16"
                        ToolTip="Refresh"/>
            </Grid>
        </Border>

        <!-- Main Content - DataGrid and Detail Panel -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition x:Name="DetailColumn" Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid x:Name="AgreementsGrid" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="AgreementsGrid_SelectionChanged"
                      MouseDoubleClick="AgreementsGrid_MouseDoubleClick"
                      Background="{DynamicResource SurfaceBrush}"
                      Foreground="{DynamicResource TextBrush}"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="{DynamicResource Surface2Brush}"
                      RowHeight="48"
                      HeadersVisibility="Column"
                      CanUserResizeRows="False"
                      CanUserSortColumns="True"
                      Margin="15">

                <DataGrid.Columns>
                    <!-- Agreement Number -->
                    <DataGridTextColumn Header="Agreement #" Binding="{Binding AgreementNumber}" Width="110">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Customer Name -->
                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer.Name}" Width="180">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Agreement Name -->
                    <DataGridTextColumn Header="Agreement Name" Binding="{Binding Name}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Type -->
                    <DataGridTextColumn Header="Type" Binding="{Binding TypeDisplay}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Status -->
                    <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Annual Price -->
                    <DataGridTextColumn Header="Annual" Binding="{Binding AnnualPrice, StringFormat=C0}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- End Date -->
                    <DataGridTextColumn Header="Expires" Binding="{Binding EndDate, StringFormat='MMM d, yyyy'}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Visits Remaining -->
                    <DataGridTemplateColumn Header="Visits" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding VisitsUsed}" FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock Text="/" Foreground="{DynamicResource SubtextBrush}"/>
                                    <TextBlock Text="{Binding IncludedVisitsPerYear}" 
                                               Foreground="{DynamicResource SubtextBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="?" FontSize="16" 
                                            Click="RowMenuButton_Click"
                                            Background="Transparent" BorderThickness="0"
                                            Padding="10,5" Cursor="Hand"
                                            Foreground="{DynamicResource TextBrush}">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="?? Edit Agreement" Click="EditMenuItem_Click"/>
                                                <MenuItem Header="?? Schedule Maintenance" Click="ScheduleMaintenanceMenuItem_Click"/>
                                                <Separator/>
                                                <MenuItem Header="?? Renew Agreement" Click="RenewMenuItem_Click"/>
                                                <MenuItem Header="?? Suspend" Click="SuspendMenuItem_Click"/>
                                                <Separator/>
                                                <MenuItem Header="? Cancel Agreement" Click="CancelMenuItem_Click"
                                                          Foreground="{DynamicResource ErrorBrush}"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch" Background="Transparent"/>

            <!-- Detail Panel -->
            <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" 
                    BorderThickness="1,0,0,0" BorderBrush="{DynamicResource Surface2Brush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailPanel" Margin="20">
                        <!-- Empty State -->
                        <StackPanel x:Name="EmptyDetailPanel" HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" Margin="0,100,0,0">
                            <TextBlock Text="??" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="Select an agreement" FontSize="14" 
                                       Foreground="{DynamicResource SubtextBrush}" 
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Agreement Details -->
                        <StackPanel x:Name="AgreementDetailPanel" Visibility="Collapsed">
                            <!-- Header -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="DetailAgreementNumber" Text="SA-2024-0001" 
                                               FontSize="12" Foreground="{DynamicResource SubtextBrush}"/>
                                    <TextBlock x:Name="DetailAgreementName" Text="Annual Maintenance Plan" 
                                               FontSize="18" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="??" Click="EditDetailButton_Click"
                                            ToolTip="Edit Agreement"
                                            Style="{StaticResource IconButtonStyle}" Margin="0,0,5,0"/>
                                    <Button Content="??" Click="ScheduleDetailButton_Click"
                                            ToolTip="Schedule Maintenance"
                                            Style="{StaticResource IconButtonStyle}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Status Badge -->
                            <Border x:Name="DetailStatusBadge" CornerRadius="12" 
                                    Padding="12,6" HorizontalAlignment="Left"
                                    Background="{DynamicResource SecondaryBrush}" Margin="0,0,0,20">
                                <TextBlock x:Name="DetailStatusText" Text="Active" 
                                           FontWeight="Medium" Foreground="White"/>
                            </Border>

                            <!-- Customer Info -->
                            <TextBlock Text="CUSTOMER" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="12" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock x:Name="DetailCustomerName" Text="Customer Name" 
                                               FontWeight="Medium" FontSize="14"
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock x:Name="DetailCustomerContact" Text="(555) 123-4567" 
                                               FontSize="12" Foreground="{DynamicResource SubtextBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Contract Term -->
                            <TextBlock Text="CONTRACT TERM" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="12" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Start Date" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock x:Name="DetailStartDate" Text="Jan 1, 2024" 
                                                   FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="End Date" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock x:Name="DetailEndDate" Text="Dec 31, 2024" 
                                                   FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Pricing -->
                            <TextBlock Text="PRICING" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="12" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Annual Price" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock x:Name="DetailAnnualPrice" Text="$299" 
                                                   FontSize="20" FontWeight="Bold" 
                                                   Foreground="{DynamicResource SecondaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Billing" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock x:Name="DetailBillingFrequency" Text="Annual" 
                                                   FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                                        <TextBlock Text="Repair Discount" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock x:Name="DetailRepairDiscount" Text="15% off" 
                                                   FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Visits -->
                            <TextBlock Text="INCLUDED VISITS" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="12" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock x:Name="DetailVisitsProgress" Text="1 of 2 visits used" 
                                                   FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                        <ProgressBar x:Name="DetailVisitsBar" Value="50" Maximum="100" 
                                                     Height="6" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <TextBlock x:Name="DetailVisitsRemaining" Grid.Column="1" 
                                               Text="1 remaining" FontSize="12"
                                               Foreground="{DynamicResource SecondaryBrush}" 
                                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Included Services -->
                            <TextBlock Text="INCLUDED SERVICES" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="12" Margin="0,0,0,15">
                                <StackPanel x:Name="DetailServicesPanel">
                                    <!-- Dynamically populated -->
                                </StackPanel>
                            </Border>

                            <!-- Next Maintenance -->
                            <TextBlock Text="NEXT MAINTENANCE" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="12" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="??" FontSize="24" VerticalAlignment="Center" 
                                               Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock x:Name="DetailNextMaintenanceDate" 
                                                   Text="April 15, 2024" FontWeight="Medium"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock x:Name="DetailNextMaintenanceType" 
                                                   Text="Spring AC Tune-Up" FontSize="12" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Action Buttons -->
                            <StackPanel Margin="0,10,0,0">
                                <Button Content="?? Schedule Maintenance" 
                                        Click="ScheduleMaintenanceButton_Click"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="?? Renew Agreement" 
                                        Click="RenewButton_Click"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        HorizontalAlignment="Stretch" Margin="0,8,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource Surface2Brush}" 
                Padding="15,8" BorderThickness="0,1,0,0" 
                BorderBrush="{DynamicResource Surface2Brush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="TotalCountText" Text="Total: 0 agreements" 
                               Foreground="{DynamicResource SubtextBrush}" FontSize="12" Margin="0,0,20,0"/>
                    <TextBlock x:Name="ActiveCountText" Text="Active: 0" 
                               Foreground="{DynamicResource SecondaryBrush}" FontSize="12" Margin="0,0,20,0"/>
                    <TextBlock x:Name="ExpiringCountText" Text="Expiring: 0" 
                               Foreground="{DynamicResource WarningBrush}" FontSize="12" Margin="0,0,20,0"/>
                    <TextBlock x:Name="TotalValueText" Text="Annual Value: $0" 
                               Foreground="{DynamicResource TextBrush}" FontSize="12" FontWeight="Medium"/>
                </StackPanel>

                <TextBlock Grid.Column="2" x:Name="LastRefreshText" 
                           Text="Last updated: just now" 
                           Foreground="{DynamicResource SubtextBrush}" FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
