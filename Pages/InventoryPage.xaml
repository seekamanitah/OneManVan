<UserControl x:Class="OneManVan.Pages.InventoryPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:converters="clr-namespace:OneManVan.Converters"
         mc:Ignorable="d" 
         d:DesignHeight="650" d:DesignWidth="1100"
         Background="{DynamicResource BackgroundBrush}">

<UserControl.Resources>
    <Style x:Key="ActionButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,12"/>
        </Style>

        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Inventory List -->
        <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="&#x1F4E6;" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Inventory" FontSize="24" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock Text="{Binding TotalItems, StringFormat='{}{0} items'}" 
                                   FontSize="13" Foreground="{DynamicResource SubtextBrush}"/>
                    </StackPanel>
                    <Button Content="+ Add Item" 
                            Click="OnAddInventoryClick"
                            Style="{StaticResource ActionButton}"
                            Margin="30,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Stats Row -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalItems}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryBrush}"/>
                            <TextBlock Text="Total Items" FontSize="11" 
                                       Foreground="{DynamicResource SubtextBrush}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding LowStockCount}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource WarningBrush}"/>
                            <TextBlock Text="Low Stock" FontSize="11" 
                                       Foreground="{DynamicResource SubtextBrush}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="4" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalValue, StringFormat='${0:N0}'}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource SecondaryBrush}"/>
                            <TextBlock Text="Total Value" FontSize="11" 
                                       Foreground="{DynamicResource SubtextBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Search Bar -->
                <TextBox Grid.Row="2" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         Padding="12,10" FontSize="14" Margin="0,0,0,10"/>

                <!-- Filters -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Category:" Foreground="{DynamicResource SubtextBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding CategoryOptions}"
                              SelectedItem="{Binding CategoryFilter}"
                              Background="{DynamicResource SurfaceBrush}"
                              Foreground="{DynamicResource TextBrush}"
                              Width="130" Padding="8,6"/>
                    
                    <CheckBox Content="Low Stock Only" 
                              IsChecked="{Binding ShowLowStockOnly}"
                              Foreground="{DynamicResource TextBrush}"
                              VerticalAlignment="Center" Margin="20,0,0,0"/>
                    
                    <Button Content="Clear" Command="{Binding ClearFilterCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Padding="10,5" Margin="15,0,0,0"/>
                </StackPanel>

                <!-- Item List -->
                <Border Grid.Row="4" Background="{DynamicResource SurfaceBrush}" CornerRadius="8">
                    <ListView ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem}"
                              Background="Transparent"
                              BorderThickness="0"
                              SelectionChanged="OnInventoryItemSelected"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="15,10"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ListItemSelectedBrush}"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                            <Condition Property="IsSelected" Value="False"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Background" Value="{DynamicResource ListItemHoverBrush}"/>
                                    </MultiTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="{Binding Category}" FontSize="11"
                                                       Foreground="{DynamicResource PrimaryBrush}"/>
                                            <TextBlock Text=" | " FontSize="11"
                                                       Foreground="{DynamicResource SubtextBrush}"/>
                                            <TextBlock Text="{Binding Sku}" FontSize="11"
                                                       Foreground="{DynamicResource SubtextBrush}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Stock Status -->
                                    <Border Grid.Column="1" CornerRadius="4" Padding="8,4" 
                                            VerticalAlignment="Center" Margin="10,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{DynamicResource BadgeSuccessBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource BadgeWarningBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource BadgeErrorBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="12" Foreground="{DynamicResource TextBrush}">
                                            <Run Text="{Binding QuantityOnHand, StringFormat='{}{0:N0}'}"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Unit}"/>
                                        </TextBlock>
                                    </Border>

                                    <!-- Price -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Price, StringFormat='${0:N2}'}" 
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>

                <!-- Loading -->
                <Border Grid.Row="4" Background="#80000000" CornerRadius="8"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="Loading..." FontSize="16" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Right Panel: Item Details / Edit -->
        <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}">
            <Grid>
                <!-- No Selection -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding HasSelectedItem, Converter={StaticResource BoolToVisibility}, ConverterParameter=inverse}">
                    <TextBlock Text="&#x1F4E6;" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock Text="Select an item" FontSize="16" 
                               Foreground="{DynamicResource SubtextBrush}"
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Details / Edit -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding HasSelectedItem, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel Margin="20">
                        <!-- View Mode -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}, ConverterParameter=inverse}">
                            <!-- Header -->
                            <TextBlock Text="{Binding SelectedItem.Name}" 
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SelectedItem.Category}" 
                                       FontSize="13" Foreground="{DynamicResource PrimaryBrush}"/>

                            <!-- Stock Info -->
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="15" Margin="0,15,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="On Hand" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock FontSize="24" FontWeight="Bold"
                                                   Foreground="{DynamicResource TextBrush}">
                                            <Run Text="{Binding SelectedItem.QuantityOnHand, StringFormat='{}{0:N0}'}"/>
                                            <Run Text=" " FontSize="14"/>
                                            <Run Text="{Binding SelectedItem.Unit}" FontSize="14"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Reorder Point" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedItem.ReorderPoint, StringFormat='{}{0:N0}'}" 
                                                   FontSize="24" FontWeight="Bold"
                                                   Foreground="{DynamicResource WarningBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Pricing -->
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="15" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Cost" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedItem.Cost, StringFormat='${0:N2}'}" 
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Price" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedItem.Price, StringFormat='${0:N2}'}" 
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource SecondaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Margin" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedItem.ProfitMargin, StringFormat='{}{0:N1}%'}" 
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- HVAC Compatibility -->
                            <TextBlock Text="HVAC Compatibility" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,15,0,8"/>
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="BTU Range" FontSize="12" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock HorizontalAlignment="Right" FontSize="12"
                                                   Foreground="{DynamicResource TextBrush}">
                                            <Run Text="{Binding SelectedItem.BtuMinCompatibility, StringFormat='{}{0:N0}', TargetNullValue='Any'}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding SelectedItem.BtuMaxCompatibility, StringFormat='{}{0:N0}', TargetNullValue='Any'}"/>
                                        </TextBlock>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="Fuel Type" FontSize="12" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedItem.FuelTypeCompatibility, TargetNullValue='Any'}" 
                                                   HorizontalAlignment="Right" FontSize="12"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="Filter Size" FontSize="12" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedItem.FilterSize, TargetNullValue='-'}" 
                                                   HorizontalAlignment="Right" FontSize="12"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="Refrigerant" FontSize="12" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedItem.RefrigerantType, TargetNullValue='-'}" 
                                                   HorizontalAlignment="Right" FontSize="12"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Stock Adjustment -->
                            <TextBlock Text="Quick Stock Adjustment" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,15,0,8"/>
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" 
                                                 Text="{Binding AdjustmentQuantity, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="{DynamicResource BackgroundBrush}"
                                                 Foreground="{DynamicResource TextBrush}"
                                                 Padding="8,6"/>
                                        <TextBox Grid.Column="2" 
                                                 Text="{Binding AdjustmentNotes, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="{DynamicResource BackgroundBrush}"
                                                 Foreground="{DynamicResource TextBrush}"
                                                 Padding="8,6"/>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="+ Restock" Command="{Binding RestockCommand}"
                                                Style="{StaticResource ActionButton}"
                                                Background="{DynamicResource SecondaryBrush}"
                                                Padding="12,6" Margin="0,0,8,0"/>
                                        <Button Content="+/- Adjust" Command="{Binding AdjustStockCommand}"
                                                Style="{StaticResource SecondaryButton}"
                                                Padding="12,6"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Content="Edit" Command="{Binding EditItemCommand}"
                                        Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
                                <Button Content="Delete" Command="{Binding DeleteItemCommand}"
                                        Style="{StaticResource DangerButton}"/>
                            </StackPanel>

                            <!-- Recent Activity -->
                            <TextBlock Text="Recent Activity" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,20,0,8"/>
                            <ItemsControl ItemsSource="{Binding ItemLogs}" MaxHeight="150">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8,6" BorderBrush="{DynamicResource Surface2Brush}"
                                                BorderThickness="0,0,0,1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding ChangeTypeDisplay}" FontSize="12"
                                                               Foreground="{DynamicResource TextBrush}"/>
                                                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:MMM d, HH:mm}'}" 
                                                               FontSize="10" Foreground="{DynamicResource SubtextBrush}"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" Text="{Binding ChangeDisplay}" 
                                                           FontSize="14" FontWeight="SemiBold"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource SecondaryBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding QuantityChange}" Value="-1">
                                                                    <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Edit Mode -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Item Details" FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,15"/>

                            <TextBlock Text="Name *" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource BackgroundBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     Padding="8,6" Margin="0,0,0,10"/>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="SKU" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditSku, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="8,6"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Category" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding CategoryOptions}"
                                              SelectedItem="{Binding EditCategory}"
                                              Background="{DynamicResource BackgroundBrush}"
                                              Foreground="{DynamicResource TextBrush}"
                                              Padding="8,6"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Quantity" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditQuantity, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="8,6"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Cost" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditCost, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="8,6"/>
                                </StackPanel>
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Price" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditPrice, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="8,6"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="HVAC Compatibility" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryBrush}" Margin="0,10,0,8"/>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="BTU Min" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditBtuMin, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="8,6"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="BTU Max" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditBtuMax, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="8,6"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Filter Size" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditFilterSize, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="8,6"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Refrigerant" FontSize="11" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditRefrigerantType, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="8,6"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Content="Save Item" Command="{Binding SaveItemCommand}"
                                        Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
                                <Button Content="Cancel" Command="{Binding CancelEditCommand}"
                                        Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
