<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="OneManVan.Pages.CompanyDataGridPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:OneManVan.Controls"
             Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <!-- Main Content -->
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top" 
                    Background="{DynamicResource SurfaceBrush}" 
                    Padding="20,15" 
                    BorderThickness="0,0,0,1" 
                    BorderBrush="{DynamicResource Surface2Brush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Companies" FontSize="24" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="CountTextBlock" Text="(0)" FontSize="18" 
                                   Foreground="{DynamicResource SubtextBrush}" 
                                   Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBox x:Name="SearchTextBox" 
                                 Width="250"
                                 Background="{DynamicResource SurfaceBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource Surface2Brush}"
                                 Padding="10,8"
                                 FontSize="13"
                                 Text=""
                                 TextChanged="SearchTextBox_TextChanged"
                                 Margin="0,0,15,0">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="6">
                                                    <Grid>
                                                        <TextBlock Text="Search companies..." 
                                                                   Foreground="{DynamicResource SubtextBrush}"
                                                                   Margin="10,8"
                                                                   IsHitTestVisible="False"
                                                                   Visibility="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource LengthToVisibilityConverter}}"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="10,8"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Content="+ Add Company" Click="OnAddClick"
                                Background="{DynamicResource PrimaryBrush}"
                                Foreground="White"
                                Padding="15,8"
                                FontSize="13"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DataGrid -->
            <DataGrid x:Name="CompanyDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Background="Transparent"
                      RowBackground="{DynamicResource SurfaceBrush}"
                      AlternatingRowBackground="{DynamicResource Surface2Brush}"
                      BorderThickness="0"
                      MouseDoubleClick="CompanyDataGrid_MouseDoubleClick">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Company Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding CompanyType}" Width="*"/>
                    <DataGridTextColumn Header="Industry" Binding="{Binding Industry}" Width="*"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1.5*"/>
                    <DataGridTextColumn Header="City" Binding="{Binding BillingCity}" Width="*"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Padding" Value="0,8"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
