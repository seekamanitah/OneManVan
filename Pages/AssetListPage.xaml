<UserControl x:Class="OneManVan.Pages.AssetListPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:enums="clr-namespace:OneManVan.Shared.Models.Enums;assembly=OneManVan.Shared"
xmlns:converters="clr-namespace:OneManVan.Converters"
mc:Ignorable="d" 
d:DesignHeight="600" d:DesignWidth="1100"
Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="FormDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Asset Tree -->
        <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="20,20,20,15">
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBlock Text="Assets" FontSize="22" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                    <Button Content="+ Add Asset" 
                            Command="{Binding AddAssetCommand}"
                            Style="{StaticResource ActionButton}"
                            HorizontalAlignment="Left" Margin="0,15,0,0"/>
                </StackPanel>

                <!-- Search -->
                <Border Grid.Row="1" Margin="20,0,20,15">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource TextBrush}"
                             BorderBrush="{DynamicResource Surface2Brush}"
                             Padding="12,10" FontSize="13"/>
                </Border>

                <!-- Tree View -->
                <TreeView Grid.Row="2" ItemsSource="{Binding AssetTree}"
                          Background="Transparent" BorderThickness="0"
                          Margin="10,0,10,10">
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type local:AssetTreeNode}" 
                                                  ItemsSource="{Binding Children}"
                                                  xmlns:local="clr-namespace:OneManVan.ViewModels">
                            <Border Padding="8,6" Margin="2" CornerRadius="4"
                                    Background="{Binding IsSelected, Converter={StaticResource BoolToVisibility}, ConverterParameter=surface}">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Icon based on node type -->
                                    <TextBlock Margin="0,0,8,0" FontSize="14">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NodeType}" Value="Customer">
                                                        <Setter Property="Text" Value=""/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding NodeType}" Value="Site">
                                                        <Setter Property="Text" Value=""/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding NodeType}" Value="Asset">
                                                        <Setter Property="Text" Value=""/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <TextBlock Text="{Binding Name}" 
                                               Foreground="{DynamicResource TextBrush}"
                                               FontSize="13" VerticalAlignment="Center"/>
                                    
                                    <!-- Warranty badge for assets -->
                                    <Border Margin="8,0,0,0" CornerRadius="3" Padding="6,2"
                                            Visibility="{Binding Asset, Converter={StaticResource BoolToVisibility}}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding WarrantyStatus}" Value="Valid">
                                                        <Setter Property="Background" Value="{DynamicResource BadgeSuccessBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding WarrantyStatus}" Value="Expiring">
                                                        <Setter Property="Background" Value="{DynamicResource BadgeWarningBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding WarrantyStatus}" Value="Expired">
                                                        <Setter Property="Background" Value="{DynamicResource BadgeErrorBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding WarrantyStatus}" FontSize="10"
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <EventSetter Event="Selected" Handler="TreeViewItem_Selected"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource TreeItemSelectedBrush}"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="IsSelected" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="{DynamicResource ListItemHoverBrush}"/>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>

                <!-- Loading -->
                <Border Grid.Row="2" Background="#80000000"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="Loading..." FontSize="14" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Right Panel: Asset Details -->
        <Border Grid.Column="1" Background="{DynamicResource BackgroundBrush}" Padding="25">
            <Grid>
                <!-- No Selection (only show when not editing and no asset selected) -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasSelectedAsset}" Value="False"/>
                                        <Condition Binding="{Binding IsEditing}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    
                    <TextBlock Text="Select an asset from the tree" FontSize="16" 
                               Foreground="{DynamicResource SubtextBrush}"
                               HorizontalAlignment="Center" Margin="0,15,0,0"/>
                    <TextBlock Text="or click 'Add Asset' to create one" FontSize="13" 
                               Foreground="{DynamicResource SubtextBrush}"
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Asset Details / Edit Form (show when asset selected OR editing) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSelectedAsset}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <Grid>
                        <!-- View Mode -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}, ConverterParameter=inverse}">
                            <!-- Header -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding SelectedAsset.Serial}" 
                                               FontSize="24" FontWeight="Bold"
                                               Foreground="{DynamicResource TextBrush}"
                                               TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding SelectedAsset.Brand}" 
                                                   FontSize="14" Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text=" | " FontSize="14" Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedAsset.Model}" 
                                                   FontSize="14" Foreground="{DynamicResource SubtextBrush}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Warranty Badge -->
                                <Border Grid.Column="1" CornerRadius="6" Padding="12,8"
                                        VerticalAlignment="Top" Margin="15,0,0,0">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding WarrantyStatusColor}"/>
                                    </Border.Background>
                                    <TextBlock Text="{Binding WarrantyStatusText}" 
                                               FontSize="11" FontWeight="SemiBold"
                                               Foreground="{DynamicResource BackgroundBrush}"/>
                                </Border>
                            </Grid>

                            <!-- HVAC Details Card -->
                            <Border Background="{DynamicResource SurfaceBrush}" 
                                    CornerRadius="8" Padding="20" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="HVAC Details" FontSize="13" FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,0,15"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Fuel Type -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,12">
                                            <TextBlock Text="Fuel Type" FontSize="11" 
                                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SelectedAsset.FuelType}" 
                                                       FontSize="14" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextBrush}"/>
                                        </StackPanel>

                                        <!-- Unit Config -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,12">
                                            <TextBlock Text="Unit Config" FontSize="11" 
                                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SelectedAsset.UnitConfig}" 
                                                       FontSize="14" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextBrush}"/>
                                        </StackPanel>

                                        <!-- BTU Rating -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="BTU Rating" FontSize="11" 
                                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SelectedAsset.BtuRating, StringFormat='{}{0:N0}'}" 
                                                       FontSize="14" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextBrush}"/>
                                        </StackPanel>

                                        <!-- SEER Rating -->
                                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="SEER Rating" FontSize="11" 
                                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SelectedAsset.SeerRating}" 
                                                       FontSize="14" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Service Info Card -->
                            <Border Background="{DynamicResource SurfaceBrush}" 
                                    CornerRadius="8" Padding="20" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Service Info" FontSize="13" FontWeight="SemiBold"
                                               Foreground="{DynamicResource SecondaryBrush}" Margin="0,0,0,15"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Install Date -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,12">
                                            <TextBlock Text="Install Date" FontSize="11" 
                                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SelectedAsset.InstallDate, StringFormat='{}{0:MMM d, yyyy}'}" 
                                                       FontSize="14" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextBrush}"/>
                                        </StackPanel>

                                        <!-- Warranty Term -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,12">
                                            <TextBlock Text="Warranty Term" FontSize="11" 
                                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SelectedAsset.WarrantyTermYears, StringFormat='{}{0} years'}" 
                                                       FontSize="14" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextBrush}"/>
                                        </StackPanel>

                                        <!-- Warranty Start -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Warranty Start" FontSize="11" 
                                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SelectedAsset.WarrantyStartDate, StringFormat='{}{0:MMM d, yyyy}'}" 
                                                       FontSize="14" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextBrush}"/>
                                        </StackPanel>

                                        <!-- Warranty End -->
                                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="Warranty End" FontSize="11" 
                                                       Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SelectedAsset.WarrantyEndDate, StringFormat='{}{0:MMM d, yyyy}'}" 
                                                       FontSize="14" FontWeight="Medium"
                                                       Foreground="{DynamicResource TextBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Notes -->
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                                    Visibility="{Binding SelectedAsset.Notes, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel>
                                    <TextBlock Text="Notes" FontSize="13" FontWeight="SemiBold"
                                               Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding SelectedAsset.Notes}" 
                                               FontSize="13"
                                               Foreground="{DynamicResource TextBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit Asset" Command="{Binding EditAssetCommand}"
                                        Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
                                <Button Content="Delete" Command="{Binding DeleteAssetCommand}"
                                        Style="{StaticResource DangerButton}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Edit Mode -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}}"
                                    MaxWidth="500" HorizontalAlignment="Left">
                            <TextBlock Text="Asset Details" FontSize="22" FontWeight="Bold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,25"/>

                            <!-- Customer Selection -->
                            <TextBlock Text="Customer *" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Customers}"
                                      SelectedValue="{Binding SelectedCustomerId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      Style="{StaticResource FormComboBox}"/>

                            <!-- Serial -->
                            <TextBlock Text="Serial Number *" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditSerial, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBox}"/>

                            <!-- Brand & Model -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Brand" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding EditBrand, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Model" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding EditModel, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- HVAC Fields -->
                            <TextBlock Text="HVAC Configuration" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryBrush}" Margin="0,10,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Fuel Type" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding FuelTypes}"
                                              SelectedItem="{Binding EditFuelType}"
                                              Style="{StaticResource FormComboBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Unit Config" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding UnitConfigs}"
                                              SelectedItem="{Binding EditUnitConfig}"
                                              Style="{StaticResource FormComboBox}"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="BTU Rating" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding EditBtuRating, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="SEER Rating" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding EditSeerRating, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Warranty Info -->
                            <TextBlock Text="Warranty Information" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryBrush}" Margin="0,10,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Install Date" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <DatePicker SelectedDate="{Binding EditInstallDate}"
                                                Style="{StaticResource FormDatePicker}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Warranty Start" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <DatePicker SelectedDate="{Binding EditWarrantyStartDate}"
                                                Style="{StaticResource FormDatePicker}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Warranty Term (years)" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditWarrantyTermYears, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBox}" Width="100" HorizontalAlignment="Left"/>

                            <!-- Notes -->
                            <TextBlock Text="Notes" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditNotes, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBox}"
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                                     VerticalContentAlignment="Top"/>

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Content="Save Asset" Command="{Binding SaveAssetCommand}"
                                        Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
                                <Button Content="Cancel" Command="{Binding CancelEditCommand}"
                                        Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
