<UserControl x:Class="OneManVan.Pages.SchemaEditorPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         mc:Ignorable="d" 
         d:DesignHeight="700" d:DesignWidth="1000"
         Background="{DynamicResource BackgroundBrush}">

<UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

    <Style x:Key="ActionButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>

        <Style x:Key="FieldCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
        </Style>

        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Entity Types -->
        <Border Background="{DynamicResource SurfaceBrush}" Padding="15">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Entity Types" FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,15"/>

                <ListBox x:Name="EntityTypeList" 
                         Background="Transparent" 
                         BorderThickness="0"
                         SelectionChanged="EntityTypeList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}" Foreground="{DynamicResource TextBrush}" 
                                           FontSize="14"/>
                                <Border Grid.Column="1" Background="{DynamicResource Surface2Brush}" 
                                        CornerRadius="10" Padding="8,2" Visibility="{Binding HasFields, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="{Binding FieldCount}" Foreground="{DynamicResource SubtextBrush}" 
                                               FontSize="11"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" Background="Transparent" 
                                                CornerRadius="6" Margin="0,2">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Surface2Brush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Surface3Brush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Middle Panel: Field List -->
        <DockPanel Grid.Column="1" Margin="15">
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock x:Name="SelectedEntityText" Text="Select an Entity Type" 
                               FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock x:Name="FieldCountText" Text="0 custom fields" 
                               FontSize="12" Foreground="{DynamicResource SubtextBrush}"/>
                </StackPanel>

                <Button Grid.Column="1" Content="+ Add Field" Style="{StaticResource ActionButton}"
                        Click="AddField_Click"/>
            </Grid>

            <!-- Field List -->
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="FieldsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource FieldCard}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="&#x2630;" FontSize="16" Foreground="{DynamicResource SubtextBrush}"
                                                   VerticalAlignment="Center" Margin="0,0,10,0" Cursor="SizeAll"/>

                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DisplayLabel}" FontWeight="SemiBold" 
                                                           Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                                <TextBlock Text="*" Foreground="{DynamicResource ErrorBrush}" 
                                                           Margin="3,0,0,0" FontWeight="Bold"
                                                           Visibility="{Binding IsRequired, Converter={StaticResource BoolToVisibility}}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <Border Background="{DynamicResource Surface2Brush}" CornerRadius="4" 
                                                        Padding="6,2" Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding FieldTypeDisplay}" FontSize="11" 
                                                               Foreground="{DynamicResource SubtextBrush}"/>
                                                </Border>
                                                <TextBlock Text="{Binding FieldName}" FontSize="11" 
                                                           Foreground="{DynamicResource SubtextBrush}" FontStyle="Italic"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="Edit" Style="{StaticResource SecondaryButton}"
                                                    Padding="10,5" Margin="0,0,5,0"
                                                    Tag="{Binding Id}" Click="EditField_Click"/>
                                            <Button Content="&#x1F5D1;" Style="{StaticResource SecondaryButton}"
                                                    Padding="8,5" Tag="{Binding Id}" Click="DeleteField_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState" VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="&#x1F4CB;" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="No custom fields" FontSize="16" Foreground="{DynamicResource SubtextBrush}"
                               HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Add fields to customize this entity type" FontSize="12" 
                               Foreground="{DynamicResource SubtextBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </DockPanel>

        <!-- Right Panel: Field Editor -->
        <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" Padding="20">
            <Grid>
                <!-- Editor Panel -->
                <DockPanel x:Name="EditorPanel" Visibility="Collapsed">
                    <TextBlock DockPanel.Dock="Top" x:Name="EditorTitle" Text="Add Field" 
                               FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,20"/>

                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right"
                                Margin="0,15,0,0">
                        <Button Content="Cancel" Style="{StaticResource SecondaryButton}"
                                Click="CancelEdit_Click" Margin="0,0,10,0"/>
                        <Button Content="Save Field" Style="{StaticResource ActionButton}"
                                Click="SaveField_Click"/>
                    </StackPanel>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Field Name *" Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="FieldNameInput" Style="{StaticResource InputStyle}"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Display Label *" Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="DisplayLabelInput" Style="{StaticResource InputStyle}"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Field Type *" Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox x:Name="FieldTypeCombo" Style="{StaticResource ComboStyle}"
                                      Margin="0,0,0,15" SelectionChanged="FieldTypeCombo_SelectionChanged">
                                <ComboBoxItem Content="Text" Tag="0"/>
                                <ComboBoxItem Content="Number" Tag="1"/>
                                <ComboBoxItem Content="Decimal" Tag="2"/>
                                <ComboBoxItem Content="Date" Tag="3"/>
                                <ComboBoxItem Content="Yes/No" Tag="4"/>
                                <ComboBoxItem Content="Dropdown" Tag="5"/>
                            </ComboBox>

                            <StackPanel x:Name="EnumOptionsPanel" Visibility="Collapsed" Margin="0,0,0,15">
                                <TextBlock Text="Dropdown Options (one per line) *" 
                                           Foreground="{DynamicResource SubtextBrush}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox x:Name="EnumOptionsInput" Style="{StaticResource InputStyle}"
                                         AcceptsReturn="True" Height="80" TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <StackPanel x:Name="NumberValidationPanel" Visibility="Collapsed" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Min Value" Foreground="{DynamicResource SubtextBrush}" 
                                                   FontSize="12" Margin="0,0,0,5"/>
                                        <TextBox x:Name="MinValueInput" Style="{StaticResource InputStyle}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Max Value" Foreground="{DynamicResource SubtextBrush}" 
                                                   FontSize="12" Margin="0,0,0,5"/>
                                        <TextBox x:Name="MaxValueInput" Style="{StaticResource InputStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <StackPanel x:Name="TextValidationPanel" Visibility="Collapsed" Margin="0,0,0,15">
                                <TextBlock Text="Max Length" Foreground="{DynamicResource SubtextBrush}" 
                                           FontSize="12" Margin="0,0,0,5"/>
                                <TextBox x:Name="MaxLengthInput" Style="{StaticResource InputStyle}" Width="100"
                                         HorizontalAlignment="Left"/>
                            </StackPanel>

                            <TextBlock Text="Default Value" Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="DefaultValueInput" Style="{StaticResource InputStyle}"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Placeholder Text" Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="PlaceholderInput" Style="{StaticResource InputStyle}"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Description" Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="DescriptionInput" Style="{StaticResource InputStyle}"
                                     Margin="0,0,0,15"/>

                            <CheckBox x:Name="IsRequiredCheck" Content="Required field"
                                      Foreground="{DynamicResource TextBrush}" Margin="0,0,0,10"/>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>

                <!-- Empty Editor State -->
                <StackPanel x:Name="EditorEmptyState" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="&#x270F;" FontSize="36" HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a field to edit" FontSize="14" Foreground="{DynamicResource SubtextBrush}"
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="or click 'Add Field' to create new" FontSize="12" 
                               Foreground="{DynamicResource SubtextBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
