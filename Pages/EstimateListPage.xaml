<UserControl x:Class="OneManVan.Pages.EstimateListPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:converters="clr-namespace:OneManVan.Converters"
         mc:Ignorable="d" 
         d:DesignHeight="650" d:DesignWidth="1100"
         Background="{DynamicResource BackgroundBrush}">

<UserControl.Resources>
    <Style x:Key="ActionButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6" 
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.85"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
        <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>

    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
    </Style>

    <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
</UserControl.Resources>

<Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" MinWidth="450"/>
        <ColumnDefinition Width="400"/>
    </Grid.ColumnDefinitions>

    <!-- Left Panel: Estimate List -->
    <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="&#x1F4CB;" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Estimates" FontSize="24" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock Text="{Binding Estimates.Count, StringFormat='{}{0} estimates'}" 
                                   FontSize="13" Foreground="{DynamicResource SubtextBrush}"/>
                    </StackPanel>
                    <Button Content="+ New Estimate" 
                            Command="{Binding AddEstimateCommand}"
                            Style="{StaticResource ActionButton}"
                            Margin="30,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Search Bar -->
                <TextBox Grid.Row="1" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         Padding="12,10" FontSize="14" Margin="0,0,0,10"/>

                <!-- Status Filters -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Filter:" Foreground="{DynamicResource SubtextBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding StatusFilter}"
                              Background="{DynamicResource SurfaceBrush}"
                              Foreground="{DynamicResource TextBrush}"
                              Width="120" Padding="8,6"/>
                    <Button Content="Clear" Command="{Binding ClearFilterCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Padding="10,5" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Estimate List -->
                <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" CornerRadius="8">
                    <ListView ItemsSource="{Binding Estimates}"
                              SelectedItem="{Binding SelectedEstimate}"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="15,12"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ListItemSelectedBrush}"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                            <Condition Property="IsSelected" Value="False"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Background" Value="{DynamicResource ListItemHoverBrush}"/>
                                    </MultiTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Title}" 
                                                   FontSize="15" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding Customer.Name}" 
                                                   FontSize="12" Foreground="{DynamicResource SubtextBrush}"
                                                   Margin="0,3,0,0"/>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM d, yyyy}'}" 
                                                   FontSize="11" Foreground="{DynamicResource SubtextBrush}"/>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <Border Grid.Column="1" CornerRadius="4" Padding="8,4"
                                            VerticalAlignment="Center" Margin="10,0"
                                            Background="{DynamicResource BadgeDefaultBrush}">
                                        <TextBlock Text="{Binding StatusDisplay}" FontSize="11"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                    </Border>

                                    <!-- Total -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Total, StringFormat='${0:N2}'}" 
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>

                <!-- Loading Overlay -->
                <Border Grid.Row="3" Background="#80000000" CornerRadius="8"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="Loading..." FontSize="16" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Right Panel: Estimate Details / Edit Form -->
        <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}">
            <Grid>
                <!-- No Selection (only show when not editing and no estimate selected) -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasSelectedEstimate}" Value="False"/>
                                        <Condition Binding="{Binding IsEditing}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="&#x1F4CB;" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock Text="Select an estimate" FontSize="16" 
                               Foreground="{DynamicResource SubtextBrush}"
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Details / Edit (show when estimate selected OR editing) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSelectedEstimate}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <StackPanel Margin="20">
                        <!-- View Mode -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}, ConverterParameter=inverse}">
                            <!-- Header -->
                            <TextBlock Text="{Binding SelectedEstimate.Title}" 
                                       FontSize="22" FontWeight="Bold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SelectedEstimate.Customer.Name}" 
                                       FontSize="14" Foreground="{DynamicResource SubtextBrush}"/>
                            
                            <!-- Status -->
                            <Border Background="{DynamicResource Surface2Brush}" CornerRadius="8" 
                                    Padding="15" Margin="0,15,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Status" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedEstimate.StatusDisplay}" 
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="Created" FontSize="11" 
                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedEstimate.CreatedAt, StringFormat='{}{0:MMM d, yyyy}'}" 
                                                   FontSize="14" Foreground="{DynamicResource TextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Line Items -->
                            <TextBlock Text="Line Items" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,20,0,10"/>
                            
                            <ItemsControl ItemsSource="{Binding EstimateLines}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource Surface2Brush}" 
                                                CornerRadius="6" Padding="12" Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Description}" 
                                                               Foreground="{DynamicResource TextBrush}"
                                                               FontWeight="Medium"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                        <TextBlock Text="{Binding TypeDisplay}" FontSize="11"
                                                                   Foreground="{DynamicResource PrimaryBrush}"/>
                                                        <TextBlock Text=" - " FontSize="11"
                                                                   Foreground="{DynamicResource SubtextBrush}"/>
                                                        <TextBlock FontSize="11" Foreground="{DynamicResource SubtextBrush}">
                                                            <Run Text="{Binding Quantity, StringFormat='{}{0:N2}'}"/>
                                                            <Run Text=" x "/>
                                                            <Run Text="{Binding UnitPrice, StringFormat='${0:N2}'}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding Total, StringFormat='${0:N2}'}"
                                                           FontSize="14" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextBrush}"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Totals -->
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" 
                                    Padding="15" Margin="0,10,0,0">
                                <StackPanel>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="Subtotal" Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding SelectedEstimate.SubTotal, StringFormat='${0:N2}'}" 
                                                   HorizontalAlignment="Right" Foreground="{DynamicResource TextBrush}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Foreground="{DynamicResource SubtextBrush}">
                                            <Run Text="Tax ("/>
                                            <Run Text="{Binding SelectedEstimate.TaxRate, StringFormat='{}{0:N1}%'}"/>
                                            <Run Text=")"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding SelectedEstimate.TaxAmount, StringFormat='${0:N2}'}" 
                                                   HorizontalAlignment="Right" Foreground="{DynamicResource TextBrush}"/>
                                    </Grid>
                                    <Border Height="1" Background="{DynamicResource Surface2Brush}" Margin="0,5"/>
                                    <Grid>
                                        <TextBlock Text="Total" FontWeight="Bold" FontSize="16"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding SelectedEstimate.Total, StringFormat='${0:N2}'}" 
                                                   HorizontalAlignment="Right" FontWeight="Bold" FontSize="18"
                                                   Foreground="{DynamicResource SecondaryBrush}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Actions -->
                            <StackPanel Margin="0,20,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button Content="Edit" Command="{Binding EditEstimateCommand}"
                                            Style="{StaticResource ActionButton}" Margin="0,0,10,0"
                                            IsEnabled="{Binding CanEditEstimate}"/>
                                    <Button Content="Duplicate" Command="{Binding DuplicateEstimateCommand}"
                                            Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                                    <Button Content="&#x1F5A8; Print" Command="{Binding PrintEstimateCommand}"
                                            Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                                    <Button Content="Delete" Command="{Binding DeleteEstimateCommand}"
                                            Style="{StaticResource DangerButton}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button Content="Send" Command="{Binding SendEstimateCommand}"
                                            Style="{StaticResource ActionButton}" Margin="0,0,10,0"
                                            Background="{DynamicResource PrimaryBrush}"/>
                                    <Button Content="Accept" Command="{Binding AcceptEstimateCommand}"
                                            Style="{StaticResource ActionButton}" Margin="0,0,10,0"
                                            Background="{DynamicResource SecondaryBrush}"/>
                                    <Button Content="Decline" Command="{Binding DeclineEstimateCommand}"
                                            Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                                <Button Content="Convert to Job" Command="{Binding ConvertToJobCommand}"
                                        Style="{StaticResource ActionButton}" 
                                        Background="{DynamicResource WarningBrush}"
                                        IsEnabled="{Binding CanConvertToJob}"
                                        Padding="20,10"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Edit Mode -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Estimate Details" FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>

                            <TextBlock Text="Title *" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditTitle, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource BackgroundBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     Padding="10,8" Margin="0,0,0,12"/>

                            <TextBlock Text="Customer *" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Customers}"
                                      SelectedValue="{Binding SelectedCustomerId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      Background="{DynamicResource BackgroundBrush}"
                                      Foreground="{DynamicResource TextBrush}"
                                      Padding="10,8" Margin="0,0,0,12"/>

                            <TextBlock Text="Description" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource BackgroundBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="60"
                                     Padding="10,8" Margin="0,0,0,12"/>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Notes" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding EditNotes, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="10,8"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Tax %" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding EditTaxRate, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             Padding="10,8"/>
                                </StackPanel>
                            </Grid>

                            <!-- Line Items Editor -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                <TextBlock Text="Line Items" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                                <Button Content="+ Add" Command="{Binding AddLineCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="10,4" Margin="15,0,0,0"/>
                                <Button Content="&#x1F4E6; From Inventory" Command="{Binding AddFromInventoryCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="10,4" Margin="10,0,0,0"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding EstimateLines}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource Surface2Brush}" 
                                                CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="70"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="{DynamicResource BackgroundBrush}"
                                                         Foreground="{DynamicResource TextBrush}"
                                                         Padding="8,6" Margin="0,0,5,0"/>
                                                <TextBox Grid.Column="1" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="{DynamicResource BackgroundBrush}"
                                                         Foreground="{DynamicResource TextBrush}"
                                                         Padding="8,6" Margin="0,0,5,0"/>
                                                <TextBox Grid.Column="2" Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="{DynamicResource BackgroundBrush}"
                                                         Foreground="{DynamicResource TextBrush}"
                                                         Padding="8,6" Margin="0,0,5,0"/>
                                                <Button Grid.Column="3" Content="X"
                                                        Command="{Binding DataContext.RemoveLineCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="{DynamicResource ErrorBrush}"
                                                        Foreground="{DynamicResource ButtonDarkTextBrush}"
                                                        BorderThickness="0" Cursor="Hand"
                                                        Padding="5"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Edit Totals -->
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" 
                                    Padding="15" Margin="0,10,0,0">
                                <StackPanel>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="Subtotal" Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding EditSubTotal, StringFormat='${0:N2}'}" 
                                                   HorizontalAlignment="Right" Foreground="{DynamicResource TextBrush}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="Tax" Foreground="{DynamicResource SubtextBrush}"/>
                                        <TextBlock Text="{Binding EditTaxAmount, StringFormat='${0:N2}'}" 
                                                   HorizontalAlignment="Right" Foreground="{DynamicResource TextBrush}"/>
                                    </Grid>
                                    <Border Height="1" Background="{DynamicResource Surface2Brush}" Margin="0,5"/>
                                    <Grid>
                                        <TextBlock Text="Total" FontWeight="Bold" FontSize="16"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding EditTotal, StringFormat='${0:N2}'}" 
                                                   HorizontalAlignment="Right" FontWeight="Bold" FontSize="18"
                                                   Foreground="{DynamicResource SecondaryBrush}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Save/Cancel -->
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Button Content="Save Estimate" Command="{Binding SaveEstimateCommand}"
                                        Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
                                <Button Content="Cancel" Command="{Binding CancelEditCommand}"
                                        Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
