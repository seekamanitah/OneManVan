<UserControl x:Class="OneManVan.Pages.CalendarSchedulingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Day Cell Style -->
        <Style x:Key="DayCell" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="MinHeight" Value="100"/>
        </Style>

        <!-- Job Item Style -->
        <Style x:Key="JobItem" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Job Calendar" FontSize="24" FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
                <TextBlock Text="Schedule and manage jobs by date" 
                           FontSize="13" Foreground="{DynamicResource SubtextBrush}" Margin="34,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="RefreshButton" Content="Refresh" Click="OnRefreshClick"
                        Background="{DynamicResource Surface2Brush}"
                        Foreground="{DynamicResource TextBrush}"
                        Padding="15,8" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="AddJobButton" Content="+ Schedule Job" Click="OnAddJobClick"
                        Background="{DynamicResource PrimaryBrush}"
                        Foreground="White"
                        Padding="15,8" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Month Navigation -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="8" Padding="15,12" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Previous/Next Month -->
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="PrevMonthButton" Content="?" Click="OnPrevMonthClick"
                            Background="{DynamicResource Surface2Brush}"
                            Foreground="{DynamicResource TextBrush}"
                            Width="36" Height="36" BorderThickness="0" Cursor="Hand" FontSize="12">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock x:Name="CurrentMonthText" Text="December 2024" 
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               VerticalAlignment="Center" Margin="15,0"/>

                    <Button x:Name="NextMonthButton" Content="?" Click="OnNextMonthClick"
                            Background="{DynamicResource Surface2Brush}"
                            Foreground="{DynamicResource TextBrush}"
                            Width="36" Height="36" BorderThickness="0" Cursor="Hand" FontSize="12">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Today" Click="OnTodayClick"
                            Background="{DynamicResource PrimaryBrush}"
                            Foreground="White"
                            Padding="12,6" BorderThickness="0" Cursor="Hand" Margin="15,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Stats -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                    <Border Background="#E3F2FD" CornerRadius="4" Padding="10,4" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="This Month:" Foreground="#1976D2" FontSize="12"/>
                            <TextBlock x:Name="MonthJobCount" Text="0 jobs" Foreground="#1976D2" 
                                       FontWeight="SemiBold" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF3E0" CornerRadius="4" Padding="10,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Unscheduled:" Foreground="#FF9800" FontSize="12"/>
                            <TextBlock x:Name="UnscheduledCount" Text="0" Foreground="#FF9800" 
                                       FontWeight="SemiBold" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- View Toggle -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <RadioButton x:Name="MonthViewRadio" Content="Month" IsChecked="True"
                                 GroupName="CalendarView" Checked="OnViewChanged"
                                 Foreground="{DynamicResource TextBrush}" Margin="0,0,15,0"/>
                    <RadioButton x:Name="WeekViewRadio" Content="Week"
                                 GroupName="CalendarView" Checked="OnViewChanged"
                                 Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Calendar Grid -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="8" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Day Headers -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{DynamicResource Surface2Brush}" Padding="10">
                        <TextBlock Text="Sunday" FontWeight="SemiBold" HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                    <Border Grid.Column="1" Background="{DynamicResource Surface2Brush}" Padding="10">
                        <TextBlock Text="Monday" FontWeight="SemiBold" HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                    <Border Grid.Column="2" Background="{DynamicResource Surface2Brush}" Padding="10">
                        <TextBlock Text="Tuesday" FontWeight="SemiBold" HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                    <Border Grid.Column="3" Background="{DynamicResource Surface2Brush}" Padding="10">
                        <TextBlock Text="Wednesday" FontWeight="SemiBold" HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                    <Border Grid.Column="4" Background="{DynamicResource Surface2Brush}" Padding="10">
                        <TextBlock Text="Thursday" FontWeight="SemiBold" HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                    <Border Grid.Column="5" Background="{DynamicResource Surface2Brush}" Padding="10">
                        <TextBlock Text="Friday" FontWeight="SemiBold" HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                    <Border Grid.Column="6" Background="{DynamicResource Surface2Brush}" Padding="10">
                        <TextBlock Text="Saturday" FontWeight="SemiBold" HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                </Grid>

                <!-- Calendar Days -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="CalendarGrid">
                        <!-- Rows and content will be generated dynamically -->
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Unscheduled Jobs Panel (Right Side) -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="8" Width="250" HorizontalAlignment="Right"
                Margin="0,0,0,0" Padding="12"
                x:Name="UnscheduledPanel" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Unscheduled Jobs" FontWeight="SemiBold" FontSize="14"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="UnscheduledJobsList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" CornerRadius="8"
                x:Name="LoadingOverlay" Visibility="Collapsed">
            <Border Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="12" Padding="40,30"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MaxWidth="300">
                <StackPanel>
                    <!-- Spinner placeholder -->
                    <Border Width="48" Height="48" 
                            HorizontalAlignment="Center"
                            Background="{DynamicResource PrimaryBrush}"
                            CornerRadius="24" Opacity="0.3"
                            Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Loading calendar..." 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Please wait while we fetch your jobs" 
                               FontSize="12" 
                               Foreground="{DynamicResource SubtextBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
