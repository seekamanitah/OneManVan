<UserControl x:Class="OneManVan.Pages.EnhancedSchemaEditorPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         mc:Ignorable="d" 
         d:DesignHeight="700" d:DesignWidth="1200"
         Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20,15" 
                BorderThickness="0,0,0,1" BorderBrush="{DynamicResource Surface2Brush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Schema Editor" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="Enhanced" FontSize="14" Foreground="{DynamicResource PrimaryBrush}" 
                               Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ComboBox x:Name="EntityTypeCombo" Width="150" SelectionChanged="EntityTypeCombo_SelectionChanged"
                              Background="{DynamicResource BackgroundBrush}"
                              Foreground="{DynamicResource TextBrush}" Margin="0,0,10,0"/>
                    <Button Content="+ Add Field" Click="OnAddFieldClick" Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
                    <Button Content="Import" Click="OnImportClick" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Export" Click="OnExportClick" Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Field List -->
            <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}" Padding="20">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Fields" FontSize="16" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,15"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="FieldsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="15,12" Margin="0,0,0,8"
                                            MouseLeftButtonDown="OnFieldClick" Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Drag Handle -->
                                            <TextBlock Grid.Column="0" Text="?" FontSize="16" 
                                                       Foreground="{DynamicResource SubtextBrush}" 
                                                       Margin="0,0,10,0" Cursor="SizeAll"/>

                                            <!-- Field Info -->
                                            <StackPanel Grid.Column="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                                    <Border Background="{DynamicResource ErrorBrush}" CornerRadius="3" 
                                                            Padding="4,2" Margin="8,0,0,0"
                                                            Visibility="{Binding IsRequired, Converter={StaticResource BoolToVisibility}}">
                                                        <TextBlock Text="Required" Foreground="White" FontSize="10"/>
                                                    </Border>
                                                    <Border Background="{DynamicResource Surface2Brush}" CornerRadius="3" 
                                                            Padding="4,2" Margin="8,0,0,0"
                                                            Visibility="{Binding IsSystemField, Converter={StaticResource BoolToVisibility}}">
                                                        <TextBlock Text="System" Foreground="{DynamicResource SubtextBrush}" FontSize="10"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding FieldType}" Foreground="{DynamicResource SubtextBrush}" 
                                                           FontSize="12" Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <!-- Choices Badge -->
                                            <Border Grid.Column="2" Background="{DynamicResource PrimaryBrush}" 
                                                    CornerRadius="10" Padding="8,3" Margin="10,0"
                                                    Visibility="{Binding HasChoices, Converter={StaticResource BoolToVisibility}}">
                                                <TextBlock Text="{Binding ChoiceCount, StringFormat='{}{0} choices'}" 
                                                           Foreground="White" FontSize="11"/>
                                            </Border>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                <Button Content="Edit" Click="OnEditFieldClick" Tag="{Binding}"
                                                        Style="{StaticResource SecondaryButton}" Padding="8,4" Margin="5,0"/>
                                                <Button Content="Delete" Click="OnDeleteFieldClick" Tag="{Binding}"
                                                        Style="{StaticResource DangerButton}" Padding="8,4"
                                                        Visibility="{Binding CanDelete, Converter={StaticResource BoolToVisibility}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Right: Field Editor / Choices Manager -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" 
                    BorderThickness="1,0,0,0" BorderBrush="{DynamicResource Surface2Brush}">
                <Grid>
                    <!-- Field Editor -->
                    <ScrollViewer x:Name="EditorScrollViewer" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                        <StackPanel Margin="20">
                        <!-- Field Editor Section -->
                        <TextBlock Text="Field Properties" FontSize="16" FontWeight="Bold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,15"/>

                        <!-- Display Name -->
                        <TextBlock Text="Display Name" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                        <TextBox x:Name="DisplayNameTextBox" Background="{DynamicResource BackgroundBrush}"
                                 Foreground="{DynamicResource TextBrush}" Padding="10,8" Margin="0,0,0,15"/>

                        <!-- Field Type -->
                        <TextBlock Text="Field Type" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                        <ComboBox x:Name="FieldTypeCombo" Background="{DynamicResource BackgroundBrush}"
                                  Foreground="{DynamicResource TextBrush}" Padding="10,8" Margin="0,0,0,15"
                                  SelectionChanged="FieldTypeCombo_SelectionChanged"/>

                        <!-- Required Checkbox -->
                        <CheckBox x:Name="IsRequiredCheckBox" Content="Required Field" 
                                  Foreground="{DynamicResource TextBrush}" Margin="0,0,0,10"/>

                        <!-- Read Only Checkbox -->
                        <CheckBox x:Name="IsReadOnlyCheckBox" Content="Read Only" 
                                  Foreground="{DynamicResource TextBrush}" Margin="0,0,0,10"/>

                        <!-- Default Value -->
                        <TextBlock Text="Default Value" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,10,0,4"/>
                        <TextBox x:Name="DefaultValueTextBox" Background="{DynamicResource BackgroundBrush}"
                                 Foreground="{DynamicResource TextBrush}" Padding="10,8" Margin="0,0,0,15"/>

                        <!-- Help Text -->
                        <TextBlock Text="Help Text" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                        <TextBox x:Name="HelpTextTextBox" Background="{DynamicResource BackgroundBrush}"
                                 Foreground="{DynamicResource TextBrush}" Padding="10,8" 
                                 TextWrapping="Wrap" Height="60" Margin="0,0,0,15"/>

                        <!-- Validation Section -->
                        <Border x:Name="ValidationSection" Background="{DynamicResource BackgroundBrush}" 
                                CornerRadius="8" Padding="15" Margin="0,10,0,15">
                            <StackPanel>
                                <TextBlock Text="Validation Rules" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,10"/>

                                <!-- Regex Validation -->
                                <TextBlock Text="Validation Pattern (Regex)" FontSize="12"
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                                <TextBox x:Name="ValidationRegexTextBox" Background="{DynamicResource SurfaceBrush}"
                                         Foreground="{DynamicResource TextBrush}" Padding="8,6" Margin="0,0,0,10"/>

                                <!-- Number Range (for Number/Decimal fields) -->
                                <Grid x:Name="NumberValidationSection" Visibility="Collapsed" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Min Value" FontSize="12" 
                                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                                        <TextBox x:Name="MinValueTextBox" Background="{DynamicResource SurfaceBrush}"
                                                 Foreground="{DynamicResource TextBrush}" Padding="8,6"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Max Value" FontSize="12"
                                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                                        <TextBox x:Name="MaxValueTextBox" Background="{DynamicResource SurfaceBrush}"
                                                 Foreground="{DynamicResource TextBrush}" Padding="8,6"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Length Constraints (for Text fields) -->
                                <Grid x:Name="LengthValidationSection" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Min Length" FontSize="12"
                                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                                        <TextBox x:Name="MinLengthTextBox" Background="{DynamicResource SurfaceBrush}"
                                                 Foreground="{DynamicResource TextBrush}" Padding="8,6"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Max Length" FontSize="12"
                                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                                        <TextBox x:Name="MaxLengthTextBox" Background="{DynamicResource SurfaceBrush}"
                                                 Foreground="{DynamicResource TextBrush}" Padding="8,6"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Field Grouping -->
                        <TextBlock Text="Field Group (Optional)" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                        <ComboBox x:Name="GroupNameCombo" Background="{DynamicResource BackgroundBrush}"
                                  Foreground="{DynamicResource TextBrush}" Padding="10,8" 
                                  IsEditable="True" Margin="0,0,0,15"/>

                        <!-- Choices Section (for Dropdown/MultiSelect) -->
                        <Border x:Name="ChoicesSection" Background="{DynamicResource BackgroundBrush}" 
                                CornerRadius="8" Padding="15" Margin="0,10,0,15" Visibility="Collapsed">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <TextBlock Text="Dropdown Choices" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <Button Content="+ Add Choice" Click="OnAddChoiceClick" 
                                            Style="{StaticResource SecondaryButton}" 
                                            HorizontalAlignment="Right" Padding="8,4"/>
                                </Grid>

                                <ItemsControl x:Name="ChoicesList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource SurfaceBrush}" 
                                                    CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="?" Margin="0,0,10,0" 
                                                               Foreground="{DynamicResource SubtextBrush}" Cursor="SizeAll"/>
                                                    
                                                    <StackPanel Grid.Column="1">
                                                        <TextBox Text="{Binding DisplayText, Mode=TwoWay}" 
                                                                 Background="{DynamicResource BackgroundBrush}"
                                                                 Foreground="{DynamicResource TextBrush}" 
                                                                 Padding="8,4" FontSize="13" Margin="0,0,0,4"/>
                                                        <TextBox Text="{Binding Value, Mode=TwoWay}" 
                                                                 Background="{DynamicResource BackgroundBrush}"
                                                                 Foreground="{DynamicResource SubtextBrush}" 
                                                                 Padding="8,4" FontSize="11"/>
                                                    </StackPanel>

                                                    <CheckBox Grid.Column="2" Content="Default" Margin="10,0"
                                                              IsChecked="{Binding IsDefault, Mode=TwoWay}"
                                                              Foreground="{DynamicResource TextBrush}"/>

                                                    <Button Grid.Column="3" Content="Delete" Click="OnDeleteChoiceClick" 
                                                            Tag="{Binding}" Style="{StaticResource DangerButton}" 
                                                            Padding="6,4"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Save Button -->
                        <Button Content="Save Field" Click="OnSaveFieldClick" 
                                Style="{StaticResource ActionButton}" HorizontalAlignment="Stretch" 
                                Padding="15,10" FontSize="14" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyState" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Select a field to edit" FontSize="16" 
                                   Foreground="{DynamicResource SubtextBrush}" 
                                   TextAlignment="Center"/>
                        <TextBlock Text="or click + Add Field to create a new one" FontSize="13" 
                                   Foreground="{DynamicResource SubtextBrush}" 
                                   TextAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
