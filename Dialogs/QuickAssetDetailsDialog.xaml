<Window x:Class="OneManVan.Dialogs.QuickAssetDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Asset from Product"
        Width="600"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Create Asset from Invoice Product" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBlock Text="Pre-filled from product and invoice. Add any additional details." 
                       FontSize="13"
                       Foreground="{DynamicResource SubtextBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Form Content (Scrollable) -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,16">
            <StackPanel>
                
                <!-- Pre-filled Information Section -->
                <TextBlock Text="Pre-filled from Product/Invoice" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}" 
                           Margin="0,0,0,10"/>
                
                <Border Background="{DynamicResource Surface2Brush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Serial Number:" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,12,4"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SerialNumberText" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Brand:" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,12,4"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BrandText" FontSize="12" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Model:" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,12,4"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ModelText" FontSize="12" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Customer:" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,12,4"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="CustomerText" FontSize="12" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Location:" FontSize="12" Foreground="{DynamicResource SubtextBrush}" Margin="0,0,12,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="LocationText" FontSize="12" Foreground="{DynamicResource TextBrush}"/>
                    </Grid>
                </Border>

                <!-- Additional Details Section -->
                <TextBlock Text="Additional Details" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}" 
                           Margin="0,0,0,10"/>

                <!-- Asset Name -->
                <TextBlock Text="Asset Name" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="AssetNameTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>

                <!-- Location Detail -->
                <TextBlock Text="Location Detail (e.g., Rooftop North)" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="LocationDetailTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>

                <!-- Description -->
                <TextBlock Text="Description (Optional)" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="DescriptionTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <!-- Warranty Section -->
                <TextBlock Text="Warranty Information" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}" 
                           Margin="0,5,0,10"/>

                <!-- Warranty Quick Presets -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Height="32">
                    <TextBlock Text="Quick Warranty:" 
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SubtextBrush}"
                               Margin="0,0,8,0"/>
                    <Button Content="1 Year"
                            Background="{DynamicResource Surface2Brush}"
                            Foreground="{DynamicResource TextBrush}"
                            Padding="12,6"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,6,0"
                            Click="OnWarranty1YearClick">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.85"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="5 Years"
                            Background="{DynamicResource Surface2Brush}"
                            Foreground="{DynamicResource TextBrush}"
                            Padding="12,6"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,6,0"
                            Click="OnWarranty5YearsClick">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.85"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="10 Years"
                            Background="{DynamicResource Surface2Brush}"
                            Foreground="{DynamicResource TextBrush}"
                            Padding="12,6"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,6,0"
                            Click="OnWarranty10YearsClick">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.85"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="12 Years"
                            Background="{DynamicResource Surface2Brush}"
                            Foreground="{DynamicResource TextBrush}"
                            Padding="12,6"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnWarranty12YearsClick">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.85"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Warranty Details -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Warranty Start" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                        <DatePicker x:Name="WarrantyStartDatePicker"
                                    Background="{DynamicResource SurfaceBrush}"
                                    Foreground="{DynamicResource TextBrush}"
                                    BorderBrush="{DynamicResource Surface2Brush}"
                                    BorderThickness="1"
                                    Padding="10,8"
                                    FontSize="13"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Warranty Expiration" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                        <DatePicker x:Name="WarrantyExpirationDatePicker"
                                    Background="{DynamicResource SurfaceBrush}"
                                    Foreground="{DynamicResource TextBrush}"
                                    BorderBrush="{DynamicResource Surface2Brush}"
                                    BorderThickness="1"
                                    Padding="10,8"
                                    FontSize="13"/>
                    </StackPanel>
                </Grid>

                <!-- Warranty by SEHVAC -->
                <CheckBox x:Name="IsWarrantiedBySEHVACCheckBox"
                          Content="Warrantied by SEHVAC"
                          Foreground="{DynamicResource TextBrush}"
                          FontSize="13"
                          Margin="0,10,0,15"/>

                <!-- Registration Section -->
                <TextBlock Text="Equipment Registration" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}" 
                           Margin="0,5,0,10"/>

                <CheckBox x:Name="IsRegisteredOnlineCheckBox"
                          Content="Already Registered Online with Manufacturer"
                          Foreground="{DynamicResource TextBrush}"
                          FontSize="13"
                          Margin="0,0,0,10"
                          Checked="OnRegistrationChanged"
                          Unchecked="OnRegistrationChanged"/>

                <StackPanel x:Name="RegistrationDetailsPanel" Visibility="Collapsed">
                    <TextBlock Text="Registration Confirmation # (Optional)" FontSize="12" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                    <TextBox x:Name="RegistrationConfirmationTextBox"
                             Background="{DynamicResource SurfaceBrush}"
                             Foreground="{DynamicResource TextBrush}"
                             BorderBrush="{DynamicResource Surface2Brush}"
                             BorderThickness="1"
                             Padding="10,8"
                             FontSize="13"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Registration Date" FontSize="12" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                    <DatePicker x:Name="RegistrationDatePicker"
                                Background="{DynamicResource SurfaceBrush}"
                                Foreground="{DynamicResource TextBrush}"
                                BorderBrush="{DynamicResource Surface2Brush}"
                                BorderThickness="1"
                                Padding="10,8"
                                FontSize="13"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Skip"
                    Background="{DynamicResource Surface2Brush}"
                    Foreground="{DynamicResource TextBrush}"
                    Padding="20,10"
                    FontSize="13"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,8,0"
                    Click="OnSkipClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="2"
                    Content="Create Asset &amp; Continue"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"
                    Padding="24,10"
                    FontSize="13"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsDefault="True"
                    Click="OnCreateClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
