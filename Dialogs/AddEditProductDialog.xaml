<Window x:Class="OneManVan.Dialogs.AddEditProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Product" Height="750" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="700">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#6366F1"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>
        
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource SubtextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="20,15,20,10">
            <StackPanel>
                <!-- Basic Information Section -->
                <TextBlock Text="Basic Information" Style="{StaticResource SectionHeader}" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Manufacturer *" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="ManufacturerBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Model Number *" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="ModelNumberBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,12">
                        <TextBlock Text="Product Name" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="ProductNameBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Category *" Style="{StaticResource FieldLabel}"/>
                        <ComboBox x:Name="CategoryCombo" Style="{StaticResource FormComboBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Equipment Type" Style="{StaticResource FieldLabel}"/>
                        <ComboBox x:Name="EquipmentTypeCombo" Style="{StaticResource FormComboBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Capacity & Efficiency Section -->
                <TextBlock Text="Capacity &amp; Efficiency" Style="{StaticResource SectionHeader}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Tonnage" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="TonnageBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Cooling BTU" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="CoolingBtuBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="4" Margin="0,0,0,12">
                        <TextBlock Text="Heating BTU" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="HeatingBtuBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="SEER" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="SeerBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="SEER2" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="Seer2Box" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="4" Margin="0,0,0,12">
                        <TextBlock Text="EER" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="EerBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="AFUE %" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="AfueBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="HSPF" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="HspfBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="4" Margin="0,0,0,12">
                        <TextBlock Text="HSPF2" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="Hspf2Box" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Refrigerant & Electrical Section -->
                <TextBlock Text="Refrigerant &amp; Electrical" Style="{StaticResource SectionHeader}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Refrigerant Type" Style="{StaticResource FieldLabel}"/>
                        <ComboBox x:Name="RefrigerantCombo" Style="{StaticResource FormComboBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Charge (oz)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="RefrigerantChargeBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="4" Margin="0,0,0,12">
                        <TextBlock Text="Fuel Type" Style="{StaticResource FieldLabel}"/>
                        <ComboBox x:Name="FuelTypeCombo" Style="{StaticResource FormComboBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Voltage" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="VoltageBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Amperage" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="AmperageBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="4" Margin="0,0,0,12">
                        <TextBlock Text="Min Circuit Amp" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="MinCircuitBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Pricing Section -->
                <TextBlock Text="Pricing" Style="{StaticResource SectionHeader}" Foreground="{DynamicResource SuccessBrush}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="MSRP $" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="MsrpBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Your Cost $" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="CostBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="4" Margin="0,0,0,12">
                        <TextBlock Text="Sell Price $" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="SellPriceBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="6" Margin="0,0,0,12">
                        <TextBlock Text="Labor Hours" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="LaborHoursBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Warranty Section -->
                <TextBlock Text="Warranty" Style="{StaticResource SectionHeader}" Foreground="{DynamicResource WarningBrush}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Parts (years)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="PartsWarrantyBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Compressor (years)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="CompressorWarrantyBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="4" Margin="0,0,0,12">
                        <TextBlock Text="Heat Exchanger (years)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="HeatExchangerWarrantyBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="6" Margin="0,0,0,12">
                        <TextBlock Text="Labor (years)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="LaborWarrantyBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,12">
                        <CheckBox x:Name="RegistrationRequiredCheck" VerticalAlignment="Center"/>
                        <TextBlock Text="Registration required for full warranty" 
                                   FontSize="12" Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Physical Dimensions Section -->
                <TextBlock Text="Physical Dimensions" Style="{StaticResource SectionHeader}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Height (in)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="HeightBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Width (in)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="WidthBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="4" Margin="0,0,0,12">
                        <TextBlock Text="Depth (in)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="DepthBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="6" Margin="0,0,0,12">
                        <TextBlock Text="Weight (lbs)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="WeightBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Links Section -->
                <TextBlock Text="Links &amp; Notes" Style="{StaticResource SectionHeader}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Manufacturer URL" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="ManufacturerUrlBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Video URL" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="VideoUrlBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                        <TextBlock Text="Filter Size" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="FilterSizeBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,12">
                        <TextBlock Text="Tags (comma separated)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="TagsBox" Style="{StaticResource FormTextBox}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,12">
                        <TextBlock Text="Notes" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="NotesBox" Style="{StaticResource FormTextBox}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>
                    </StackPanel>
                </Grid>

                <!-- Status Section -->
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="15" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="IsActiveCheck" IsChecked="True" VerticalAlignment="Center"/>
                        <TextBlock Text="Active" FontSize="12" Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center" Margin="8,0,30,0"/>
                        
                        <CheckBox x:Name="IsDiscontinuedCheck" VerticalAlignment="Center"/>
                        <TextBlock Text="Discontinued" FontSize="12" Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="ValidationMessage" Grid.Column="0" 
                           FontSize="12" Foreground="{DynamicResource ErrorBrush}"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cancel" Click="OnCancelClick"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button x:Name="SaveButton" Content="Save Product" Click="OnSaveClick"
                            Style="{StaticResource ActionButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
