<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="OneManVan.Dialogs.QuickAddCustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Add Customer"
        Width="500"
        Height="550"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Quick Add Customer"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryBrush}"
                   Margin="0,0,0,20"/>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- First Name and Last Name -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="First Name *" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" 
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="FirstNameTextBox"
                                 Background="{DynamicResource SurfaceBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource Surface2Brush}"
                                 BorderThickness="1"
                                 Padding="10,8"
                                 FontSize="13"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Last Name *" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" 
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="LastNameTextBox"
                                 Background="{DynamicResource SurfaceBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource Surface2Brush}"
                                 BorderThickness="1"
                                 Padding="10,8"
                                 FontSize="13"/>
                    </StackPanel>
                </Grid>
                
                <!-- Phone (Required) -->
                <TextBlock Text="Phone *" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" 
                           Margin="0,0,0,4"/>
                <TextBox x:Name="PhoneTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         TextChanged="OnPhoneTextChanged"
                         LostFocus="PhoneTextBox_LostFocus"
                         MaxLength="12"
                         Margin="0,0,0,15"/>
                
                <!-- Email -->
                <TextBlock Text="Email" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" 
                           Margin="0,0,0,4"/>
                <TextBox x:Name="EmailTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>
                
                <!-- Home Address -->
                <TextBlock Text="Home Address" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" 
                           Margin="0,0,0,4"/>
                <TextBox x:Name="HomeAddressTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Height="70"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>
                
                <!-- Company Name (Optional) -->
                <TextBlock Text="Company Name (Optional)" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" 
                           Margin="0,0,0,4"/>
                <TextBox x:Name="CompanyNameTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>
                
                <!-- Customer Type -->
                <TextBlock Text="Type" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" 
                           Margin="0,0,0,4"/>
                <ComboBox x:Name="CustomerTypeCombo"
                          Background="{DynamicResource SurfaceBrush}"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource Surface2Brush}"
                          BorderThickness="1"
                          Padding="10,8"
                          FontSize="13"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Residential"/>
                    <ComboBoxItem Content="Commercial"/>
                    <ComboBoxItem Content="Property Manager"/>
                    <ComboBoxItem Content="Government"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="OnCancelClick"
                    Background="{DynamicResource Surface2Brush}"
                    Foreground="{DynamicResource TextBrush}"
                    BorderThickness="0"
                    Padding="20,10"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    Width="100">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="CreateButton"
                    Content="Create Customer" 
                    Click="OnCreateClick"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="20,10"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Width="140">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
