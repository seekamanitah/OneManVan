<Window x:Class="OneManVan.Dialogs.JobDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Details" Height="700" Width="750"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="650">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,20,0,12"/>
        </Style>
        
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource SubtextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style x:Key="FieldValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="JobTitleText" Text="Job Details" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock x:Name="JobNumberText" Text="J-2024-0001" FontSize="13" 
                               Foreground="{DynamicResource SubtextBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border x:Name="StatusBadge" Style="{StaticResource StatusBadge}">
                        <TextBlock x:Name="StatusText" Text="Scheduled" FontSize="12" 
                                   FontWeight="SemiBold" Foreground="White"/>
                    </Border>
                    
                    <Border x:Name="PriorityBadge" Style="{StaticResource StatusBadge}" Margin="10,0,0,16">
                        <TextBlock x:Name="PriorityText" Text="Normal" FontSize="12" 
                                   FontWeight="SemiBold" Foreground="White"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,10,20,10">
            <StackPanel>
                
                <!-- Customer Information -->
                <TextBlock Text="Customer Information" Style="{StaticResource SectionHeader}"/>
                
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="CUSTOMER" Style="{StaticResource FieldLabel}"/>
                        <TextBlock x:Name="CustomerNameText" Text="John Smith" Style="{StaticResource FieldValue}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="PHONE" Style="{StaticResource FieldLabel}"/>
                        <TextBlock x:Name="CustomerPhoneText" Text="(555) 123-4567" Style="{StaticResource FieldValue}"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="SITE / LOCATION" Style="{StaticResource FieldLabel}"/>
                <TextBlock x:Name="SiteText" Text="123 Main St, City, ST 12345" Style="{StaticResource FieldValue}"/>

                <TextBlock Text="EQUIPMENT / ASSET" Style="{StaticResource FieldLabel}"/>
                <TextBlock x:Name="AssetText" Text="Carrier 2.5 Ton AC Unit" Style="{StaticResource FieldValue}"/>

                <!-- Job Details -->
                <TextBlock Text="Job Details" Style="{StaticResource SectionHeader}"/>

                <TextBlock Text="DESCRIPTION" Style="{StaticResource FieldLabel}"/>
                <Border Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="6" Padding="12,10" Margin="0,0,0,16">
                    <TextBlock x:Name="DescriptionText" Text="No description provided" 
                               FontSize="13" Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"/>
                </Border>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="JOB TYPE" Style="{StaticResource FieldLabel}"/>
                        <TextBlock x:Name="JobTypeText" Text="Service Call" Style="{StaticResource FieldValue}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="CREATED" Style="{StaticResource FieldLabel}"/>
                        <TextBlock x:Name="CreatedAtText" Text="Jan 15, 2024" Style="{StaticResource FieldValue}"/>
                    </StackPanel>
                </Grid>

                <!-- Scheduling -->
                <TextBlock Text="Scheduling" Style="{StaticResource SectionHeader}"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="SCHEDULED DATE" Style="{StaticResource FieldLabel}"/>
                        <TextBlock x:Name="ScheduledDateText" Text="Not scheduled" Style="{StaticResource FieldValue}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="TIME WINDOW" Style="{StaticResource FieldLabel}"/>
                        <TextBlock x:Name="TimeWindowText" Text="9:00 AM - 12:00 PM" Style="{StaticResource FieldValue}"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="ESTIMATED DURATION" Style="{StaticResource FieldLabel}"/>
                <TextBlock x:Name="DurationText" Text="1 hour" Style="{StaticResource FieldValue}"/>

                <!-- Timeline -->
                <TextBlock Text="Timeline" Style="{StaticResource SectionHeader}"/>

                <StackPanel x:Name="TimelinePanel">
                    <!-- Timeline items will be added dynamically -->
                    <TextBlock Text="No timeline events yet" 
                               Foreground="{DynamicResource SubtextBrush}"
                               FontSize="13" Margin="0,0,0,16"/>
                </StackPanel>

                <!-- Additional Info -->
                <TextBlock x:Name="ProblemDescriptionLabel" Text="Problem Description" 
                           Style="{StaticResource SectionHeader}" Visibility="Collapsed"/>
                <Border x:Name="ProblemDescriptionBorder" Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="6" Padding="12,10" Margin="0,0,0,16" Visibility="Collapsed">
                    <TextBlock x:Name="ProblemDescriptionText" 
                               FontSize="13" Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"/>
                </Border>

                <TextBlock x:Name="WorkPerformedLabel" Text="Work Performed" 
                           Style="{StaticResource SectionHeader}" Visibility="Collapsed"/>
                <Border x:Name="WorkPerformedBorder" Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="6" Padding="12,10" Margin="0,0,0,16" Visibility="Collapsed">
                    <TextBlock x:Name="WorkPerformedText" 
                               FontSize="13" Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"/>
                </Border>

                <TextBlock x:Name="NotesLabel" Text="Internal Notes" 
                           Style="{StaticResource SectionHeader}" Visibility="Collapsed"/>
                <Border x:Name="NotesBorder" Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="6" Padding="12,10" Margin="0,0,0,16" Visibility="Collapsed">
                    <TextBlock x:Name="NotesText" 
                               FontSize="13" Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"/>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" 
                BorderThickness="0,1,0,0" BorderBrush="{DynamicResource Surface2Brush}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="Edit Job" Width="100" Height="36"
                        Background="{DynamicResource PrimaryBrush}"
                        Foreground="White" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand" Click="OnEditClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="3" Content="Close" Width="100" Height="36"
                        Background="{DynamicResource Surface2Brush}"
                        Foreground="{DynamicResource TextBrush}"
                        BorderThickness="0" Cursor="Hand" Click="OnCloseClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
