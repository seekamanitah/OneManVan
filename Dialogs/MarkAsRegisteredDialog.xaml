<Window x:Class="OneManVan.Dialogs.MarkAsRegisteredDialog"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Mark as Registered"
Width="500"
Height="400"
MinHeight="320"
MaxHeight="550"
WindowStartupLocation="CenterOwner"
Background="{DynamicResource BackgroundBrush}"
ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Mark Equipment as Registered" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBlock x:Name="AssetInfoText"
                       FontSize="13"
                       Foreground="{DynamicResource SubtextBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Registration Date -->
            <TextBlock Text="Registration Date" FontSize="12" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
            <DatePicker x:Name="RegistrationDatePicker"
                        Background="{DynamicResource SurfaceBrush}"
                        Foreground="{DynamicResource TextBrush}"
                        BorderBrush="{DynamicResource Surface2Brush}"
                        BorderThickness="1"
                        Padding="10,8"
                        FontSize="13"
                        Margin="0,0,0,15"/>

            <!-- Confirmation Number -->
            <TextBlock Text="Confirmation Number (Optional)" FontSize="12" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
            <TextBox x:Name="ConfirmationTextBox"
                     Background="{DynamicResource SurfaceBrush}"
                     Foreground="{DynamicResource TextBrush}"
                     BorderBrush="{DynamicResource Surface2Brush}"
                     BorderThickness="1"
                     Padding="10,8"
                     FontSize="13"
                     Margin="0,0,0,10"/>

            <!-- Help Text -->
            <TextBlock Text="Enter the confirmation number or reference from the manufacturer's registration confirmation email." 
                       FontSize="11"
                       Foreground="{DynamicResource SubtextBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Action Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Cancel"
                    Background="{DynamicResource Surface2Brush}"
                    Foreground="{DynamicResource TextBrush}"
                    Padding="20,10"
                    FontSize="13"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,8,0"
                    Click="OnCancelClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="2"
                    Content="Mark as Registered"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"
                    Padding="24,10"
                    FontSize="13"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsDefault="True"
                    Click="OnSaveClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
