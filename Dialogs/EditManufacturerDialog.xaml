<Window x:Class="OneManVan.Dialogs.EditManufacturerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Manufacturer"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Edit Manufacturer Information" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextBrush}"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,16">
            <StackPanel>
                <!-- Brand Name -->
                <TextBlock Text="Brand Name *" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="BrandNameTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>

                <!-- Registration URL -->
                <TextBlock Text="Warranty Registration URL" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="RegistrationUrlTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>

                <!-- Manufacturer Website -->
                <TextBlock Text="Manufacturer Website (Optional)" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="ManufacturerWebsiteTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>

                <!-- Support Phone -->
                <TextBlock Text="Support Phone (Optional)" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="SupportPhoneTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>

                <!-- Support Email -->
                <TextBlock Text="Support Email (Optional)" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="SupportEmailTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,15"/>

                <!-- Registration Notes -->
                <TextBlock Text="Registration Notes (e.g., 'Register within 60 days')" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="RegistrationNotesTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <!-- Settings -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Display Order" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                        <TextBox x:Name="DisplayOrderTextBox"
                                 Background="{DynamicResource SurfaceBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource Surface2Brush}"
                                 BorderThickness="1"
                                 Padding="10,8"
                                 FontSize="13"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Active" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8"/>
                        <CheckBox x:Name="IsActiveCheckBox"
                                  Content="Show in brand dropdowns"
                                  Foreground="{DynamicResource TextBrush}"
                                  FontSize="13"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Cancel"
                    Background="{DynamicResource Surface2Brush}"
                    Foreground="{DynamicResource TextBrush}"
                    Padding="20,10"
                    FontSize="13"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,8,0"
                    Click="OnCancelClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Grid.Column="2"
                    Content="Save"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"
                    Padding="24,10"
                    FontSize="13"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsDefault="True"
                    Click="OnSaveClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
