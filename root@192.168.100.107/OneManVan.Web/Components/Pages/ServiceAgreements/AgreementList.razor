@page "/agreements"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@* [Authorize] temporarily disabled for development *@
@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Service Agreements - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0">Service Agreements</h1>
            <p class="text-muted mb-0">Maintenance contracts and recurring services</p>
        </div>
        <div class="d-flex gap-2">
            <ExportButton EntityType="service-agreements" />
            <button class="btn btn-primary" @onclick="CreateAgreement">
                <i class="bi bi-plus-circle me-2"></i>New Agreement
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <small class="text-muted d-block">Active Agreements</small>
                    <h3 class="mb-0 text-success">@activeCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <small class="text-muted d-block">Expiring Soon</small>
                    <h3 class="mb-0 text-warning">@expiringSoonCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <small class="text-muted d-block">Annual Value</small>
                    <h3 class="mb-0">@annualValue.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <small class="text-muted d-block">Draft</small>
                    <h3 class="mb-0">@draftCount</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control border-start-0" 
                               placeholder="Search agreements..." 
                               @bind="searchText" @bind:event="oninput" @onkeyup="OnSearchChanged" />
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="filterStatus" @bind:after="ApplyFilters">
                        <option value="">All Statuses</option>
                        @foreach (var s in Enum.GetValues<AgreementStatus>())
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Agreement List -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else if (filteredAgreements.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Agreement #</th>
                                <th>Customer</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>End Date</th>
                                <th class="text-end">Value</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agreement in filteredAgreements)
                            {
                                <tr style="cursor: pointer;" @onclick="@(() => ViewAgreement(agreement.Id))">
                                    <td>
                                        <span class="fw-semibold">@(agreement.AgreementNumber ?? $"SA-{agreement.Id:D4}")</span>
                                    </td>
                                    <td>@(agreement.Customer?.Name ?? "-")</td>
                                    <td>@agreement.Name</td>
                                    <td>@agreement.Type</td>
                                    <td class="@(IsExpiringSoon(agreement) ? "text-warning" : "")">
                                        @agreement.EndDate.ToString("MMM dd, yyyy")
                                    </td>
                                    <td class="text-end">@agreement.AnnualPrice.ToString("C")</td>
                                    <td>
                                        <span class="badge @GetStatusBadge(agreement.Status)">@agreement.Status</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" @onclick:stopPropagation="true">
                                            <button class="btn btn-outline-primary" @onclick="@(() => ViewAgreement(agreement.Id))">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-secondary" @onclick="@(() => EditAgreement(agreement.Id))">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-file-earmark-text fs-1 text-muted mb-3 d-block"></i>
                    <h5>No agreements found</h5>
                    <button class="btn btn-primary" @onclick="CreateAgreement">
                        <i class="bi bi-plus-circle me-2"></i>Add Agreement
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool isLoading = true;
    private List<ServiceAgreement> allAgreements = new();
    private List<ServiceAgreement> filteredAgreements = new();
    
    private string searchText = "";
    private string filterStatus = "";
    
    private int activeCount = 0;
    private int expiringSoonCount = 0;
    private decimal annualValue = 0;
    private int draftCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadAgreementsAsync();
    }

    private async Task LoadAgreementsAsync()
    {
        try
        {
            isLoading = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            
            allAgreements = await db.ServiceAgreements
                .Include(a => a.Customer)
                .OrderByDescending(a => a.StartDate)
                .AsNoTracking()
                .ToListAsync();

            // Calculate stats
            activeCount = allAgreements.Count(a => a.Status == AgreementStatus.Active);
            expiringSoonCount = allAgreements.Count(a => IsExpiringSoon(a));
            annualValue = allAgreements.Where(a => a.Status == AgreementStatus.Active).Sum(a => a.AnnualPrice);
            draftCount = allAgreements.Count(a => a.Status == AgreementStatus.Draft);

            ApplyFilters();
        }
        finally
        {
            isLoading = false;
        }
    }

    private bool IsExpiringSoon(ServiceAgreement agreement)
    {
        var daysToExpire = (agreement.EndDate - DateTime.Today).TotalDays;
        return daysToExpire > 0 && daysToExpire <= 30;
    }

    private void ApplyFilters()
    {
        var query = allAgreements.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchText))
        {
            var search = searchText.ToLower();
            query = query.Where(a =>
                (a.Name?.ToLower().Contains(search) ?? false) ||
                (a.AgreementNumber?.ToLower().Contains(search) ?? false) ||
                (a.Customer?.Name?.ToLower().Contains(search) ?? false));
        }

        if (!string.IsNullOrWhiteSpace(filterStatus) && Enum.TryParse<AgreementStatus>(filterStatus, out var status))
        {
            query = query.Where(a => a.Status == status);
        }

        filteredAgreements = query.ToList();
    }

    private void OnSearchChanged(KeyboardEventArgs e) => ApplyFilters();

    private void CreateAgreement() => Navigation.NavigateTo("/agreements/new");
    private void ViewAgreement(int id) => Navigation.NavigateTo($"/agreements/{id}");
    private void EditAgreement(int id) => Navigation.NavigateTo($"/agreements/{id}/edit");

    private string GetStatusBadge(AgreementStatus status) => status switch
    {
        AgreementStatus.Draft => "bg-secondary",
        AgreementStatus.Active => "bg-success",
        AgreementStatus.Expired => "bg-warning text-dark",
        AgreementStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };
}
