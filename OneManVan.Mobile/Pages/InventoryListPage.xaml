<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneManVan.Mobile.Pages.InventoryListPage"
             Title="Inventory"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        
        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   x:Name="SearchBar"
                   Placeholder="Search inventory..."
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#3D3D3D}"
                   TextChanged="OnSearchTextChanged"/>

        <!-- Category Filter Chips -->
        <ScrollView Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalScrollBarVisibility="Never"
                    Padding="16,8">
            <HorizontalStackLayout Spacing="8">
                <Button x:Name="AllFilter"
                        Text="All"
                        BackgroundColor="#1976D2"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
                <Button x:Name="LowStockFilter"
                        Text="Low Stock"
                        BackgroundColor="#FFF3E0"
                        TextColor="#FF9800"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
                <Button x:Name="FiltersFilter"
                        Text="Filters"
                        BackgroundColor="#E3F2FD"
                        TextColor="#1976D2"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
                <Button x:Name="PartsFilter"
                        Text="Parts"
                        BackgroundColor="#E3F2FD"
                        TextColor="#1976D2"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
                <Button x:Name="RefrigerantsFilter"
                        Text="Refrigerants"
                        BackgroundColor="#E3F2FD"
                        TextColor="#1976D2"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Stats Row -->
        <Grid Grid.Row="2" Padding="16,8" ColumnDefinitions="*,*,*" ColumnSpacing="8">
            <Frame BackgroundColor="White" CornerRadius="8" Padding="12" BorderColor="Transparent">
                <VerticalStackLayout>
                    <Label x:Name="TotalItemsLabel"
                           Text="0"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1976D2"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Items"
                           FontSize="11"
                           TextColor="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>
            <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="8" Padding="12" BorderColor="Transparent">
                <VerticalStackLayout>
                    <Label x:Name="LowStockLabel"
                           Text="0"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FF9800"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Low Stock"
                           FontSize="11"
                           TextColor="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>
            <Frame Grid.Column="2" BackgroundColor="White" CornerRadius="8" Padding="12" BorderColor="Transparent">
                <VerticalStackLayout>
                    <Label x:Name="TotalValueLabel"
                           Text="$0"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#4CAF50"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Value"
                           FontSize="11"
                           TextColor="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- Inventory List -->
        <RefreshView Grid.Row="3"
                     x:Name="RefreshViewControl"
                     Refreshing="OnRefreshing">
            <CollectionView x:Name="InventoryCollection"
                            SelectionMode="Single"
                            SelectionChanged="OnItemSelected"
                            EmptyView="No inventory items found.">
                
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="8"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Adjust"
                                               BackgroundColor="#2196F3"
                                               Invoked="OnAdjustSwipe"
                                               BindingContext="{Binding}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Restock"
                                               BackgroundColor="#4CAF50"
                                               Invoked="OnRestockSwipe"
                                               BindingContext="{Binding}"/>
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <!-- Inventory Card - Using Standard Card Style -->
                            <Border Style="{StaticResource CardStyle}"
                                    Margin="16,4">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnItemTapped" CommandParameter="{Binding}"/>
                                </Border.GestureRecognizers>
                                
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    
                                    <!-- Name and Category -->
                                    <Label Text="{Binding Name}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#333"
                                           LineBreakMode="TailTruncation"/>
                                    
                                    <!-- Stock Badge -->
                                    <Frame Grid.Column="1"
                                           CornerRadius="12"
                                           Padding="8,4"
                                           BorderColor="Transparent">
                                        <Frame.Style>
                                            <Style TargetType="Frame">
                                                <Setter Property="BackgroundColor" Value="#E8F5E9"/>
                                                <Style.Triggers>
                                                    <DataTrigger TargetType="Frame" Binding="{Binding IsLowStock}" Value="True">
                                                        <Setter Property="BackgroundColor" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Frame" Binding="{Binding IsOutOfStock}" Value="True">
                                                        <Setter Property="BackgroundColor" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Frame.Style>
                                        <Label FontSize="12" FontAttributes="Bold">
                                            <Label.Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="TextColor" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding IsLowStock}" Value="True">
                                                            <Setter Property="TextColor" Value="#FF9800"/>
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Label" Binding="{Binding IsOutOfStock}" Value="True">
                                                            <Setter Property="TextColor" Value="#F44336"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding QuantityOnHand, StringFormat='{0:N0}'}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{Binding Unit}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Frame>

                                    <!-- Category and SKU -->
                                    <HorizontalStackLayout Grid.Row="1" 
                                                           Grid.ColumnSpan="2"
                                                           Spacing="8"
                                                           Margin="0,4,0,0">
                                        <Label Text="{Binding Category}"
                                               FontSize="12"
                                               TextColor="#1976D2"/>
                                        <Label Text="ï¿½" FontSize="12" TextColor="#BDBDBD"
                                               IsVisible="{Binding Sku, Converter={StaticResource StringToBoolConverter}}"/>
                                        <Label Text="{Binding Sku}"
                                               FontSize="12"
                                               TextColor="#9E9E9E"
                                               IsVisible="{Binding Sku, Converter={StaticResource StringToBoolConverter}}"/>
                                    </HorizontalStackLayout>

                                    <!-- Price and Compatibility -->
                                    <HorizontalStackLayout Grid.Row="2" 
                                                           Grid.ColumnSpan="2"
                                                           Spacing="16"
                                                           Margin="0,8,0,0">
                                        <Label FontSize="16" FontAttributes="Bold" TextColor="#4CAF50">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="$"/>
                                                    <Span Text="{Binding Price, StringFormat='{0:N2}'}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding Cost, StringFormat='Cost: ${0:N2}'}"
                                               FontSize="12"
                                               TextColor="#9E9E9E"
                                               VerticalOptions="Center"/>
                                        
                                        <!-- HVAC Compatibility -->
                                        <Frame BackgroundColor="#E3F2FD"
                                               CornerRadius="8"
                                               Padding="6,2"
                                               BorderColor="Transparent"
                                               IsVisible="{Binding FuelTypeCompatibility, Converter={StaticResource NullToBoolConverter}}">
                                            <Label Text="{Binding FuelTypeCompatibility}"
                                                   FontSize="10"
                                                   TextColor="#1976D2"/>
                                        </Frame>
                                    </HorizontalStackLayout>

                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Floating Action Button -->
        <Button Grid.Row="3"
                Text="+"
                FontSize="28"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#1976D2"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                Shadow="{Shadow Brush='#40000000', Offset='2,4', Radius='8'}"
                Clicked="OnAddItemClicked"/>

    </Grid>

</ContentPage>
