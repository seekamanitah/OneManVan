<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:OneManVan.Mobile.Controls"
             x:Class="OneManVan.Mobile.Pages.QuickNotesPage"
             Title="Quick Notes"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Search/Filter Bar -->
        <Frame Grid.Row="0" 
               Margin="16,16,16,8" 
               Padding="12"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="{AppThemeBinding Light={StaticResource LightCard}, Dark={StaticResource DarkCard}}"
               BorderColor="Transparent">
            <Grid ColumnDefinitions="*,Auto">
                <Entry x:Name="SearchEntry"
                       Placeholder="Search notes..."
                       ClearButtonVisibility="WhileEditing"
                       TextChanged="OnSearchTextChanged"/>
                <Button Grid.Column="1"
                        Text="[Pin]"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        Clicked="OnTogglePinnedFilter"/>
            </Grid>
        </Frame>

        <!-- Notes List -->
        <RefreshView Grid.Row="1"
                     x:Name="NotesRefreshView"
                     IsRefreshing="{Binding IsRefreshing}"
                     Refreshing="OnRefreshing">
            <CollectionView x:Name="NotesCollection"
                            ItemsSource="{Binding Notes}"
                            SelectionMode="Single"
                            SelectionChanged="OnNoteSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="{StaticResource Danger}"
                                               Clicked="OnDeleteNote"
                                               CommandParameter="{Binding .}"/>
                                    <SwipeItem Text="Archive"
                                               BackgroundColor="{StaticResource Warning}"
                                               Clicked="OnArchiveNote"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem Text="Pin"
                                               BackgroundColor="{StaticResource Primary}"
                                               Clicked="OnTogglePin"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            
                            <Frame Margin="16,4"
                                   Padding="16"
                                   CornerRadius="12"
                                   HasShadow="True"
                                   BackgroundColor="{Binding Color, TargetNullValue={StaticResource LightCard}}"
                                   BorderColor="Transparent">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    
                                    <!-- Pin Indicator + Title -->
                                    <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8">
                                        <Label Text="[Pinned]"
                                               IsVisible="{Binding IsPinned}"
                                               FontSize="12"
                                               TextColor="{StaticResource Primary}"/>
                                        <Label Text="{Binding Title}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}"/>
                                    </HorizontalStackLayout>
                                    
                                    <!-- Category Badge -->
                                    <Frame Grid.Row="0" Grid.Column="1"
                                           Padding="8,4"
                                           CornerRadius="8"
                                           BackgroundColor="{StaticResource Primary}"
                                           BorderColor="Transparent"
                                           IsVisible="{Binding Category, Converter={StaticResource StringNotNullConverter}}">
                                        <Label Text="{Binding Category}"
                                               TextColor="White"
                                               FontSize="10"/>
                                    </Frame>
                                    
                                    <!-- Content Preview -->
                                    <Label Grid.Row="1" Grid.ColumnSpan="2"
                                           Text="{Binding Content}"
                                           FontSize="14"
                                           MaxLines="3"
                                           LineBreakMode="TailTruncation"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                                           Margin="0,8,0,0"/>
                                    
                                    <!-- Timestamp -->
                                    <Label Grid.Row="2" Grid.ColumnSpan="2"
                                           Text="{Binding UpdatedAt, StringFormat='{0:MMM dd, h:mm tt}'}"
                                           FontSize="11"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}"
                                           Margin="0,8,0,0"/>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <controls:EmptyStateView 
                        Message="No notes yet. Tap + to add one!"
                        Icon="clipboard"/>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Floating Action Button -->
        <Button Grid.Row="2"
                x:Name="AddNoteButton"
                Text="+"
                FontSize="28"
                FontAttributes="Bold"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                Margin="0,0,20,20"
                HorizontalOptions="End"
                VerticalOptions="End"
                Clicked="OnAddNoteClicked"/>
        
    </Grid>

</ContentPage>
