<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneManVan.Mobile.Pages.EstimateDetailPage"
             Title="Estimate Details">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                             IsRunning="False" 
                             IsVisible="False"
                             Color="{DynamicResource Primary}"/>

            <!-- Header Card -->
            <Frame>
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="8">
                    <Label x:Name="EstimateNumberLabel" 
                           Grid.Row="0" Grid.Column="0"
                           FontSize="20" FontAttributes="Bold"/>
                    <Border x:Name="StatusBadge" 
                            Grid.Row="0" Grid.Column="1"
                            StrokeThickness="0" 
                            Padding="12,6">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Label Text="Draft" FontSize="12" FontAttributes="Bold"/>
                    </Border>
                    <Label x:Name="DateLabel" 
                           Grid.Row="1" Grid.Column="0" 
                           TextColor="Gray"/>
                    <Label x:Name="ValidUntilLabel" 
                           Grid.Row="1" Grid.Column="1" 
                           TextColor="Gray" FontSize="12"/>
                </Grid>
            </Frame>

            <!-- Customer Info Card -->
            <Frame>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Customer" FontAttributes="Bold" FontSize="16"/>
                    <Label x:Name="CustomerNameLabel" FontSize="14"/>
                    <Label x:Name="CustomerEmailLabel" FontSize="12" TextColor="Gray"/>
                    <Label x:Name="CustomerPhoneLabel" FontSize="12" TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Estimate Details Card -->
            <Frame>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Details" FontAttributes="Bold" FontSize="16"/>
                    <Label x:Name="TitleLabel" FontSize="14" FontAttributes="Bold"/>
                    <Label x:Name="DescriptionLabel" FontSize="13" TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Line Items Card -->
            <Frame>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Line Items" FontAttributes="Bold" FontSize="16"/>
                    <CollectionView x:Name="LineItemsCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,8" ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="{Binding Description}" FontSize="13"/>
                                        <Label FontSize="11" TextColor="Gray">
                                            <Label.Text>
                                                <MultiBinding StringFormat="{}{0} × ${1:N2}">
                                                    <Binding Path="Quantity"/>
                                                    <Binding Path="UnitPrice"/>
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>
                                    </VerticalStackLayout>
                                    <Label Grid.Column="1" 
                                           Text="{Binding Total, StringFormat='${0:N2}'}" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Totals Card -->
            <Frame BackgroundColor="{DynamicResource PrimarySurface}">
                <VerticalStackLayout Spacing="8">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Subtotal" Grid.Column="0"/>
                        <Label x:Name="SubtotalLabel" Grid.Column="1" FontAttributes="Bold"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Tax" Grid.Column="0"/>
                        <Label x:Name="TaxLabel" Grid.Column="1"/>
                    </Grid>
                    <BoxView HeightRequest="1" Color="Gray" Opacity="0.3"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Total" Grid.Column="0" FontSize="18" FontAttributes="Bold"/>
                        <Label x:Name="TotalLabel" Grid.Column="1" FontSize="20" FontAttributes="Bold"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Button x:Name="EditButton" 
                    Text="Edit Estimate"
                    Clicked="OnEditClicked"
                    BackgroundColor="{DynamicResource Primary}"/>

            <Button x:Name="SendButton" 
                    Text="Send to Customer"
                    Clicked="OnSendClicked"
                    BackgroundColor="{DynamicResource Success}"/>

            <Button x:Name="AcceptButton" 
                    Text="Mark as Accepted"
                    Clicked="OnAcceptClicked"
                    BackgroundColor="{DynamicResource Success}"
                    IsVisible="False"/>

            <Button x:Name="RejectButton" 
                    Text="Mark as Rejected"
                    Clicked="OnRejectClicked"
                    BackgroundColor="{DynamicResource Error}"
                    IsVisible="False"/>

            <Button x:Name="ConvertToJobButton" 
                    Text="Convert to Job"
                    Clicked="OnConvertToJobClicked"
                    BackgroundColor="{DynamicResource Primary}"
                    IsVisible="False"/>

            <Button x:Name="DeleteButton" 
                    Text="Delete Estimate"
                    Clicked="OnDeleteClicked"
                    BackgroundColor="{DynamicResource Error}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
