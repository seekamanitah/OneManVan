<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneManVan.Mobile.Pages.EstimateListPage"
             Title="Estimates"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        
        <SearchBar Grid.Row="0"
                   x:Name="SearchBar"
                   Placeholder="Search estimates..."
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#3D3D3D}"
                   TextChanged="OnSearchTextChanged"/>

        <ScrollView Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalScrollBarVisibility="Never"
                    Padding="16,8">
            <HorizontalStackLayout Spacing="8">
                <Button x:Name="AllFilter"
                        Text="All"
                        BackgroundColor="#1976D2"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
                <Button x:Name="DraftFilter"
                        Text="Draft"
                        BackgroundColor="{AppThemeBinding Light={StaticResource PrimarySurface}, Dark=#1E3A5F}"
                        TextColor="{AppThemeBinding Light={StaticResource SectionPrimary}, Dark={StaticResource SectionPrimaryDark}}"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
                <Button x:Name="SentFilter"
                        Text="Sent"
                        BackgroundColor="{AppThemeBinding Light={StaticResource PrimarySurface}, Dark=#1E3A5F}"
                        TextColor="{AppThemeBinding Light={StaticResource SectionPrimary}, Dark={StaticResource SectionPrimaryDark}}"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
                <Button x:Name="AcceptedFilter"
                        Text="Accepted"
                        BackgroundColor="{AppThemeBinding Light={StaticResource SuccessSurface}, Dark=#1B3D1F}"
                        TextColor="{AppThemeBinding Light={StaticResource SectionSuccess}, Dark={StaticResource SectionSuccessDark}}"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="16,0"
                        Clicked="OnFilterClicked"/>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2"
                           x:Name="LoadingIndicator"
                           IsRunning="False"
                           IsVisible="False"
                           Color="{AppThemeBinding Light=#1976D2, Dark={StaticResource SectionPrimaryDark}}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           HeightRequest="50"
                           WidthRequest="50"/>

        <RefreshView Grid.Row="2"
                     x:Name="RefreshViewControl"
                     Refreshing="OnRefreshing">
            <CollectionView x:Name="EstimateCollection"
                            SelectionMode="Single"
                            SelectionChanged="OnEstimateSelected"
                            EmptyView="No estimates found. Tap + to create one.">
                
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="8"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="#F44336"
                                               Invoked="OnDeleteSwipe"
                                               BindingContext="{Binding}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Convert to Job"
                                               BackgroundColor="#4CAF50"
                                               Invoked="OnConvertToJobSwipe"
                                               BindingContext="{Binding}"/>
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <!-- Estimate Card - Using Standard Card Style -->
                            <Border Style="{StaticResource CardStyle}"
                                    Margin="16,4">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnEstimateTapped" CommandParameter="{Binding}"/>
                                </Border.GestureRecognizers>
                                
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    
                                    <Label Text="{Binding Title}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"
                                           LineBreakMode="TailTruncation"/>
                                    
                                    <Frame Grid.Column="1"
                                           BackgroundColor="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                           CornerRadius="12"
                                           Padding="8,4"
                                           BorderColor="Transparent">
                                        <Label Text="{Binding Status}"
                                               FontSize="10"
                                               FontAttributes="Bold"
                                               TextColor="White"/>
                                    </Frame>

                                    <HorizontalStackLayout Grid.Row="1" 
                                                           Grid.ColumnSpan="2"
                                                           Spacing="8"
                                                           Margin="0,4,0,0">
                                        <Label Text="{Binding Customer.Name}"
                                               FontSize="13"
                                               TextColor="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"/>
                                        <Label Text="{Binding CreatedAt, StringFormat='{0:MMM dd, yyyy}'}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Grid.Row="2" 
                                                           Grid.ColumnSpan="2"
                                                           Spacing="16"
                                                           Margin="0,8,0,0">
                                        <Label FontSize="20" FontAttributes="Bold" TextColor="{AppThemeBinding Light={StaticResource SectionPrimary}, Dark={StaticResource SectionPrimaryDark}}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="$"/>
                                                    <Span Text="{Binding Total, StringFormat='{0:N2}'}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding Lines.Count, StringFormat='{0} items'}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Frame Grid.Row="2"
               BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#1565C0}"
               CornerRadius="0"
               Padding="16,8"
               VerticalOptions="End"
               Margin="0">
            <Grid ColumnDefinitions="*,*,*">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label x:Name="TotalCountLabel"
                           Text="0"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Total"
                           FontSize="10"
                           TextColor="{AppThemeBinding Light=#BBDEFB, Dark=#90CAF9}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label x:Name="PendingCountLabel"
                           Text="0"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#FFEB3B, Dark=#FFF176}"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Pending"
                           FontSize="10"
                           TextColor="{AppThemeBinding Light=#BBDEFB, Dark=#90CAF9}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Label x:Name="TotalValueLabel"
                           Text="$0"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource SectionSuccess}, Dark={StaticResource SectionSuccessDark}}"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Value"
                           FontSize="10"
                           TextColor="{AppThemeBinding Light=#BBDEFB, Dark=#90CAF9}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <Button Grid.Row="2"
                Text="+"
                FontSize="28"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20,0,20,70"
                Clicked="OnAddEstimateClicked">
            <Button.Shadow>
                <Shadow Brush="{AppThemeBinding Light=#40000000, Dark=#80000000}" Offset="2,4" Radius="8"/>
            </Button.Shadow>
        </Button>

    </Grid>

</ContentPage>