<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneManVan.Mobile.Pages.EditCompanyPage"
             Title="Edit Company"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            
            <!-- Company Information Card -->
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackground}, Dark={StaticResource DarkCardBackground}}"
                    StrokeShape="RoundRectangle 12"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Company Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    
                    <!-- Company Name (Required) -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Company Name *" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="NameEntry" 
                               Placeholder="Enter company name"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>

                    <!-- Legal Name -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Legal Name" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="LegalNameEntry" 
                               Placeholder="Legal business name (optional)"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>

                    <!-- Company Type -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Company Type" FontSize="14" FontAttributes="Bold"/>
                        <Picker x:Name="CompanyTypePicker"
                                BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                                TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}">
                            <Picker.Items>
                                <x:String>Customer</x:String>
                                <x:String>Vendor</x:String>
                                <x:String>Supplier</x:String>
                                <x:String>Partner</x:String>
                                <x:String>Competitor</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Industry -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Industry" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="IndustryEntry" 
                               Placeholder="e.g., HVAC, Real Estate"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>

                    <!-- Active Status -->
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="Active" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                        <Switch x:Name="IsActiveSwitch"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Contact Information Card -->
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackground}, Dark={StaticResource DarkCardBackground}}"
                    StrokeShape="RoundRectangle 12"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Contact Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>

                    <!-- Primary Contact (Customer Picker) -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Primary Contact" FontSize="14" FontAttributes="Bold"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <Picker x:Name="ContactCustomerPicker"
                                    Grid.Column="0"
                                    Title="Select contact..."
                                    ItemDisplayBinding="{Binding FullNameWithEmail}"
                                    SelectedIndexChanged="OnContactCustomerChanged"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                                    TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                            <Button Grid.Column="1"
                                    Text="New"
                                    Clicked="OnNewContactClicked"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    Padding="15,8"
                                    Margin="10,0,0,0"
                                    CornerRadius="8"/>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Contact Info Preview -->
                    <Frame x:Name="ContactInfoFrame"
                           IsVisible="False"
                           BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                           Padding="12"
                           CornerRadius="8"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="4">
                            <Label x:Name="ContactNameLabel" FontAttributes="Bold" FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                            <Label x:Name="ContactEmailLabel" FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"/>
                            <Label x:Name="ContactPhoneLabel" FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Label Text="Select or create a customer to be the primary contact"
                           FontSize="11" FontAttributes="Italic"
                           TextColor="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"/>

                    <!-- Phone -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Phone" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="PhoneEntry" 
                               Placeholder="(555) 123-4567"
                               Keyboard="Telephone"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Email" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="EmailEntry" 
                               Placeholder="contact@company.com"
                               Keyboard="Email"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>

                    <!-- Website -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Website" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="WebsiteEntry" 
                               Placeholder="www.company.com"
                               Keyboard="Url"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>

                    <!-- Tax ID -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Tax ID / EIN" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="TaxIdEntry" 
                               Placeholder="XX-XXXXXXX"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Billing Address Card -->
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackground}, Dark={StaticResource DarkCardBackground}}"
                    StrokeShape="RoundRectangle 12"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Billing Address" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>

                    <!-- Street Address -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Street Address" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="BillingAddressEntry" 
                               Placeholder="123 Main St"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>

                    <!-- City -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="City" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="BillingCityEntry" 
                               Placeholder="Portland"
                               BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                               TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                    </VerticalStackLayout>

                    <!-- State & Zip -->
                    <Grid ColumnDefinitions="*, *" ColumnSpacing="12">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="State" FontSize="14" FontAttributes="Bold"/>
                            <Entry x:Name="BillingStateEntry" 
                                   Placeholder="OR"
                                   MaxLength="2"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                                   TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Zip Code" FontSize="14" FontAttributes="Bold"/>
                            <Entry x:Name="BillingZipCodeEntry" 
                                   Placeholder="97201"
                                   Keyboard="Numeric"
                                   MaxLength="10"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                                   TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Notes Card -->
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackground}, Dark={StaticResource DarkCardBackground}}"
                    StrokeShape="RoundRectangle 12"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Notes" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>

                    <Editor x:Name="NotesEditor" 
                            Placeholder="Additional notes about this company..."
                            HeightRequest="120"
                            BackgroundColor="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}"
                            TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="12">
                <Button Grid.Column="0"
                        Text="Cancel"
                        BackgroundColor="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                        TextColor="{AppThemeBinding Light=#374151, Dark=#E5E7EB}"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="48"
                        CornerRadius="12"
                        Clicked="OnCancelClicked"/>
                
                <Button Grid.Column="1"
                        Text="Save Changes"
                        BackgroundColor="#6366F1"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="48"
                        CornerRadius="12"
                        Clicked="OnSaveClicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
