<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneManVan.Mobile.Controls.QuickSchedulePopup"
             BackgroundColor="#80000000">

    <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
        <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"
                StrokeShape="RoundRectangle 16"
                Stroke="Transparent"
                Padding="20"
                WidthRequest="320">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,4" Radius="12" Opacity="0.25"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="16">
                
                <!-- Header -->
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout>
                        <Label x:Name="DateLabel"
                               Text="December 15, 2024"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Label x:Name="DayOfWeekLabel"
                               Text="Sunday"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            Text="X"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"
                            FontSize="18"
                            FontAttributes="Bold"
                            WidthRequest="40"
                            HeightRequest="40"
                            Clicked="OnCloseClicked"/>
                </Grid>

                <!-- Existing Jobs for this day -->
                <VerticalStackLayout x:Name="ExistingJobsSection" IsVisible="False" Spacing="8">
                    <Label Text="Scheduled Jobs"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"/>
                    <VerticalStackLayout x:Name="ExistingJobsList" Spacing="4">
                        <!-- Populated dynamically -->
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Quick Schedule Options -->
                <Label Text="Quick Schedule"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"/>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="12" RowDefinitions="Auto,Auto" RowSpacing="12">
                    <!-- New Job -->
                    <Button Text="+ New Job"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnNewJobClicked"/>
                    
                    <!-- New Estimate -->
                    <Button Grid.Column="1"
                            Text="+ Estimate"
                            BackgroundColor="#9C27B0"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnNewEstimateClicked"/>

                    <!-- Reschedule Existing -->
                    <Button Grid.Row="1"
                            Text="Reschedule"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnRescheduleClicked"/>

                    <!-- Block Time -->
                    <Button Grid.Row="1"
                            Grid.Column="1"
                            Text="Block Time"
                            BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                            TextColor="{AppThemeBinding Light=#616161, Dark=#B0B0B0}"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnBlockTimeClicked"/>
                </Grid>

                <!-- Time Slot Selection -->
                <VerticalStackLayout x:Name="TimeSlotSection" IsVisible="False" Spacing="8">
                    <Label Text="Select Time"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"/>
                    
                    <FlexLayout x:Name="TimeSlotButtons" 
                                Wrap="Wrap" 
                                JustifyContent="Start"
                                AlignItems="Start">
                        <!-- Time slots populated dynamically -->
                    </FlexLayout>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentView>
