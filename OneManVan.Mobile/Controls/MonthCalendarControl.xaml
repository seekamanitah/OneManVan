<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneManVan.Mobile.Controls.MonthCalendarControl">

    <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"
            StrokeShape="RoundRectangle 12"
            Stroke="Transparent"
            Padding="12">
        <Border.Shadow>
            <Shadow Brush="Black" Offset="0,2" Radius="6" Opacity="0.1"/>
        </Border.Shadow>

        <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">
            
            <!-- Header with Month/Year and Navigation -->
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8">
                <Button x:Name="PrevButton"
                        Text="◄"
                        BackgroundColor="Transparent"
                        TextColor="#2196F3"
                        FontSize="24"
                        FontAttributes="Bold"
                        WidthRequest="40"
                        HeightRequest="40"
                        Padding="0"
                        Clicked="OnPreviousMonthClicked"/>
                
                <Label x:Name="MonthYearLabel"
                       Grid.Column="1"
                       Text="December 2024"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
                
                <Button x:Name="NextButton"
                        Grid.Column="2"
                        Text="►"
                        BackgroundColor="Transparent"
                        TextColor="#2196F3"
                        FontSize="24"
                        FontAttributes="Bold"
                        WidthRequest="40"
                        HeightRequest="40"
                        Padding="0"
                        Clicked="OnNextMonthClicked"/>
                
                <Button x:Name="TodayButton"
                        Grid.Column="3"
                        Text="Today"
                        BackgroundColor="#E3F2FD"
                        TextColor="#1976D2"
                        FontSize="12"
                        HeightRequest="32"
                        CornerRadius="16"
                        Padding="12,0"
                        Clicked="OnTodayClicked"/>
            </Grid>

            <!-- Day Names Header -->
            <Grid x:Name="DayNamesGrid"
                  Grid.Row="1"
                  ColumnDefinitions="*,*,*,*,*,*,*"
                  ColumnSpacing="4">
                <Label Text="S" FontSize="12" FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"
                       HorizontalTextAlignment="Center"/>
                <Label Grid.Column="1" Text="M" FontSize="12" FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"
                       HorizontalTextAlignment="Center"/>
                <Label Grid.Column="2" Text="T" FontSize="12" FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"
                       HorizontalTextAlignment="Center"/>
                <Label Grid.Column="3" Text="W" FontSize="12" FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"
                       HorizontalTextAlignment="Center"/>
                <Label Grid.Column="4" Text="T" FontSize="12" FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"
                       HorizontalTextAlignment="Center"/>
                <Label Grid.Column="5" Text="F" FontSize="12" FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"
                       HorizontalTextAlignment="Center"/>
                <Label Grid.Column="6" Text="S" FontSize="12" FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=#757575, Dark=#B0B0B0}"
                       HorizontalTextAlignment="Center"/>
            </Grid>

            <!-- Calendar Grid (populated in code-behind) -->
            <Grid x:Name="CalendarGrid"
                  Grid.Row="2"
                  ColumnDefinitions="*,*,*,*,*,*,*"
                  RowSpacing="4"
                  ColumnSpacing="4">
                <!-- Days populated dynamically -->
            </Grid>

        </Grid>
    </Border>

</ContentView>
