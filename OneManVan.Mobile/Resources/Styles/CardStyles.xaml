<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- =====================================================
         DESIGN SYSTEM CARD STYLES v1.0
         Based on MobileUIDesignSystem.md specifications
         Card Corner Radius: 12dp
         Card Padding: 12-16dp
         Minimum Touch Target: 44x44dp
         ===================================================== -->

    <!-- Standard Card Border Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Surface}, Dark=#1E1E1E}"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="12"/>
        </Setter>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="16,4"/>
        <Setter Property="Shadow">
            <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
        </Setter>
    </Style>

    <!-- Clickable Card - Has press feedback -->
    <Style x:Key="ClickableCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.95"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Elevated Card - Stronger shadow for emphasis -->
    <Style x:Key="ElevatedCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Shadow">
            <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.15"/>
        </Setter>
    </Style>

    <!-- Flat Card - No shadow, just border -->
    <Style x:Key="FlatCardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Surface}, Dark=#1E1E1E}"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="12"/>
        </Setter>
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Border}, Dark=#424242}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="16,4"/>
    </Style>

    <!-- KPI Card - For dashboard metrics -->
    <Style x:Key="KPICardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Surface}, Dark=#1E1E1E}"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="12"/>
        </Setter>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Shadow">
            <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
        </Setter>
    </Style>

    <!-- List Item Card - Compact card for list items -->
    <Style x:Key="ListItemCardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Surface}, Dark=#1E1E1E}"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="12"/>
        </Setter>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="16,4"/>
        <Setter Property="Shadow">
            <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
        </Setter>
    </Style>

    <!-- Status Banner Card - For status indicators at top of detail pages -->
    <Style x:Key="StatusBannerStyle" TargetType="Border">
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="12"/>
        </Setter>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="16,8"/>
    </Style>

    <!-- Status Badge - Small colored badge -->
    <Style x:Key="StatusBadgeStyle" TargetType="Border">
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="12"/>
        </Setter>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Stats Bar - Bottom anchored statistics -->
    <Style x:Key="StatsBarStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="0"/>
        </Setter>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>

    <!-- Empty State Card -->
    <Style x:Key="EmptyStateStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="8"/>
        </Setter>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="Margin" Value="16"/>
    </Style>

    <!-- =====================================================
         SWIPE ITEM STYLES
         ===================================================== -->

    <!-- Success Swipe Item (e.g., Complete, Approve) -->
    <Style x:Key="SuccessSwipeItemStyle" TargetType="SwipeItem">
        <Setter Property="BackgroundColor" Value="{StaticResource Success}"/>
    </Style>

    <!-- Danger Swipe Item (e.g., Delete) -->
    <Style x:Key="DangerSwipeItemStyle" TargetType="SwipeItem">
        <Setter Property="BackgroundColor" Value="{StaticResource Error}"/>
    </Style>

    <!-- Warning Swipe Item (e.g., Edit, Archive) -->
    <Style x:Key="WarningSwipeItemStyle" TargetType="SwipeItem">
        <Setter Property="BackgroundColor" Value="{StaticResource Warning}"/>
    </Style>

    <!-- Primary Swipe Item (e.g., Call, Email) -->
    <Style x:Key="PrimarySwipeItemStyle" TargetType="SwipeItem">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
    </Style>

</ResourceDictionary>
