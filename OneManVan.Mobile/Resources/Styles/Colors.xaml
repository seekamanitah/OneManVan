<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Primary Brand Colors -->
    <Color x:Key="Primary">#2196F3</Color>
    <Color x:Key="PrimaryDark">#1E88E5</Color>
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <Color x:Key="PrimaryDarker">#1976D2</Color>
    <Color x:Key="PrimaryLight">#BBDEFB</Color>
    <Color x:Key="PrimarySurface">#E3F2FD</Color>
    
    <!-- Secondary / Accent -->
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="SuccessSurface">#E8F5E9</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="WarningSurface">#FFF3E0</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="ErrorSurface">#FFEBEE</Color>
    <Color x:Key="Info">#009688</Color>
    <Color x:Key="InfoSurface">#E0F2F1</Color>

    <!-- Basic Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!-- Light Mode Background/Surface Colors -->
    <Color x:Key="LightBackground">#F5F5F5</Color>
    <Color x:Key="LightSurface">#FFFFFF</Color>
    <Color x:Key="LightCardBackground">#FFFFFF</Color>
    <Color x:Key="LightInputBackground">#F5F5F5</Color>
    
    <!-- Dark Mode Background/Surface Colors -->
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkSurface">#1E1E1E</Color>
    <Color x:Key="DarkCardBackground">#2D2D2D</Color>
    <Color x:Key="DarkInputBackground">#3D3D3D</Color>
    
    <!-- Light Mode Text Colors -->
    <Color x:Key="LightTextPrimary">#333333</Color>
    <Color x:Key="LightTextSecondary">#757575</Color>
    <Color x:Key="LightTextTertiary">#9E9E9E</Color>
    
    <!-- Dark Mode Text Colors -->
    <Color x:Key="DarkTextPrimary">#FFFFFF</Color>
    <Color x:Key="DarkTextSecondary">#B0B0B0</Color>
    <Color x:Key="DarkTextTertiary">#808080</Color>

    <!-- Section Header Colors (Theme-Aware) -->
    <!-- Use these for form section headers - readable in both light and dark modes -->
    <Color x:Key="SectionPrimary">#1976D2</Color>
    <Color x:Key="SectionPrimaryDark">#64B5F6</Color>
    
    <Color x:Key="SectionSuccess">#388E3C</Color>
    <Color x:Key="SectionSuccessDark">#81C784</Color>
    
    <Color x:Key="SectionWarning">#F57C00</Color>
    <Color x:Key="SectionWarningDark">#FFB74D</Color>
    
    <Color x:Key="SectionInfo">#0097A7</Color>
    <Color x:Key="SectionInfoDark">#4DD0E1</Color>
    
    <Color x:Key="SectionPurple">#7B1FA2</Color>
    <Color x:Key="SectionPurpleDark">#CE93D8</Color>

    <!-- Gray Scale -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Theme-Aware Colors (use these in pages) -->
    <Color x:Key="PageBackground">#F5F5F5</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="TextPrimary">#333333</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="Divider">#E0E0E0</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>