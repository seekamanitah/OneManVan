<Application x:Class="OneManVan.App"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:local="clr-namespace:OneManVan"
xmlns:converters="clr-namespace:OneManVan.Converters"
StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/SharedStyles.xaml"/>
                <ResourceDictionary Source="Themes/Animations.xaml"/>
                <ResourceDictionary Source="Themes/DatePickerStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:PhoneNumberConverter x:Key="PhoneNumberConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
