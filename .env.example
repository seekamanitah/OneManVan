# OneManVan Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==============================================================================
# SQL Server Configuration
# ==============================================================================

# SQL Server SA Password - USE A STRONG, UNIQUE PASSWORD
SA_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# Database name
DB_NAME=OneManVanDB

# SQL Server port (default: 1433)
DB_PORT=1433

# Connection timeout in seconds
CONNECTION_TIMEOUT=30

# ==============================================================================
# Mobile Sync User (Optional)
# ==============================================================================

# Sync service user credentials
SYNC_USER=sync_user
SYNC_PASSWORD=CHANGE_ME_SYNC_PASSWORD

# ==============================================================================
# Email Configuration (Optional)
# ==============================================================================

# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-smtp-password

# ==============================================================================
# Application Settings
# ==============================================================================

# Environment: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Production

# Application URLs
ASPNETCORE_URLS=https://+:443;http://+:80
