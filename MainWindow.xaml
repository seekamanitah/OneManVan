<Window x:Class="OneManVan.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:OneManVan"
xmlns:vm="clr-namespace:OneManVan.ViewModels"
mc:Ignorable="d"
Title="OneManVan - Setup Wizard" 
Height="700" Width="900"
MinHeight="600" MinWidth="800"
WindowStartupLocation="CenterScreen"
Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>

        <!-- Step Indicator Converter -->
        <local:StepVisibilityConverter x:Key="StepVisibilityConverter"/>
        <local:StepActiveConverter x:Key="StepActiveConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Step Indicators -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="30,20">
            <StackPanel>
                <TextBlock Text="OneManVan" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryBrush}"
                           Margin="0,0,0,5"/>
                <TextBlock Text="by MtnManApps - Personal HVAC Job Estimator" 
                           FontSize="14" 
                           Foreground="{DynamicResource SubtextBrush}"/>

                <!-- Step Indicators -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="32" Height="32" 
                                 Fill="{Binding CurrentStep, Converter={StaticResource StepActiveConverter}, ConverterParameter=1}"/>
                        <TextBlock Text="1" Foreground="White" FontWeight="Bold" 
                                   VerticalAlignment="Center" Margin="-24,0,0,0" Width="32" TextAlignment="Center"/>
                        <TextBlock Text="Trade" Foreground="{DynamicResource TextBrush}" 
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <Rectangle Width="40" Height="2" Fill="{DynamicResource SubtextBrush}" 
                               Margin="15,0" VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="32" Height="32" 
                                 Fill="{Binding CurrentStep, Converter={StaticResource StepActiveConverter}, ConverterParameter=2}"/>
                        <TextBlock Text="2" Foreground="White" FontWeight="Bold" 
                                   VerticalAlignment="Center" Margin="-24,0,0,0" Width="32" TextAlignment="Center"/>
                        <TextBlock Text="Preview" Foreground="{DynamicResource TextBrush}" 
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <Rectangle Width="40" Height="2" Fill="{DynamicResource SubtextBrush}" 
                               Margin="15,0" VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="32" Height="32" 
                                 Fill="{Binding CurrentStep, Converter={StaticResource StepActiveConverter}, ConverterParameter=3}"/>
                        <TextBlock Text="3" Foreground="White" FontWeight="Bold" 
                                   VerticalAlignment="Center" Margin="-24,0,0,0" Width="32" TextAlignment="Center"/>
                        <TextBlock Text="Database" Foreground="{DynamicResource TextBrush}" 
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <Rectangle Width="40" Height="2" Fill="{DynamicResource SubtextBrush}" 
                               Margin="15,0" VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="32" Height="32" 
                                 Fill="{Binding CurrentStep, Converter={StaticResource StepActiveConverter}, ConverterParameter=4}"/>
                        <TextBlock Text="4" Foreground="White" FontWeight="Bold" 
                                   VerticalAlignment="Center" Margin="-24,0,0,0" Width="32" TextAlignment="Center"/>
                        <TextBlock Text="Finish" Foreground="{DynamicResource TextBrush}" 
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="40">
            <!-- Step 1: Trade Selection -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=1}">
                <TextBlock Text="Select Your Trade" 
                           FontSize="24" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextBrush}"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Choose your primary trade to load optimized fields and templates." 
                           FontSize="14" 
                           Foreground="{DynamicResource SubtextBrush}"
                           Margin="0,0,0,30"/>

                <ComboBox ItemsSource="{Binding AvailableTrades}" 
                          SelectedItem="{Binding SelectedTrade}"
                          Width="300" HorizontalAlignment="Left"/>

                <Border Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="8" Padding="20" Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="HVAC Focus" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource SecondaryBrush}" Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource SubtextBrush}" LineHeight="26" FontSize="14">
                            <Run Text="&#x2022; Track fuel types (Natural Gas, Propane, Electric)"/>
                            <LineBreak/>
                            <Run Text="&#x2022; Log BTU ratings and SEER efficiency"/>
                            <LineBreak/>
                            <Run Text="&#x2022; Warranty expiration tracking with alerts"/>
                            <LineBreak/>
                            <Run Text="&#x2022; Pre-built estimate templates for tune-ups and installs"/>
                            <LineBreak/>
                            <Run Text="&#x2022; Asset serial number and model tracking"/>
                            <LineBreak/>
                            <Run Text="&#x2022; Customer site hierarchy management"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Step 2: Preset Preview -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=2}">
                <TextBlock Text="Preset Fields Preview" 
                           FontSize="24" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextBrush}"
                           Margin="0,0,0,10"/>
                <TextBlock Text="These fields will be available for tracking assets and jobs." 
                           FontSize="14" 
                           Foreground="{DynamicResource SubtextBrush}"
                           Margin="0,0,0,20"/>

                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="5">
                    <ListView ItemsSource="{Binding PresetFields}" 
                              Background="Transparent" BorderThickness="0"
                              MaxHeight="300">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15,10" BorderBrush="#45475a" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="{DynamicResource TextBrush}" 
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding HelpText}" 
                                                       Foreground="{DynamicResource SubtextBrush}" 
                                                       FontSize="11" 
                                                       Visibility="{Binding HelpText, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=notnull}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="{Binding Type}" 
                                                   Foreground="{DynamicResource PrimaryBrush}" 
                                                   FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Required, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=required}"
                                                   Foreground="{DynamicResource SecondaryBrush}" 
                                                   FontSize="11" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </StackPanel>

            <!-- Step 3: Database Configuration -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=3}">
                <TextBlock Text="Database Configuration" 
                           FontSize="24" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextBrush}"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Choose where to store your data." 
                           FontSize="14" 
                           Foreground="{DynamicResource SubtextBrush}"
                           Margin="0,0,0,30"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton Content="Local (SQLite)" 
                                 IsChecked="{Binding DatabaseMode, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=localcheck}"
                                 Foreground="{DynamicResource TextBrush}" FontSize="14"
                                 GroupName="DbMode" Margin="0,0,30,0"
                                 Checked="LocalRadio_Checked"/>
                    <RadioButton Content="Remote (Docker SQL Server)" 
                                 IsChecked="{Binding DatabaseMode, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=remotecheck}"
                                 Foreground="{DynamicResource TextBrush}" FontSize="14"
                                 GroupName="DbMode"
                                 Checked="RemoteRadio_Checked"/>
                </StackPanel>

                <Button Content="Test Connection" 
                        Command="{Binding TestConnectionCommand}"
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Left" Margin="0,0,0,20"/>

                <Border Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="8" Padding="20" MinHeight="100">
                    <TextBlock Text="{Binding ConnectionTestResult}" 
                               Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap" FontFamily="Consolas"/>
                </Border>
            </StackPanel>

            <!-- Step 4: Complete -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=4}"
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ready to Go!" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="{DynamicResource SecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock TextAlignment="Center" Foreground="{DynamicResource SubtextBrush}" FontSize="16" LineHeight="28">
                    <Run Text="Trade: "/><Run Text="{Binding SelectedTrade}" Foreground="{DynamicResource PrimaryBrush}"/>
                    <LineBreak/>
                    <Run Text="Database: "/><Run Text="{Binding DatabaseMode}" Foreground="{DynamicResource PrimaryBrush}"/>
                </TextBlock>

                <Button Content="Complete Setup" 
                        Command="{Binding CompleteWizardCommand}"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Center" Margin="0,40,0,0"
                        FontSize="18" Padding="40,15"/>
            </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Navigation Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="30,15">
            <Grid>
                <Button Content="&#x2190; Back" 
                        Command="{Binding PreviousStepCommand}"
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Left"
                        Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=notfirst}"/>

                <Button Content="Next &#x2192;" 
                        Command="{Binding NextStepCommand}"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Right"
                        Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=notlast}"/>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=bool}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Please wait..." FontSize="18" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

