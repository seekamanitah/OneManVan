@page "/jobs"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@inject OneManVanDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Jobs - TradeFlow</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Jobs</h1>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="CreateJob">
                <span class="bi bi-plus-circle"></span> New Job
            </button>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Search jobs..." 
                   @bind="searchText" @bind:event="oninput" @bind:after="FilterJobs" />
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="selectedStatus" @bind:after="FilterJobs">
                <option value="">All Statuses</option>
                <option value="Scheduled">Scheduled</option>
                <option value="InProgress">In Progress</option>
                <option value="Completed">Completed</option>
                <option value="Cancelled">Cancelled</option>
            </select>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (filteredJobs == null || !filteredJobs.Any())
    {
        <div class="alert alert-info">
            No jobs found. Click "New Job" to add one.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Job #</th>
                        <th>Customer</th>
                        <th>Title</th>
                        <th>Scheduled</th>
                        <th>Status</th>
                        <th>Priority</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in filteredJobs)
                    {
                        <tr>
                            <td>@job.JobNumber</td>
                            <td>@(job.Customer?.Name ?? "N/A")</td>
                            <td>@job.Title</td>
                            <td>@(job.ScheduledDate?.ToString("MM/dd/yyyy") ?? "Not scheduled")</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(job.Status)">
                                    @job.Status
                                </span>
                            </td>
                            <td>
                                <span class="badge @GetPriorityBadgeClass(job.Priority)">
                                    @job.Priority
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" 
                                        @onclick="() => ViewJob(job.Id)">
                                    View
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Job>? jobs;
    private List<Job>? filteredJobs;
    private string searchText = string.Empty;
    private string selectedStatus = string.Empty;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadJobs();
    }

    private async Task LoadJobs()
    {
        loading = true;
        try
        {
            jobs = await DbContext.Jobs
                .Include(j => j.Customer)
                .OrderByDescending(j => j.ScheduledDate ?? j.CreatedAt)
                .ToListAsync();
            filteredJobs = jobs;
        }
        finally
        {
            loading = false;
        }
    }

    private void FilterJobs()
    {
        if (jobs == null) return;

        filteredJobs = jobs;

        // Filter by search text
        if (!string.IsNullOrWhiteSpace(searchText))
        {
            var search = searchText.ToLower();
            filteredJobs = filteredJobs
                .Where(j => 
                    (j.JobNumber?.ToLower().Contains(search) ?? false) ||
                    (j.Title?.ToLower().Contains(search) ?? false) ||
                    (j.Customer?.Name?.ToLower().Contains(search) ?? false))
                .ToList();
        }

        // Filter by status
        if (!string.IsNullOrWhiteSpace(selectedStatus))
        {
            if (Enum.TryParse<JobStatus>(selectedStatus, out var status))
            {
                filteredJobs = filteredJobs.Where(j => j.Status == status).ToList();
            }
        }
    }

    private string GetStatusBadgeClass(JobStatus status)
    {
        return status switch
        {
            JobStatus.Scheduled => "bg-info",
            JobStatus.InProgress => "bg-warning",
            JobStatus.Completed => "bg-success",
            JobStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityBadgeClass(JobPriority priority)
    {
        return priority switch
        {
            JobPriority.Emergency => "bg-danger",
            JobPriority.High => "bg-warning",
            JobPriority.Normal => "bg-info",
            JobPriority.Low => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private void CreateJob()
    {
        Navigation.NavigateTo("/jobs/new");
    }

    private void ViewJob(int id)
    {
        Navigation.NavigateTo($"/jobs/{id}");
    }
}
