@page "/agreements/new"
@page "/agreements/{Id:int}/edit"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(IsNew ? "New Agreement" : $"Edit Agreement") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/agreements">Agreements</a></li>
                        <li class="breadcrumb-item active">@(IsNew ? "New" : "Edit")</li>
                    </ol>
                </nav>
                <h1 class="h2">@(IsNew ? "New Service Agreement" : $"Edit: {model.Name}")</h1>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Service Tier Selection -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0"><i class="bi bi-star me-2"></i>Select Service Level</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                @foreach (var tier in new[] { ServiceTier.Basic, ServiceTier.Standard, ServiceTier.Premium })
                                {
                                    <div class="col-md-4">
                                        <div class="card h-100 @(model.ServiceTier == tier ? "border-primary border-2" : "border")" 
                                             style="cursor: pointer;" @onclick="() => SelectTier(tier)">
                                            <div class="card-body text-center">
                                                <div class="form-check d-flex justify-content-center mb-2">
                                                    <input class="form-check-input" type="radio" 
                                                           checked="@(model.ServiceTier == tier)" 
                                                           @onchange="() => SelectTier(tier)" />
                                                </div>
                                                <h5 class="card-title @(tier == ServiceTier.Premium ? "text-warning" : tier == ServiceTier.Standard ? "text-primary" : "")">
                                                    @tier.ToString()
                                                </h5>
                                                <ul class="list-unstyled text-start small mb-0">
                                                    @if (tier == ServiceTier.Basic)
                                                    {
                                                        <li><i class="bi bi-check text-success me-1"></i>1 annual tune-up</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>Priority scheduling</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>10% repair discount</li>
                                                    }
                                                    else if (tier == ServiceTier.Standard)
                                                    {
                                                        <li><i class="bi bi-check text-success me-1"></i>2 annual tune-ups</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>24hr priority response</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>15% repair discount</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>No dispatch fee</li>
                                                    }
                                                    else if (tier == ServiceTier.Premium)
                                                    {
                                                        <li><i class="bi bi-check text-success me-1"></i>2 tune-ups + 1 check</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>12hr priority response</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>20% repair discount</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>No dispatch fee</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>Free minor adjustments</li>
                                                        <li><i class="bi bi-check text-success me-1"></i>2 filters/year</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Basic Info -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Agreement Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-8">
                                    <label class="form-label">Agreement Name *</label>
                                    <InputText class="form-control" @bind-Value="model.Name" />
                                    <ValidationMessage For="@(() => model.Name)" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Type</label>
                                    <InputSelect class="form-select" @bind-Value="model.Type">
                                        @foreach (var t in Enum.GetValues<AgreementType>())
                                        {
                                            <option value="@t">@t</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Customer *</label>
                                    <InputSelect class="form-select" @bind-Value="model.CustomerId">
                                        <option value="0">Select customer...</option>
                                        @foreach (var customer in customers)
                                        {
                                            <option value="@customer.Id">@customer.Name</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => model.CustomerId)" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Status</label>
                                    <InputSelect class="form-select" @bind-Value="model.Status">
                                        @foreach (var s in Enum.GetValues<AgreementStatus>())
                                        {
                                            <option value="@s">@s</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Description</label>
                                    <InputTextArea class="form-control" rows="3" @bind-Value="model.Description" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Term -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Term</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Start Date</label>
                                    <InputDate class="form-control" @bind-Value="model.StartDate" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">End Date</label>
                                    <InputDate class="form-control" @bind-Value="model.EndDate" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Pricing</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Annual Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <InputNumber class="form-control" @bind-Value="model.AnnualPrice" step="0.01" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Visits Included</label>
                                    <InputNumber class="form-control" @bind-Value="model.IncludedVisitsPerYear" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Repair Discount %</label>
                                    <div class="input-group">
                                        <InputNumber class="form-control" @bind-Value="model.RepairDiscountPercent" step="1" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tier Benefits (Read-only display) -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0"><i class="bi bi-gift me-2"></i>Included Benefits (@model.ServiceTierDisplay)</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.PriorityService" id="priorityService" />
                                        <label class="form-check-label" for="priorityService">Priority Scheduling</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.WaiveTripCharge" id="waiveTripCharge" />
                                        <label class="form-check-label" for="waiveTripCharge">Waive Trip Charge</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.NoEmergencyDispatchFee" id="noDispatchFee" />
                                        <label class="form-check-label" for="noDispatchFee">No Emergency Dispatch Fee</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.FreeMinorAdjustments" id="freeAdjustments" />
                                        <label class="form-check-label" for="freeAdjustments">Free Minor Adjustments</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Filters/Year</label>
                                    <InputNumber class="form-control form-control-sm" @bind-Value="model.FiltersIncludedPerYear" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Response Time (hrs)</label>
                                    <InputNumber class="form-control form-control-sm" @bind-Value="model.ResponseTimeHours" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Renewal -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Renewal Settings</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.AutoRenew" id="autoRenew" />
                                        <label class="form-check-label" for="autoRenew">Auto Renew</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Reminder Days</label>
                                    <InputNumber class="form-control" @bind-Value="model.RenewalReminderDays" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isSaving">
                                    Cancel
                                </button>
                                <div class="d-flex gap-2">
                                    @if (!IsNew)
                                    {
                                        <button type="button" class="btn btn-outline-danger" @onclick="DeleteAgreement" disabled="@isSaving">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-2"></i>
                                        }
                                        @(IsNew ? "Create Agreement" : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        </div>
                    }
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private bool IsNew => !Id.HasValue;
    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = "";
    private ServiceAgreement model = new();
    private List<Customer> customers = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomersAsync();
        
        if (IsNew)
        {
            model = new ServiceAgreement
            {
                Type = AgreementType.Annual,
                Status = AgreementStatus.Draft,
                StartDate = DateTime.Today,
                EndDate = DateTime.Today.AddYears(1),
                AutoRenew = true,
                RenewalReminderDays = 30
            };
            isLoading = false;
        }
        else
        {
            await LoadAgreementAsync();
        }
    }

    private async Task LoadCustomersAsync()
    {
        await using var db = await DbFactory.CreateDbContextAsync();
        customers = await db.Customers
            .Where(c => c.Status == CustomerStatus.Active)
            .OrderBy(c => c.Name)
            .AsNoTracking()
            .ToListAsync();
    }

    private async Task LoadAgreementAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            var agreement = await db.ServiceAgreements.FirstOrDefaultAsync(a => a.Id == Id!.Value);

            if (agreement != null)
            {
                model = agreement;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load agreement: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            await using var db = await DbFactory.CreateDbContextAsync();

            if (IsNew)
            {
                // Generate agreement number
                var year = DateTime.Now.Year;
                var count = await db.ServiceAgreements.CountAsync(a => a.StartDate.Year == year) + 1;
                model.AgreementNumber = $"SA-{year}-{count:D4}";
                
                model.CreatedAt = DateTime.UtcNow;
                db.ServiceAgreements.Add(model);
            }
            else
            {
                db.ServiceAgreements.Update(model);
            }

            await db.SaveChangesAsync();

            Navigation.NavigateTo(IsNew ? "/agreements" : $"/agreements/{model.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteAgreement()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this agreement?"))
            return;

        try
        {
            isSaving = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            model.Status = AgreementStatus.Cancelled;
            db.ServiceAgreements.Update(model);
            await db.SaveChangesAsync();

            Navigation.NavigateTo("/agreements");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to cancel: {ex.Message}";
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsNew)
            Navigation.NavigateTo("/agreements");
        else
            Navigation.NavigateTo($"/agreements/{Id}");
    }

    private void SelectTier(ServiceTier tier)
    {
        model.ServiceTier = tier;
        model.ApplyTierDefaults();
    }
}
