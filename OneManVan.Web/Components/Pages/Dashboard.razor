@page "/dashboard"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@using OneManVan.Shared.Services

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject DashboardKpiService KpiService

<PageTitle>Dashboard - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Dashboard</h1>
        <small class="text-muted">Last updated: @DateTime.Now.ToString("MMM dd, yyyy h:mm tt")</small>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading dashboard data...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Error:</strong> @errorMessage
        </div>
    }
    else
    {
        <!-- Metric Cards -->
        <div class="row g-3 mb-4">
            <!-- Active Jobs Card -->
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 dashboard-card" @onclick="@(() => Navigation.NavigateTo("/jobs"))">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h6 class="text-muted mb-1">Active Jobs</h6>
                                <h2 class="mb-0">@metrics.ActiveJobs</h2>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded">
                                <i class="bi bi-briefcase text-primary fs-4"></i>
                            </div>
                        </div>
                        <small class="text-muted">
                            <i class="bi bi-arrow-up text-success"></i>
                            @metrics.JobsThisWeek this week
                        </small>
                    </div>
                </div>
            </div>

            <!-- Pending Invoices Card -->
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 dashboard-card" @onclick="@(() => Navigation.NavigateTo("/invoices"))">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h6 class="text-muted mb-1">Pending Invoices</h6>
                                <h2 class="mb-0">@metrics.PendingInvoices</h2>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded">
                                <i class="bi bi-receipt text-warning fs-4"></i>
                            </div>
                        </div>
                        <small class="text-muted">
                            @metrics.TotalInvoiceAmount.ToString("C") outstanding
                        </small>
                    </div>
                </div>
            </div>

            <!-- Total Customers Card -->
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 dashboard-card" @onclick="@(() => Navigation.NavigateTo("/customers"))">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h6 class="text-muted mb-1">Total Customers</h6>
                                <h2 class="mb-0">@metrics.TotalCustomers</h2>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                <i class="bi bi-people text-success fs-4"></i>
                            </div>
                        </div>
                        <small class="text-muted">
                            @metrics.ActiveCustomers active
                        </small>
                    </div>
                </div>
            </div>

            <!-- Revenue Card -->
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 dashboard-card" @onclick="@(() => Navigation.NavigateTo("/invoices"))">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h6 class="text-muted mb-1">This Month</h6>
                                <h2 class="mb-0">@metrics.RevenueThisMonth.ToString("C0")</h2>
                            </div>
                            <div class="bg-info bg-opacity-10 p-3 rounded">
                                <i class="bi bi-currency-dollar text-info fs-4"></i>
                            </div>
                        </div>
                        @if (kpis != null)
                        {
                            <small class="text-@GetChangeColor(kpis.Revenue.MonthOverMonthChange)">
                                <i class="bi bi-@GetChangeIcon(kpis.Revenue.MonthOverMonthChange)"></i>
                                @FormatChange(kpis.Revenue.MonthOverMonthChange) vs last month
                            </small>
                        }
                        else
                        {
                            <small class="text-muted">
                                Revenue from invoices
                            </small>
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (kpis != null)
        {
            <!-- Enhanced KPI Row -->
            <div class="row g-3 mb-4">
                <!-- Receivables Aging Card -->
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 dashboard-card" @onclick="@(() => Navigation.NavigateTo("/invoices"))">
                        <div class="card-header bg-white border-0 py-3">
                            <h6 class="mb-0"><i class="bi bi-clock-history text-warning me-2"></i>Receivables Aging</h6>
                        </div>
                        <div class="card-body pt-0">
                            <h4 class="text-warning mb-3">@kpis.Receivables.TotalOutstanding.ToString("C0")</h4>
                            <div class="progress mb-2" style="height: 8px;">
                                @{
                                    var total = kpis.Receivables.TotalOutstanding > 0 ? kpis.Receivables.TotalOutstanding : 1;
                                    var currentPct = (kpis.Receivables.Current / total) * 100;
                                    var d30Pct = (kpis.Receivables.Days1To30 / total) * 100;
                                    var d60Pct = (kpis.Receivables.Days31To60 / total) * 100;
                                    var d90Pct = (kpis.Receivables.Days61To90 / total) * 100;
                                    var d90PlusPct = (kpis.Receivables.Days90Plus / total) * 100;
                                }
                                <div class="progress-bar bg-success" style="width: @currentPct%"></div>
                                <div class="progress-bar bg-info" style="width: @d30Pct%"></div>
                                <div class="progress-bar bg-warning" style="width: @d60Pct%"></div>
                                <div class="progress-bar bg-orange" style="width: @d90Pct%"></div>
                                <div class="progress-bar bg-danger" style="width: @d90PlusPct%"></div>
                            </div>
                            <div class="d-flex justify-content-between small text-muted">
                                <span>Current: @kpis.Receivables.Current.ToString("C0")</span>
                                <span>90+: @kpis.Receivables.Days90Plus.ToString("C0")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estimates Pipeline -->
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 dashboard-card" @onclick="@(() => Navigation.NavigateTo("/estimates"))">
                        <div class="card-header bg-white border-0 py-3">
                            <h6 class="mb-0"><i class="bi bi-funnel text-primary me-2"></i>Estimates Pipeline</h6>
                        </div>
                        <div class="card-body pt-0">
                            <h4 class="text-primary mb-3">@kpis.Estimates.PendingValue.ToString("C0")</h4>
                            <div class="row text-center">
                                <div class="col">
                                    <div class="text-muted small">Sent</div>
                                    <strong>@kpis.Estimates.SentCount</strong>
                                </div>
                                <div class="col">
                                    <div class="text-muted small">Won</div>
                                    <strong class="text-success">@kpis.Estimates.AcceptedCount</strong>
                                </div>
                                <div class="col">
                                    <div class="text-muted small">Rate</div>
                                    <strong>@kpis.Estimates.ConversionRate.ToString("F0")%</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Service Agreements -->
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 dashboard-card" @onclick="@(() => Navigation.NavigateTo("/agreements"))">
                        <div class="card-header bg-white border-0 py-3">
                            <h6 class="mb-0"><i class="bi bi-file-earmark-check text-success me-2"></i>Service Agreements</h6>
                        </div>
                        <div class="card-body pt-0">
                            <h4 class="text-success mb-3">@kpis.ServiceAgreements.ActiveCount Active</h4>
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted">MRR</small>
                                <small><strong>@kpis.ServiceAgreements.MonthlyRecurringRevenue.ToString("C0")</strong></small>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">Expiring (30d)</small>
                                <small class="@(kpis.ServiceAgreements.ExpiringIn30Days > 0 ? "text-warning" : "")">
                                    <strong>@kpis.ServiceAgreements.ExpiringIn30Days</strong>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Inventory Alerts -->
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 dashboard-card" @onclick="@(() => Navigation.NavigateTo("/inventory"))">
                        <div class="card-header bg-white border-0 py-3">
                            <h6 class="mb-0"><i class="bi bi-box-seam text-info me-2"></i>Inventory</h6>
                        </div>
                        <div class="card-body pt-0">
                            <h4 class="text-info mb-3">@kpis.Inventory.TotalItems Items</h4>
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted">Low Stock</small>
                                <small class="@(kpis.Inventory.LowStockCount > 0 ? "text-warning" : "")">
                                    <strong>@kpis.Inventory.LowStockCount</strong>
                                </small>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">Out of Stock</small>
                                <small class="@(kpis.Inventory.OutOfStockCount > 0 ? "text-danger" : "")">
                                    <strong>@kpis.Inventory.OutOfStockCount</strong>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- New Cards Row -->
        <div class="row g-3 mb-4">
            <!-- Scheduled Jobs Card -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="bi bi-calendar-check text-success me-2"></i>
                                Scheduled Jobs
                            </h6>
                            <span class="badge bg-success">@scheduledJobs.Count</span>
                        </div>
                    </div>
                    <div class="card-body p-0" style="max-height: 300px; overflow-y: auto;">
                        @if (scheduledJobs.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var job in scheduledJobs.Take(5))
                                {
                                    <a href="/jobs/@job.Id" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@job.Title</h6>
                                                <small class="text-muted">@job.Customer?.DisplayName</small>
                                            </div>
                                            <div class="text-end ms-2">
                                                <small class="d-block text-success">
                                                    @job.ScheduledDate?.ToString("MMM dd")
                                                </small>
                                                <small class="text-muted">
                                                    @(job.ArrivalWindowStart?.ToString(@"h\:mm") ?? "--") - @(job.ArrivalWindowEnd?.ToString(@"h\:mm") ?? "--")
                                                </small>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-calendar-x fs-3 mb-2"></i>
                                <p class="mb-0">No scheduled jobs</p>
                            </div>
                        }
                    </div>
                    @if (scheduledJobs.Count > 5)
                    {
                        <div class="card-footer bg-white border-0 py-2 text-center">
                            <a href="/jobs?filter=scheduled" class="btn btn-sm btn-link">
                                View All @scheduledJobs.Count Scheduled Jobs
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Unscheduled Jobs Card -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="bi bi-clock-history text-warning me-2"></i>
                                Unscheduled Jobs
                            </h6>
                            <span class="badge bg-warning">@unscheduledJobs.Count</span>
                        </div>
                    </div>
                    <div class="card-body p-0" style="max-height: 300px; overflow-y: auto;">
                        @if (unscheduledJobs.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var job in unscheduledJobs.Take(5))
                                {
                                    <a href="/jobs/@job.Id" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@job.Title</h6>
                                                <small class="text-muted">@job.Customer?.DisplayName</small>
                                            </div>
                                            <span class="badge bg-@GetPriorityColor(job.Priority)">
                                                @job.Priority
                                            </span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(job.Description))
                                        {
                                            <small class="text-muted d-block mt-1">
                                                @(job.Description.Length > 60 ? job.Description.Substring(0, 60) + "..." : job.Description)
                                            </small>
                                        }
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-check-circle fs-3 mb-2"></i>
                                <p class="mb-0">All jobs are scheduled!</p>
                            </div>
                        }
                    </div>
                    @if (unscheduledJobs.Count > 5)
                    {
                        <div class="card-footer bg-white border-0 py-2 text-center">
                            <a href="/jobs?filter=unscheduled" class="btn btn-sm btn-link">
                                View All @unscheduledJobs.Count Unscheduled Jobs
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Notes Card -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="bi bi-sticky text-info me-2"></i>
                                Quick Notes
                            </h6>
                            <a href="/notes" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-plus-lg"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0" style="max-height: 300px; overflow-y: auto;">
                        @if (recentNotes.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var note in recentNotes.Take(5))
                                {
                                    <a href="/notes/@note.Id" class="list-group-item list-group-item-action" style="@(string.IsNullOrEmpty(note.Color) ? "" : $"border-left: 4px solid {note.Color};")">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                @if (!string.IsNullOrEmpty(note.Title))
                                                {
                                                    <h6 class="mb-1">
                                                        @if (note.IsPinned)
                                                        {
                                                            <i class="bi bi-pin-angle-fill text-danger me-1"></i>
                                                        }
                                                        @note.Title
                                                    </h6>
                                                }
                                                <p class="mb-1 small text-muted" style="white-space: pre-wrap;">
                                                    @(note.Content.Length > 80 ? note.Content.Substring(0, 80) + "..." : note.Content)
                                                </p>
                                            </div>
                                            @if (!string.IsNullOrEmpty(note.Category))
                                            {
                                                <span class="badge bg-secondary ms-2">@note.Category</span>
                                            }
                                        </div>
                                        <small class="text-muted">@note.CreatedAt.ToString("MMM dd, h:mm tt")</small>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-sticky fs-3 mb-2"></i>
                                <p class="mb-0">No notes yet</p>
                                <a href="/notes" class="btn btn-sm btn-primary mt-2">Create Note</a>
                            </div>
                        }
                    </div>
                    @if (recentNotes.Count > 5)
                    {
                        <div class="card-footer bg-white border-0 py-2 text-center">
                            <a href="/notes" class="btn btn-sm btn-link">
                                View All Notes
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="row g-3">
            <!-- Recent Jobs -->
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Jobs</h5>
                            <a href="/jobs" class="btn btn-sm btn-outline-primary">View All</a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (recentJobs.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Job #</th>
                                            <th>Customer</th>
                                            <th>Scheduled</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var job in recentJobs)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-secondary">@job.JobNumber</span>
                                                </td>
                                                <td>@job.Customer?.Name</td>
                                                <td>@job.ScheduledDate?.ToString("MMM dd")</td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(job.Status)">
                                                        @job.Status
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/jobs/@job.Id" class="btn btn-sm btn-outline-primary">View</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-briefcase fs-1 mb-2 d-block"></i>
                                <p>No recent jobs</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/jobs/new"))">
                                <i class="bi bi-plus-circle me-2"></i>New Job
                            </button>
                            <button class="btn btn-outline-primary" @onclick="@(() => Navigation.NavigateTo("/customers/new"))">
                                <i class="bi bi-person-plus me-2"></i>Add Customer
                            </button>
                            <button class="btn btn-outline-primary" @onclick="@(() => Navigation.NavigateTo("/invoices/new"))">
                                <i class="bi bi-receipt me-2"></i>Create Invoice
                            </button>
                            <button class="btn btn-outline-primary" @onclick="@(() => Navigation.NavigateTo("/estimates/new"))">
                                <i class="bi bi-file-earmark-text me-2"></i>New Estimate
                            </button>
                        </div>

                        <hr class="my-3" />

                        <h6 class="text-muted mb-3">System Status</h6>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small>Database</small>
                            <span class="badge bg-success">Connected</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small>Total Records</small>
                            <span class="badge bg-info">@(metrics.TotalCustomers + metrics.ActiveJobs)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
private bool isLoading = true;
private string errorMessage = "";
private DashboardMetrics metrics = new();
private DashboardKpis? kpis;
private List<Job> recentJobs = new();
private List<Job> scheduledJobs = new();
private List<Job> unscheduledJobs = new();
private List<QuickNote> recentNotes = new();

protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            await LoadDashboardDataAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load dashboard: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadDashboardDataAsync()
    {
        // Load enhanced KPIs
        kpis = await KpiService.GetAllKpisAsync();
        
        await using var db = await DbFactory.CreateDbContextAsync();

        // Load metrics from KPIs
        var startOfMonth = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
        var startOfWeek = DateTime.Now.AddDays(-(int)DateTime.Now.DayOfWeek);
        var today = DateTime.Today;

        metrics.TotalCustomers = kpis.Customers.TotalCustomers;
        metrics.ActiveCustomers = kpis.Customers.ActiveCustomers;
        metrics.ActiveJobs = kpis.Jobs.ScheduledCount + kpis.Jobs.InProgressCount;
        metrics.JobsThisWeek = kpis.Jobs.WeekJobCount;
        metrics.PendingInvoices = kpis.Receivables.OverdueCount;
        metrics.TotalInvoiceAmount = kpis.Receivables.TotalOutstanding;
        metrics.RevenueThisMonth = kpis.Revenue.MonthRevenue;

        // Load recent jobs
        recentJobs = await db.Jobs
            .Include(j => j.Customer)
            .OrderByDescending(j => j.CreatedAt)
            .Take(5)
            .AsNoTracking()
            .ToListAsync();

        // Load scheduled jobs (next 30 days)
        scheduledJobs = await db.Jobs
            .Include(j => j.Customer)
            .Where(j => j.ScheduledDate.HasValue && 
                        j.ScheduledDate >= today &&
                        j.ScheduledDate <= today.AddDays(30) &&
                        (j.Status == JobStatus.Draft || j.Status == JobStatus.Scheduled))
            .OrderBy(j => j.ScheduledDate)
            .AsNoTracking()
            .ToListAsync();

        // Load unscheduled jobs
        unscheduledJobs = await db.Jobs
            .Include(j => j.Customer)
            .Where(j => !j.ScheduledDate.HasValue &&
                        (j.Status == JobStatus.Draft || j.Status == JobStatus.Scheduled))
            .OrderByDescending(j => j.Priority)
            .ThenByDescending(j => j.CreatedAt)
            .AsNoTracking()
            .ToListAsync();

        // Load recent notes (pinned first, then recent)
        recentNotes = await db.QuickNotes
            .Where(n => !n.IsArchived)
            .OrderByDescending(n => n.IsPinned)
            .ThenByDescending(n => n.CreatedAt)
            .Take(5)
            .AsNoTracking()
            .ToListAsync();
    }

    private string GetStatusBadgeClass(JobStatus status)
    {
        return status switch
        {
            JobStatus.Scheduled => "bg-info",
            JobStatus.InProgress => "bg-warning",
            JobStatus.Completed => "bg-success",
            JobStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityColor(JobPriority priority)
    {
        return priority switch
        {
            JobPriority.Low => "secondary",
            JobPriority.Normal => "primary",
            JobPriority.High => "warning",
            JobPriority.Emergency => "danger",
            _ => "secondary"
        };
    }
    
    private string FormatChange(decimal change)
    {
        var sign = change >= 0 ? "+" : "";
        return $"{sign}{change:F1}%";
    }
    
    private string GetChangeColor(decimal change) => change >= 0 ? "success" : "danger";
    private string GetChangeIcon(decimal change) => change >= 0 ? "arrow-up" : "arrow-down";

