@page "/jobs/{Id:int}"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@using OneManVan.Shared.Services

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJobTimeClockService TimeClockService

<PageTitle>@(job?.Title ?? "Job") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (job == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Job not found
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/jobs">Jobs</a></li>
                        <li class="breadcrumb-item active">@(job.JobNumber ?? $"Job #{job.Id}")</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-3" style="width: 60px; height: 60px; font-size: 24px;">
                        <i class="bi bi-briefcase"></i>
                    </div>
                    <div>
                        <h1 class="h2 mb-1">@job.Title</h1>
                        @if (!string.IsNullOrEmpty(job.JobNumber))
                        {
                            <span class="badge bg-secondary me-1">@job.JobNumber</span>
                        }
                        <span class="badge @GetStatusBadge()">@job.Status</span>
                        <span class="badge @GetPriorityBadge()">@job.Priority</span>
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </button>
                <button class="btn btn-primary" @onclick="EditJob">
                    <i class="bi bi-pencil me-2"></i>Edit
                </button>
                <button class="btn btn-outline-danger" @onclick="ShowDeleteConfirmation">
                    <i class="bi bi-trash me-2"></i>Delete
                </button>
            </div>
        </div>

        <!-- Quick Action Bar -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body py-2">
                <div class="d-flex flex-wrap gap-2 align-items-center">
                    <span class="text-muted me-2">Quick Actions:</span>
                    @if (job.Status == JobStatus.Draft || job.Status == JobStatus.Scheduled || job.Status == JobStatus.OnHold)
                    {
                        <button class="btn btn-success btn-sm" @onclick="@(() => QuickStatusChange(JobStatus.InProgress))">
                            <i class="bi bi-play-fill me-1"></i>Start Job
                        </button>
                    }
                    @if (job.Status == JobStatus.InProgress)
                    {
                        <button class="btn btn-warning btn-sm" @onclick="@(() => QuickStatusChange(JobStatus.OnHold))">
                            <i class="bi bi-pause-fill me-1"></i>Pause
                        </button>
                        <button class="btn btn-success btn-sm" @onclick="@(() => QuickStatusChange(JobStatus.Completed))">
                            <i class="bi bi-check-lg me-1"></i>Complete
                        </button>
                    }
                    @if (job.Status != JobStatus.Cancelled && job.Status != JobStatus.Completed)
                    {
                        <button class="btn btn-outline-danger btn-sm" @onclick="@(() => QuickStatusChange(JobStatus.Cancelled))">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </button>
                    }
                    <div class="vr mx-2"></div>
                    @if (job.Status == JobStatus.Completed && !job.Invoices.Any())
                    {
                        <button class="btn btn-outline-primary btn-sm" @onclick="CreateInvoice">
                            <i class="bi bi-receipt me-1"></i>Create Invoice
                        </button>
                    }
                    @if (job.Invoices.Any())
                    {
                        <a href="/invoices/@job.Invoices.First().Id" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-receipt me-1"></i>View Invoice
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="row g-3">
            <!-- Main Info -->
            <div class="col-md-8">
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Job Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Job Type</label>
                                <span>@job.JobType</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Priority</label>
                                <span class="badge @GetPriorityBadge()">@job.Priority</span>
                            </div>
                            @if (!string.IsNullOrEmpty(job.Description))
                            {
                                <div class="col-12">
                                    <label class="text-muted small d-block mb-1">Description</label>
                                    <p class="mb-0">@job.Description</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Schedule -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Schedule</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Scheduled Date</label>
                                <span>@(job.ScheduledDate?.ToString("MMM dd, yyyy") ?? "Not scheduled")</span>
                            </div>
                            @if (job.ArrivalWindowStart.HasValue || job.ArrivalWindowEnd.HasValue)
                            {
                                <div class="col-md-6">
                                    <label class="text-muted small d-block mb-1">Arrival Window</label>
                                    <span>
                                        @(job.ArrivalWindowStart?.ToString(@"hh\:mm") ?? "-")
                                        - @(job.ArrivalWindowEnd?.ToString(@"hh\:mm") ?? "-")
                                    </span>
                                </div>
                            }
                            @if (job.RequestedDate.HasValue)
                            {
                                <div class="col-md-6">
                                    <label class="text-muted small d-block mb-1">Customer Requested</label>
                                    <span>@job.RequestedDate.Value.ToString("MMM dd, yyyy")</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Notes -->
                @if (!string.IsNullOrEmpty(job.Notes))
                {
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Notes</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@job.Notes</p>
                        </div>
                    </div>
                }

                <!-- Workers & Time Tracking -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Workers & Time Tracking</h5>
                        <button class="btn btn-sm btn-outline-primary" @onclick="ShowAddWorkerModal">
                            <i class="bi bi-person-plus me-1"></i>Add Worker
                        </button>
                    </div>
                    <div class="card-body">
                        @if (jobWorkers.Count == 0)
                        {
                            <div class="text-center text-muted py-3">
                                <i class="bi bi-people" style="font-size: 2rem;"></i>
                                <p class="mt-2 mb-0">No workers assigned. Add workers to track time.</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Worker</th>
                                            <th>Role</th>
                                            <th>Status</th>
                                            <th class="text-end">Hours</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var worker in jobWorkers)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-2" style="width: 32px; height: 32px; font-size: 12px;">
                                                            @(worker.Employee?.FirstName?.Substring(0, 1))@(worker.Employee?.LastName?.Substring(0, 1))
                                                        </div>
                                                        <div>
                                                            <span class="fw-semibold">@worker.Employee?.DisplayName</span>
                                                            @if (worker.HourlyRateOverride.HasValue)
                                                            {
                                                                <br /><small class="text-muted">@worker.HourlyRateOverride.Value.ToString("C")/hr</small>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>@(worker.Role ?? "Worker")</td>
                                                <td>
                                                    @if (worker.IsClockedIn)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-clock me-1"></i>Clocked In
                                                            @if (worker.ActiveTimeEntry != null)
                                                            {
                                                                <span class="ms-1">(@worker.ActiveTimeEntry.DurationDisplay)</span>
                                                            }
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Not Clocked In</span>
                                                    }
                                                </td>
                                                <td class="text-end">@worker.TotalHoursWorked.ToString("N2") hrs</td>
                                                <td class="text-center">
                                                    @if (worker.IsClockedIn)
                                                    {
                                                        <button class="btn btn-sm btn-warning me-1" @onclick="@(() => StartBreak(worker))" title="Take Break">
                                                            <i class="bi bi-cup-hot"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-danger" @onclick="@(() => ClockOut(worker))" title="Clock Out">
                                                            <i class="bi bi-box-arrow-right"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-success me-1" @onclick="@(() => ClockIn(worker))" title="Clock In">
                                                            <i class="bi bi-box-arrow-in-right"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger" @onclick="@(() => RemoveWorker(worker))" title="Remove">
                                                            <i class="bi bi-person-x"></i>
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot class="table-light">
                                        <tr>
                                            <td colspan="3" class="text-end"><strong>Total Hours:</strong></td>
                                            <td class="text-end"><strong>@jobWorkers.Sum(w => w.TotalHoursWorked).ToString("N2") hrs</strong></td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                    </div>
                </div>

                <!-- Time Entry History -->
                @if (timeEntries.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Time Entry History</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-sm mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Worker</th>
                                            <th>Type</th>
                                            <th>Start</th>
                                            <th>End</th>
                                            <th class="text-end">Duration</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var entry in timeEntries.Take(10))
                                        {
                                            <tr>
                                                <td>@(entry.Employee?.DisplayName ?? "Unknown")</td>
                                                <td>
                                                    <span class="badge @(entry.EntryType == TimeEntryType.Break ? "bg-warning" : "bg-primary")">
                                                        @entry.TypeDisplay
                                                    </span>
                                                </td>
                                                <td>@entry.StartTime.ToString("MMM dd, HH:mm")</td>
                                                <td>@(entry.EndTime?.ToString("HH:mm") ?? "-")</td>
                                                <td class="text-end">@entry.DurationDisplay</td>
                                                <td class="text-center">
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => ShowEditTimeEntryModal(entry))" title="Edit Time Entry">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- Customer Info -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Customer</h5>
                    </div>
                    <div class="card-body">
                        @if (job.Customer != null)
                        {
                            <a href="/customers/@job.CustomerId" class="text-decoration-none">
                                <div class="fw-semibold">@job.Customer.Name</div>
                            </a>
                            @if (!string.IsNullOrEmpty(job.Customer.Phone))
                            {
                                <div class="text-muted small mt-1">@job.Customer.Phone</div>
                            }
                            @if (!string.IsNullOrEmpty(job.Customer.Email))
                            {
                                <div class="text-muted small">@job.Customer.Email</div>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No customer</span>
                        }
                    </div>
                </div>

                <!-- Site Info -->
                @if (job.Site != null)
                {
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Service Location</h5>
                        </div>
                        <div class="card-body">
                            <div class="fw-semibold">@job.Site.Address</div>
                            @if (!string.IsNullOrEmpty(job.Site.City))
                            {
                                <div class="text-muted small">@job.Site.City, @job.Site.State @job.Site.ZipCode</div>
                            }
                        </div>
                    </div>
                }

                <!-- Asset Info -->
                @if (job.Asset != null)
                {
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Asset</h5>
                        </div>
                        <div class="card-body">
                            <a href="/assets/@job.AssetId" class="text-decoration-none">
                                <div class="fw-semibold">@(job.Asset.AssetName ?? $"{job.Asset.Brand} {job.Asset.Model}")</div>
                            </a>
                            <div class="text-muted small">Serial: @job.Asset.Serial</div>
                        </div>
                    </div>
                }

                <!-- Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" @onclick="EditJob">
                                <i class="bi bi-pencil me-2"></i>Edit Job
                            </button>
                            @if (job.Status == JobStatus.Completed)
                            {
                                <button class="btn btn-outline-success" @onclick="CreateInvoice">
                                    <i class="bi bi-receipt me-2"></i>Create Invoice
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<DeleteConfirmationModal 
    IsVisible="showDeleteModal"
    EntityType="job"
    EntityName="@(job?.Title)"
    AdditionalWarning="Related invoices and estimates may be affected."
    OnConfirm="DeleteJob"
    OnCancel="CancelDelete" />

@* Add Worker Modal *@
@if (showAddWorkerModal)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Worker to Job</h5>
                    <button type="button" class="btn-close" @onclick="CloseAddWorkerModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Search Employee</label>
                        <input type="text" class="form-control mb-2" 
                               placeholder="Type to filter employees..."
                               @bind="employeeSearchText" 
                               @bind:event="oninput" />
                        <select class="form-select" size="6" @bind="selectedEmployeeId">
                            <option value="0">Select an employee...</option>
                            @foreach (var emp in FilteredEmployees)
                            {
                                <option value="@emp.Id">@emp.DisplayName</option>
                            }
                        </select>
                        <small class="text-muted">@FilteredEmployees.Count() of @availableEmployees.Count employees</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role (Optional)</label>
                        <input type="text" class="form-control" @bind="newWorkerRole" placeholder="e.g., Lead, Helper, Apprentice" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Hourly Rate Override (Optional)</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" step="0.01" class="form-control" @bind="newWorkerHourlyRate" placeholder="Leave blank for employee default" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseAddWorkerModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="AddWorker" disabled="@(selectedEmployeeId == 0)">
                        <i class="bi bi-person-plus me-1"></i>Add Worker
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Edit Time Entry Modal *@
@if (showEditTimeEntryModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Time Entry</h5>
                    <button type="button" class="btn-close" @onclick="CloseEditTimeEntryModal"></button>
                </div>
                <div class="modal-body">
                    @if (editingTimeEntry != null)
                    {
                        <div class="mb-3">
                            <label class="form-label">Worker</label>
                            <input type="text" class="form-control" value="@(editingTimeEntry.Employee?.DisplayName ?? "Unknown")" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <select class="form-select" @bind="editEntryType">
                                <option value="@TimeEntryType.Labor">Labor</option>
                                <option value="@TimeEntryType.Travel">Travel</option>
                                <option value="@TimeEntryType.Break">Break</option>
                            </select>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Start Date</label>
                                <input type="date" class="form-control" @bind="editStartDate" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Start Time</label>
                                <input type="text" class="form-control" @bind="editStartTimeString" placeholder="HH:mm (e.g., 09:30)" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">End Date</label>
                                <input type="date" class="form-control" @bind="editEndDate" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">End Time</label>
                                <input type="text" class="form-control" @bind="editEndTimeString" placeholder="HH:mm (e.g., 17:00)" />
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(editTimeEntryError))
                        {
                            <div class="alert alert-danger mt-3">@editTimeEntryError</div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseEditTimeEntryModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveTimeEntry">
                        <i class="bi bi-check-lg me-1"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>
}

