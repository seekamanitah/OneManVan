@code {
[Parameter]
public int Id { get; set; }

private bool isLoading = true;
private Job? job;
private string? errorMessage;
private bool showDeleteModal = false;

// Worker management
private List<JobWorker> jobWorkers = new();
private List<TimeEntry> timeEntries = new();
private List<Employee> availableEmployees = new();
private bool showAddWorkerModal = false;
private int selectedEmployeeId = 0;
private string? newWorkerRole;
private decimal? newWorkerHourlyRate;
private string employeeSearchText = "";

private IEnumerable<Employee> FilteredEmployees => string.IsNullOrWhiteSpace(employeeSearchText)
    ? availableEmployees
    : availableEmployees.Where(e => 
        (e.DisplayName?.Contains(employeeSearchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
        (e.FirstName?.Contains(employeeSearchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
        (e.LastName?.Contains(employeeSearchText, StringComparison.OrdinalIgnoreCase) ?? false));

protected override async Task OnInitializedAsync()
{
    await LoadJobAsync();
    await LoadWorkersAndTimeEntriesAsync();
}

private async Task LoadJobAsync()
{
    try
    {
        isLoading = true;

        await using var db = await DbFactory.CreateDbContextAsync();
            
        job = await db.Jobs
        .Include(j => j.Customer)
        .Include(j => j.Site)
        .Include(j => j.Asset)
        .Include(j => j.Invoices)
        .AsNoTracking()
        .FirstOrDefaultAsync(j => j.Id == Id);
    }
    finally
    {
        isLoading = false;
    }
}

private async Task LoadWorkersAndTimeEntriesAsync()
{
    jobWorkers = await TimeClockService.GetJobWorkersAsync(Id);
        
    await using var db = await DbFactory.CreateDbContextAsync();
    timeEntries = await db.TimeEntries
        .Include(te => te.Employee)
        .Where(te => te.JobId == Id)
        .OrderByDescending(te => te.StartTime)
        .AsNoTracking()
        .ToListAsync();
}

    private void GoBack()
    {
        Navigation.NavigateTo("/jobs");
    }

    private void EditJob()
    {
        Navigation.NavigateTo($"/jobs/{Id}/edit");
    }

    private void CreateInvoice()
    {
        Navigation.NavigateTo($"/invoices/new?jobId={Id}");
    }

    private string GetStatusBadge()
    {
        return job?.Status switch
        {
            JobStatus.Draft => "bg-secondary",
            JobStatus.Scheduled => "bg-info",
            JobStatus.InProgress => "bg-primary",
            JobStatus.Completed => "bg-success",
            JobStatus.Cancelled => "bg-danger",
            JobStatus.OnHold => "bg-warning",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityBadge()
    {
        return job?.Priority switch
        {
            JobPriority.Low => "bg-secondary",
            JobPriority.Normal => "bg-info",
            JobPriority.High => "bg-warning",
            JobPriority.Urgent => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private async Task QuickStatusChange(JobStatus newStatus)
    {
        if (job == null) return;
        
        try
        {
            await using var context = await DbFactory.CreateDbContextAsync();
            var jobToUpdate = await context.Jobs.FindAsync(job.Id);
            if (jobToUpdate != null)
            {
                jobToUpdate.Status = newStatus;
                
                // Set timestamps based on status
                if (newStatus == JobStatus.InProgress && jobToUpdate.StartedAt == null)
                {
                    jobToUpdate.StartedAt = DateTime.Now;
                }
                else if (newStatus == JobStatus.Completed)
                {
                    jobToUpdate.CompletedAt = DateTime.Now;
                }
                
                await context.SaveChangesAsync();
                await LoadJobAsync();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to update status: {ex.Message}";
        }
    }

    private void ShowDeleteConfirmation() => showDeleteModal = true;
    private void CancelDelete() => showDeleteModal = false;

    private async Task DeleteJob()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var jobToDelete = await db.Jobs.FindAsync(Id);
            if (jobToDelete != null)
            {
