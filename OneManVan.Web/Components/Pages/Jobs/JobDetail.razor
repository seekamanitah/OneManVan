    // Time Entry Edit
    private bool showEditTimeEntryModal = false;
    private TimeEntry? editingTimeEntry;
    private TimeEntryType editEntryType;
    private DateTime editStartDate;
    private string editStartTimeString = "09:00";
    private DateTime? editEndDate;
    private string editEndTimeString = "";
    private string? editTimeEntryError;

    private void ShowEditTimeEntryModal(TimeEntry entry)
    {
        editingTimeEntry = entry;
        editEntryType = entry.EntryType;
        editStartDate = entry.StartTime.Date;
        editStartTimeString = entry.StartTime.ToString("HH:mm");
        editEndDate = entry.EndTime?.Date;
        editEndTimeString = entry.EndTime?.ToString("HH:mm") ?? "";
        editTimeEntryError = null;
        showEditTimeEntryModal = true;
    }

    private void CloseEditTimeEntryModal()
    {
        showEditTimeEntryModal = false;
        editingTimeEntry = null;
        editTimeEntryError = null;
    }

    private async Task SaveTimeEntry()
    {
        if (editingTimeEntry == null) return;

        try
        {
            if (!TimeSpan.TryParse(editStartTimeString, out var startTimeSpan))
            {
                editTimeEntryError = "Invalid start time format.";
                return;
            }

            var newStartTime = editStartDate.Add(startTimeSpan);
            DateTime? newEndTime = null;
            
            if (editEndDate.HasValue && !string.IsNullOrWhiteSpace(editEndTimeString))
            {
                if (!TimeSpan.TryParse(editEndTimeString, out var endTimeSpan))
                {
                    editTimeEntryError = "Invalid end time format.";
                    return;
                }
                
                newEndTime = editEndDate.Value.Add(endTimeSpan);
                
                if (newEndTime <= newStartTime)
                {
                    editTimeEntryError = "End time must be after start time.";
                    return;
                }
            }

            await using var db = await DbFactory.CreateDbContextAsync();
            var entry = await db.TimeEntries.FindAsync(editingTimeEntry.Id);
            
            if (entry != null)
            {
                entry.EntryType = editEntryType;
                entry.StartTime = newStartTime;
                entry.EndTime = newEndTime;
                
                await db.SaveChangesAsync();
            }

            CloseEditTimeEntryModal();
            await LoadWorkersAndTimeEntriesAsync();
        }
        catch (Exception ex)
        {
            editTimeEntryError = $"Failed to save: {ex.Message}";
        }
    }
