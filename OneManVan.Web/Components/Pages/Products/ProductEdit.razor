@page "/products/new"
@page "/products/{Id:int}/edit"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(IsNew ? "New Product" : $"Edit: {model.ModelNumber}") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/products">Products</a></li>
                        <li class="breadcrumb-item active">@(IsNew ? "New" : "Edit")</li>
                    </ol>
                </nav>
                <h1 class="h2">@(IsNew ? "New Product" : $"Edit: {model.ProductName ?? model.ModelNumber}")</h1>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Basic Info -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Product Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Manufacturer *</label>
                                    <InputText class="form-control" @bind-Value="model.Manufacturer" />
                                    <ValidationMessage For="@(() => model.Manufacturer)" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Model Number *</label>
                                    <InputText class="form-control" @bind-Value="model.ModelNumber" />
                                    <ValidationMessage For="@(() => model.ModelNumber)" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Product Name</label>
                                    <InputText class="form-control" @bind-Value="model.ProductName" placeholder="Display name (optional)" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Product Number</label>
                                    <InputText class="form-control" @bind-Value="model.ProductNumber" placeholder="Auto-generated if blank" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Category</label>
                                    <InputSelect class="form-select" @bind-Value="model.Category">
                                        @foreach (var cat in Enum.GetValues<ProductCategory>())
                                        {
                                            <option value="@cat">@cat</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Equipment Type</label>
                                    <InputSelect class="form-select" @bind-Value="model.EquipmentType">
                                        @foreach (var et in Enum.GetValues<EquipmentType>())
                                        {
                                            <option value="@et">@et</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Fuel Type</label>
                                    <InputSelect class="form-select" @bind-Value="model.FuelType">
                                        @foreach (var ft in Enum.GetValues<FuelType>())
                                        {
                                            <option value="@ft">@ft</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Description</label>
                                    <InputTextArea class="form-control" rows="3" @bind-Value="model.Description" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Specifications -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Specifications</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Tonnage (x10)</label>
                                    <InputNumber class="form-control" @bind-Value="model.TonnageX10" placeholder="25 = 2.5 ton" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">SEER Rating</label>
                                    <InputNumber class="form-control" @bind-Value="model.SeerRating" step="0.1" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">AFUE Rating</label>
                                    <InputNumber class="form-control" @bind-Value="model.AfueRating" step="0.1" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Voltage</label>
                                    <InputNumber class="form-control" @bind-Value="model.Voltage" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Pricing</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">MSRP</label>
                                    <InputNumber class="form-control" @bind-Value="model.Msrp" step="0.01" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Wholesale Cost</label>
                                    <InputNumber class="form-control" @bind-Value="model.WholesaleCost" step="0.01" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Suggested Sell Price</label>
                                    <InputNumber class="form-control" @bind-Value="model.SuggestedSellPrice" step="0.01" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Warranty -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Warranty</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Parts Warranty (years)</label>
                                    <InputNumber class="form-control" @bind-Value="model.PartsWarrantyYears" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Labor Warranty (years)</label>
                                    <InputNumber class="form-control" @bind-Value="model.LaborWarrantyYears" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Compressor Warranty (years)</label>
                                    <InputNumber class="form-control" @bind-Value="model.CompressorWarrantyYears" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Registration Required</label>
                                    <div class="form-check mt-2">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.RegistrationRequired" />
                                        <label class="form-check-label">Yes</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.IsActive" />
                                        <label class="form-check-label">Active</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.IsDiscontinued" />
                                        <label class="form-check-label">Discontinued</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isSaving">
                                    Cancel
                                </button>
                                <div class="d-flex gap-2">
                                    @if (!IsNew)
                                    {
                                        <button type="button" class="btn btn-outline-danger" @onclick="DeleteProduct" disabled="@isSaving">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-2"></i>
                                        }
                                        @(IsNew ? "Create Product" : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        </div>
                    }
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private bool IsNew => !Id.HasValue;
    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = "";
    private Product model = new();

    protected override async Task OnInitializedAsync()
    {
        if (IsNew)
        {
            model = new Product
            {
                IsActive = true,
                Category = ProductCategory.Unknown,
                EquipmentType = EquipmentType.Unknown,
                FuelType = FuelType.Unknown
            };
            isLoading = false;
        }
        else
        {
            await LoadProductAsync();
        }
    }

    private async Task LoadProductAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            var product = await db.Products
                .FirstOrDefaultAsync(p => p.Id == Id!.Value);

            if (product != null)
            {
                // Create a new instance to avoid tracking issues
                model = new Product
                {
                    Id = product.Id,
                    ProductNumber = product.ProductNumber,
                    Manufacturer = product.Manufacturer,
                    ModelNumber = product.ModelNumber,
                    SerialNumber = product.SerialNumber,
                    ProductName = product.ProductName,
                    Description = product.Description,
                    Features = product.Features,
                    Category = product.Category,
                    EquipmentType = product.EquipmentType,
                    FuelType = product.FuelType,
                    RefrigerantType = product.RefrigerantType,
                    RefrigerantChargeOz = product.RefrigerantChargeOz,
                    TonnageX10 = product.TonnageX10,
                    CoolingBtu = product.CoolingBtu,
                    HeatingBtu = product.HeatingBtu,
                    SeerRating = product.SeerRating,
                    Seer2Rating = product.Seer2Rating,
                    EerRating = product.EerRating,
                    AfueRating = product.AfueRating,
                    HspfRating = product.HspfRating,
                    Hspf2Rating = product.Hspf2Rating,
                    Voltage = product.Voltage,
                    PhaseType = product.PhaseType,
                    Amperage = product.Amperage,
                    MinCircuitAmpacity = product.MinCircuitAmpacity,
                    MaxOvercurrentProtection = product.MaxOvercurrentProtection,
                    FilterSize = product.FilterSize,
                    FilterType = product.FilterType,
                    WeightLbs = product.WeightLbs,
                    HeightIn = product.HeightIn,
                    WidthIn = product.WidthIn,
                    DepthIn = product.DepthIn,
                    IndoorUnitModel = product.IndoorUnitModel,
                    OutdoorUnitModel = product.OutdoorUnitModel,
                    Msrp = product.Msrp,
                    WholesaleCost = product.WholesaleCost,
                    SuggestedSellPrice = product.SuggestedSellPrice,
                    LaborHoursEstimate = product.LaborHoursEstimate,
                    InstallationNotes = product.InstallationNotes,
                    PartsWarrantyYears = product.PartsWarrantyYears,
                    CompressorWarrantyYears = product.CompressorWarrantyYears,
                    HeatExchangerWarrantyYears = product.HeatExchangerWarrantyYears,
                    LaborWarrantyYears = product.LaborWarrantyYears,
                    RegistrationRequired = product.RegistrationRequired,
                    IsActive = product.IsActive,
                    IsDiscontinued = product.IsDiscontinued
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load product: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            await using var db = await DbFactory.CreateDbContextAsync();

            if (IsNew)
            {
                // Generate product number if empty
                if (string.IsNullOrEmpty(model.ProductNumber))
                {
                    var count = await db.Products.CountAsync() + 1;
                    model.ProductNumber = $"P-{count:D4}";
                }
                
                model.CreatedAt = DateTime.UtcNow;
                db.Products.Add(model);
            }
            else
            {
                db.Products.Update(model);
            }

            await db.SaveChangesAsync();

            Navigation.NavigateTo(IsNew ? "/products" : $"/products/{model.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteProduct()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this product?"))
            return;

        try
        {
            isSaving = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            model.IsActive = false;
            db.Products.Update(model);
            await db.SaveChangesAsync();

            Navigation.NavigateTo("/products");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete: {ex.Message}";
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsNew)
            Navigation.NavigateTo("/products");
        else
            Navigation.NavigateTo($"/products/{Id}");
    }
}
