@page "/products/{Id:int}"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>@(product?.ProductName ?? product?.ModelNumber ?? "Product") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (product == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Product not found
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/products">Products</a></li>
                        <li class="breadcrumb-item active">@product.ModelNumber</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-3" style="width: 60px; height: 60px; font-size: 24px;">
                        <i class="bi bi-box"></i>
                    </div>
                    <div>
                        <h1 class="h2 mb-1">@(product.ProductName ?? product.ModelNumber)</h1>
                        <p class="text-muted mb-0">@product.Manufacturer @product.ModelNumber</p>
                        @if (product.IsDiscontinued)
                        {
                            <span class="badge bg-warning">Discontinued</span>
                        }
                        else if (product.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </button>
                <button class="btn btn-primary" @onclick="EditProduct">
                    <i class="bi bi-pencil me-2"></i>Edit
                </button>
            </div>
        </div>

        <div class="row g-3">
            <!-- Main Info -->
            <div class="col-md-8">
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Product Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Manufacturer</label>
                                <span class="fw-semibold">@product.Manufacturer</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Model Number</label>
                                <span>@product.ModelNumber</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Product Number</label>
                                <span>@(product.ProductNumber ?? "-")</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Category</label>
                                <span>@product.Category</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Equipment Type</label>
                                <span>@product.EquipmentType</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Fuel Type</label>
                                <span>@product.FuelType</span>
                            </div>
                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                <div class="col-12">
                                    <label class="text-muted small d-block mb-1">Description</label>
                                    <p class="mb-0">@product.Description</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Specifications -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Specifications</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (product.TonnageX10.HasValue)
                            {
                                <div class="col-md-4">
                                    <label class="text-muted small d-block mb-1">Tonnage</label>
                                    <span>@((product.TonnageX10.Value / 10.0).ToString("F1")) ton</span>
                                </div>
                            }
                            @if (product.SeerRating.HasValue)
                            {
                                <div class="col-md-4">
                                    <label class="text-muted small d-block mb-1">SEER Rating</label>
                                    <span>@product.SeerRating</span>
                                </div>
                            }
                            @if (product.AfueRating.HasValue)
                            {
                                <div class="col-md-4">
                                    <label class="text-muted small d-block mb-1">AFUE Rating</label>
                                    <span>@product.AfueRating%</span>
                                </div>
                            }
                            @if (product.Voltage.HasValue)
                            {
                                <div class="col-md-4">
                                    <label class="text-muted small d-block mb-1">Voltage</label>
                                    <span>@product.Voltage V</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Pricing -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Pricing</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="text-muted small d-block mb-1">MSRP</label>
                                <span>@(product.Msrp?.ToString("C") ?? "-")</span>
                            </div>
                            <div class="col-md-4">
                                <label class="text-muted small d-block mb-1">Wholesale Cost</label>
                                <span>@(product.WholesaleCost?.ToString("C") ?? "-")</span>
                            </div>
                            <div class="col-md-4">
                                <label class="text-muted small d-block mb-1">Suggested Sell Price</label>
                                <span class="fw-bold text-success">@(product.SuggestedSellPrice?.ToString("C") ?? "-")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- Warranty Info -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Warranty</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="text-muted small d-block mb-1">Parts Warranty</label>
                            <span>@(product.PartsWarrantyYears ?? 0) years</span>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small d-block mb-1">Labor Warranty</label>
                            <span>@(product.LaborWarrantyYears ?? 0) years</span>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small d-block mb-1">Compressor Warranty</label>
                            <span>@(product.CompressorWarrantyYears ?? 0) years</span>
                        </div>
                        <div>
                            <label class="text-muted small d-block mb-1">Registration Required</label>
                            <span>@(product.RegistrationRequired ? "Yes" : "No")</span>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" @onclick="EditProduct">
                                <i class="bi bi-pencil me-2"></i>Edit Product
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .avatar-circle {
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }
</style>

@code {
    [Parameter]
    public int Id { get; set; }

    private bool isLoading = true;
    private Product? product;

    protected override async Task OnInitializedAsync()
    {
        await LoadProductAsync();
    }

    private async Task LoadProductAsync()
    {
        try
        {
            isLoading = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            
            product = await db.Products
                .AsNoTracking()
                .FirstOrDefaultAsync(p => p.Id == Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/products");
    }

    private void EditProduct()
    {
        Navigation.NavigateTo($"/products/{Id}/edit");
    }
}
