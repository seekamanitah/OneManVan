@code {
[Parameter]
public int? NoteId { get; set; }

private List<QuickNote> notes = new();
private QuickNote newNote = new();
private QuickNote? editingNote;
private bool isLoading = true;
private bool showNewNoteForm = false;
private string searchText = "";
private string filterCategory = "";
private string filterLinkedTo = "";
private bool showArchived = false;
private string statusMessage = "";
private bool isError = false;

// Entity linking lists
private List<Customer> customers = new();
private List<Site> sites = new();
private List<Job> jobs = new();
private List<Asset> assets = new();

    private IEnumerable<QuickNote> FilteredNotes => notes
        .Where(n => showArchived || !n.IsArchived)
        .Where(n => string.IsNullOrEmpty(filterCategory) || n.Category == filterCategory)
        .Where(n => string.IsNullOrEmpty(filterLinkedTo) || 
                    (filterLinkedTo == "Customer" && n.CustomerId.HasValue) ||
                    (filterLinkedTo == "Site" && n.SiteId.HasValue) ||
                    (filterLinkedTo == "Job" && n.JobId.HasValue) ||
                    (filterLinkedTo == "Asset" && n.AssetId.HasValue) ||
                    (filterLinkedTo == "None" && !n.IsLinked))
        .Where(n => string.IsNullOrEmpty(searchText) || 
                    (n.Title?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    n.Content.Contains(searchText, StringComparison.OrdinalIgnoreCase))
        .OrderByDescending(n => n.IsPinned)
        .ThenByDescending(n => n.CreatedAt);

    protected override async Task OnInitializedAsync()
    {
        await LoadNotes();
        await LoadEntityLists();
    }

    private async Task LoadEntityLists()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            customers = await db.Customers.OrderBy(c => c.FirstName).ThenBy(c => c.LastName).ToListAsync();
        sites = await db.Sites.OrderBy(s => s.SiteName).ToListAsync();
            jobs = await db.Jobs.OrderByDescending(j => j.CreatedAt).Take(100).ToListAsync();
            assets = await db.Assets.OrderBy(a => a.AssetName).ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading entity lists: {ex.Message}");
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        if (NoteId.HasValue && notes.Any())
        {
            var note = notes.FirstOrDefault(n => n.Id == NoteId.Value);
            if (note != null)
            {
                EditNote(note);
            }
        }
    }

    private async Task LoadNotes()
    {
        isLoading = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            notes = await db.QuickNotes
                .OrderByDescending(n => n.IsPinned)
                .ThenByDescending(n => n.CreatedAt)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading notes: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowNewNoteForm()
    {
        showNewNoteForm = true;
        newNote = new QuickNote();
    }

    private void CancelNewNote()
    {
        showNewNoteForm = false;
        newNote = new QuickNote();
    }

    private async Task SaveNote()
    {
        if (string.IsNullOrWhiteSpace(newNote.Content))
        {
            statusMessage = "Please enter note content";
            isError = true;
            return;
        }

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            newNote.CreatedAt = DateTime.UtcNow;
            newNote.UpdatedAt = DateTime.UtcNow;
            db.QuickNotes.Add(newNote);
            await db.SaveChangesAsync();
            
            statusMessage = "Note saved successfully!";
            isError = false;
            showNewNoteForm = false;
            newNote = new QuickNote();
            await LoadNotes();
        }
        catch (Exception ex)
        {
            statusMessage = $"Error saving note: {ex.Message}";
            isError = true;
            Console.WriteLine($"Error saving note: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
    }

    private void EditNote(QuickNote note)
    {
        editingNote = new QuickNote
        {
            Id = note.Id,
            Title = note.Title,
            Content = note.Content,
            Category = note.Category,
            Color = note.Color,
            IsPinned = note.IsPinned,
            IsArchived = note.IsArchived,
            CreatedAt = note.CreatedAt,
            CustomerId = note.CustomerId,
            SiteId = note.SiteId,
            JobId = note.JobId,
            AssetId = note.AssetId
        };
    }

    private void CancelEdit()
    {
        editingNote = null;
        // Navigate back to notes list (clears the ID parameter)
        if (NoteId.HasValue)
        {
            Navigation.NavigateTo("/notes");
        }
    }

    private async Task SaveEditedNote()
    {
        if (editingNote == null) return;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var note = await db.QuickNotes.FindAsync(editingNote.Id);
            if (note != null)
            {
                note.Title = editingNote.Title;
                note.Content = editingNote.Content;
                note.Category = editingNote.Category;
                note.Color = editingNote.Color;
                note.CustomerId = editingNote.CustomerId;
                note.SiteId = editingNote.SiteId;
                note.JobId = editingNote.JobId;
                note.AssetId = editingNote.AssetId;
                note.UpdatedAt = DateTime.UtcNow;
                await db.SaveChangesAsync();
            }
            
            editingNote = null;
            await LoadNotes();
            
            // Navigate back to notes list (clears the ID parameter)
            if (NoteId.HasValue)
            {
                Navigation.NavigateTo("/notes");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating note: {ex.Message}");
        }
    }

    private async Task TogglePin(QuickNote note)
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var dbNote = await db.QuickNotes.FindAsync(note.Id);
            if (dbNote != null)
            {
                dbNote.IsPinned = !dbNote.IsPinned;
                dbNote.UpdatedAt = DateTime.UtcNow;
                await db.SaveChangesAsync();
            }
            await LoadNotes();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error toggling pin: {ex.Message}");
        }
    }

    private async Task ToggleArchive(QuickNote note)
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var dbNote = await db.QuickNotes.FindAsync(note.Id);
            if (dbNote != null)
            {
                dbNote.IsArchived = !dbNote.IsArchived;
                dbNote.UpdatedAt = DateTime.UtcNow;
                await db.SaveChangesAsync();
            }
            await LoadNotes();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error archiving note: {ex.Message}");
        }
    }

    private async Task DeleteNote(QuickNote note)
        {
            try
            {
                await using var db = await DbFactory.CreateDbContextAsync();
                var dbNote = await db.QuickNotes.FindAsync(note.Id);
                if (dbNote != null)
                {
                    db.QuickNotes.Remove(dbNote);
                    await db.SaveChangesAsync();
                }
                await LoadNotes();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting note: {ex.Message}");
            }
        }

        private string GetCustomerName(int customerId)
        {
            var customer = customers.FirstOrDefault(c => c.Id == customerId);
            return customer?.FullName ?? $"Customer #{customerId}";
        }

        private string GetSiteName(int siteId)
        {
            var site = sites.FirstOrDefault(s => s.Id == siteId);
            return site?.SiteName ?? $"Site #{siteId}";
        }

        private string GetJobName(int jobId)
        {
            var job = jobs.FirstOrDefault(j => j.Id == jobId);
            return job?.JobNumber ?? job?.Title ?? $"Job #{jobId}";
        }

        private string GetAssetName(int assetId)
        {
            var asset = assets.FirstOrDefault(a => a.Id == assetId);
            return asset?.AssetNumber ?? asset?.AssetName ?? $"Asset #{assetId}";
        }

        private string? TruncateText(string? text, int maxLength)
        {
            if (string.IsNullOrEmpty(text)) return null;
            return text.Length <= maxLength ? text : text.Substring(0, maxLength) + "...";
        }
}
