@page "/assets"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@inject OneManVanDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Assets - TradeFlow</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Assets</h1>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="CreateAsset">
                <span class="bi bi-plus-circle"></span> New Asset
            </button>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Search assets..." 
                   @bind="searchText" @bind:event="oninput" @bind:after="FilterAssets" />
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (filteredAssets == null || !filteredAssets.Any())
    {
        <div class="alert alert-info">
            No assets found. Click "New Asset" to add one.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Asset Tag</th>
                        <th>Customer</th>
                        <th>Equipment Type</th>
                        <th>Manufacturer</th>
                        <th>Model</th>
                        <th>Serial</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asset in filteredAssets)
                    {
                        <tr>
                            <td>@asset.AssetTag</td>
                            <td>@(asset.Customer?.Name ?? "N/A")</td>
                            <td>@asset.EquipmentType</td>
                            <td>@asset.Brand</td>
                            <td>@asset.Model</td>
                            <td>@asset.Serial</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(asset.Status)">
                                    @asset.Status
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" 
                                        @onclick="() => ViewAsset(asset.Id)">
                                    View
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Asset>? assets;
    private List<Asset>? filteredAssets;
    private string searchText = string.Empty;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadAssets();
    }

    private async Task LoadAssets()
    {
        loading = true;
        try
        {
            assets = await DbContext.Assets
                .Include(a => a.Customer)
                .OrderBy(a => a.AssetTag)
                .ToListAsync();
            filteredAssets = assets;
        }
        finally
        {
            loading = false;
        }
    }

    private void FilterAssets()
    {
        if (assets == null) return;

        if (string.IsNullOrWhiteSpace(searchText))
        {
            filteredAssets = assets;
        }
        else
        {
            var search = searchText.ToLower();
            filteredAssets = assets
                .Where(a => 
                    (a.AssetTag?.ToLower().Contains(search) ?? false) ||
                    (a.Brand?.ToLower().Contains(search) ?? false) ||
                    (a.Model?.ToLower().Contains(search) ?? false) ||
                    (a.Serial?.ToLower().Contains(search) ?? false) ||
                    (a.Customer?.Name?.ToLower().Contains(search) ?? false))
                .ToList();
        }
    }

    private string GetStatusBadgeClass(OneManVan.Shared.Models.Enums.AssetStatus status)
    {
        return status switch
        {
            OneManVan.Shared.Models.Enums.AssetStatus.Active => "bg-success",
            OneManVan.Shared.Models.Enums.AssetStatus.Inactive => "bg-secondary",
            _ => "bg-info"
        };
    }

    private void CreateAsset()
    {
        Navigation.NavigateTo("/assets/new");
    }

    private void ViewAsset(int id)
    {
        Navigation.NavigateTo($"/assets/{id}");
    }
}
