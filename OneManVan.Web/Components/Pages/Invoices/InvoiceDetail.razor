@page "/invoices/{Id:int}"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(invoice?.InvoiceNumber ?? "Invoice") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (invoice == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Invoice not found
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/invoices">Invoices</a></li>
                        <li class="breadcrumb-item active">@invoice.InvoiceNumber</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-success bg-opacity-10 text-success me-3" style="width: 60px; height: 60px; font-size: 24px;">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div>
                        <h1 class="h2 mb-1">@invoice.InvoiceNumber</h1>
                        <span class="badge @GetStatusBadge()">@invoice.Status</span>
                        @if (invoice.IsOverdue)
                        {
                            <span class="badge bg-danger ms-1">Overdue</span>
                        }
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a href="/api/export/invoice/@Id/pdf" target="_blank" class="btn btn-outline-success">
                    <i class="bi bi-file-pdf me-2"></i>Download PDF
                </a>
                <button class="btn btn-outline-info" @onclick="PrintInvoice">
                    <i class="bi bi-printer me-2"></i>Print
                </button>
                <button class="btn btn-outline-primary" @onclick="EmailInvoice" disabled="@isSendingEmail">
                    @if (isSendingEmail)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    else
                    {
                        <i class="bi bi-envelope me-2"></i>
                    }
                    Email
                </button>
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </button>
                <button class="btn btn-primary" @onclick="EditInvoice">
                    <i class="bi bi-pencil me-2"></i>Edit
                </button>
                <button class="btn btn-outline-danger" @onclick="ShowDeleteConfirmation">
                    <i class="bi bi-trash me-2"></i>Delete
                </button>
            </div>
        </div>

        <div class="row g-3">
            <!-- Main Info -->
            <div class="col-md-8">
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Invoice Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Invoice Date</label>
                                <span>@invoice.InvoiceDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Due Date</label>
                                <span class="@(invoice.IsOverdue ? "text-danger fw-bold" : "")">
                                    @invoice.DueDate.ToString("MMM dd, yyyy")
                                </span>
                            </div>
                            @if (!string.IsNullOrEmpty(invoice.Notes))
                            {
                                <div class="col-12">
                                    <label class="text-muted small d-block mb-1">Notes</label>
                                    <p class="mb-0">@invoice.Notes</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Totals -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Payment Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="text-muted small d-block mb-1">Subtotal</label>
                                <span>@invoice.SubTotal.ToString("C")</span>
                            </div>
                            <div class="col-md-4">
                                <label class="text-muted small d-block mb-1">Tax (@invoice.TaxRate%)</label>
                                <span>@invoice.TaxAmount.ToString("C")</span>
                            </div>
                            <div class="col-md-4">
                                <label class="text-muted small d-block mb-1">Total</label>
                                <span class="h4">@invoice.Total.ToString("C")</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Amount Paid</label>
                                <span class="text-success">@invoice.AmountPaid.ToString("C")</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Balance Due</label>
                                <span class="h4 @(invoice.BalanceDue > 0 ? "text-warning" : "text-success")">
                                    @invoice.BalanceDue.ToString("C")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- Customer Info -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Customer</h5>
                    </div>
                    <div class="card-body">
                        @if (invoice.Customer != null)
                        {
                            <a href="/customers/@invoice.CustomerId" class="text-decoration-none">
                                <div class="fw-semibold">@invoice.Customer.Name</div>
                            </a>
                            @if (!string.IsNullOrEmpty(invoice.Customer.Email))
                            {
                                <div class="text-muted small">@invoice.Customer.Email</div>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No customer</span>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" @onclick="EditInvoice">
                                <i class="bi bi-pencil me-2"></i>Edit Invoice
                            </button>
                            @if (invoice.BalanceDue > 0)
                            {
                                <button class="btn btn-success" @onclick="RecordPayment">
                                    <i class="bi bi-cash me-2"></i>Record Payment
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<DeleteConfirmationModal 
    IsVisible="showDeleteModal"
    EntityType="invoice"
    EntityName="@(invoice?.InvoiceNumber)"
    AdditionalWarning="Payment records may be affected."
    OnConfirm="DeleteInvoice"
    OnCancel="CancelDelete" />

@* Record Payment Modal *@
@if (showPaymentModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-cash me-2"></i>Record Payment</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="ClosePaymentModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label text-muted small">Invoice Balance Due</label>
                        <div class="h4 text-warning">@invoice?.BalanceDue.ToString("C")</div>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <label class="form-label">Payment Amount *</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" class="form-control" @bind="paymentAmount" step="0.01" min="0.01" />
                        </div>
                        <button type="button" class="btn btn-link btn-sm p-0 mt-1" @onclick="SetFullBalance">
                            Pay Full Balance (@invoice?.BalanceDue.ToString("C"))
                        </button>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Payment Method *</label>
                        <select class="form-select" @bind="paymentMethod">
                            <option value="@PaymentMethod.Cash">Cash</option>
                            <option value="@PaymentMethod.Check">Check</option>
                            <option value="@PaymentMethod.CreditCard">Credit Card</option>
                            <option value="@PaymentMethod.DebitCard">Debit Card</option>
                            <option value="@PaymentMethod.BankTransfer">Bank Transfer</option>
                            <option value="@PaymentMethod.Digital">Digital Payment (Venmo, Zelle, etc.)</option>
                            <option value="@PaymentMethod.Financing">Financing</option>
                            <option value="@PaymentMethod.Other">Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Payment Date</label>
                        <input type="date" class="form-control" @bind="paymentDate" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reference Number</label>
                        <input type="text" class="form-control" @bind="paymentReference" placeholder="Check #, confirmation code, etc." />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea class="form-control" @bind="paymentNotes" rows="2" placeholder="Optional payment notes..."></textarea>
                    </div>
                    @if (!string.IsNullOrEmpty(paymentError))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>@paymentError
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="ClosePaymentModal">Cancel</button>
                    <button class="btn btn-success" @onclick="SavePayment" disabled="@isSavingPayment">
                        @if (isSavingPayment)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-check-circle me-2"></i>Record Payment
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .avatar-circle {
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }
</style>

@code {
[Parameter]
public int Id { get; set; }

private bool isLoading = true;
private bool isSendingEmail = false;
private string? emailMessage;
private Invoice? invoice;
private bool showDeleteModal = false;

// Payment modal state
private bool showPaymentModal = false;
private bool isSavingPayment = false;
private decimal paymentAmount = 0;
private PaymentMethod paymentMethod = PaymentMethod.Cash;
private DateTime paymentDate = DateTime.Today;
private string? paymentReference;
private string? paymentNotes;
private string? paymentError;

protected override async Task OnInitializedAsync()
{
    await LoadInvoiceAsync();
    }

    private async Task LoadInvoiceAsync()
    {
        try
        {
            isLoading = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            
            invoice = await db.Invoices
                .Include(i => i.Customer)
                .AsNoTracking()
                .FirstOrDefaultAsync(i => i.Id == Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack() => Navigation.NavigateTo("/invoices");
    private void EditInvoice() => Navigation.NavigateTo($"/invoices/{Id}/edit");
    
    private void RecordPayment()
    {
        // Reset payment form
        paymentAmount = invoice?.BalanceDue ?? 0;
        paymentMethod = PaymentMethod.Cash;
        paymentDate = DateTime.Today;
        paymentReference = null;
        paymentNotes = null;
        paymentError = null;
        showPaymentModal = true;
    }
    
    private void ClosePaymentModal()
    {
        showPaymentModal = false;
        paymentError = null;
    }
    
    private void SetFullBalance()
    {
        paymentAmount = invoice?.BalanceDue ?? 0;
    }
    
    private async Task SavePayment()
    {
        paymentError = null;
        
        if (paymentAmount <= 0)
        {
            paymentError = "Payment amount must be greater than zero.";
            return;
        }
        
        if (invoice != null && paymentAmount > invoice.BalanceDue)
        {
            paymentError = $"Payment amount cannot exceed balance due ({invoice.BalanceDue:C}).";
            return;
        }
        
        isSavingPayment = true;
        
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            // Create the payment record
            var payment = new Payment
            {
                InvoiceId = Id,
                Amount = paymentAmount,
                Method = paymentMethod,
                PaymentDate = paymentDate,
                ReferenceNumber = paymentReference,
                Notes = paymentNotes,
                CreatedAt = DateTime.UtcNow
            };
            payment.CalculateNetAmount();
            
            db.Payments.Add(payment);
            
            // Update invoice
            var inv = await db.Invoices.FindAsync(Id);
            if (inv != null)
            {
                inv.AmountPaid += paymentAmount;
                
                // Update status based on payment
                if (inv.AmountPaid >= inv.Total)
                {
                    inv.Status = InvoiceStatus.Paid;
                    inv.PaidAt = DateTime.UtcNow;
                }
                else if (inv.AmountPaid > 0)
                {
                    inv.Status = InvoiceStatus.PartiallyPaid;
                }
            }
            
            await db.SaveChangesAsync();
            
            showPaymentModal = false;
            await LoadInvoiceAsync();
        }
        catch (Exception ex)
        {
            paymentError = $"Failed to save payment: {ex.Message}";
        }
        finally
        {
            isSavingPayment = false;
        }
    }
    
    private async Task PrintInvoice()
    {
        // Open PDF in new tab, then trigger print dialog
        await JSRuntime.InvokeVoidAsync("open", $"/api/export/invoice/{Id}/pdf", "_blank");
    }


    private async Task EmailInvoice()
    {
        if (invoice?.Customer?.Email == null)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Customer does not have an email address. Please add one first.");
            return;
        }

        isSendingEmail = true;
        emailMessage = null;
        StateHasChanged();

        try
        {
            using var http = new HttpClient();
            http.BaseAddress = new Uri(Navigation.BaseUri);
            var response = await http.PostAsync($"/api/export/invoice/{Id}/email", null);
            
            if (response.IsSuccessStatusCode)
            {
                emailMessage = $"Invoice emailed to {invoice.Customer.Email}";
            }
            else
            {
                emailMessage = "Failed to send email. Please check email configuration in settings.";
            }
        }
        catch (Exception ex)
        {
            emailMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSendingEmail = false;
            if (emailMessage != null)
            {
                await JSRuntime.InvokeVoidAsync("alert", emailMessage);
            }
        }
    }

    private string GetStatusBadge() => invoice?.Status switch
    {
        InvoiceStatus.Draft => "bg-secondary",
        InvoiceStatus.Sent => "bg-info",
        InvoiceStatus.PartiallyPaid => "bg-warning",
        InvoiceStatus.Paid => "bg-success",
        InvoiceStatus.Overdue => "bg-danger",
        InvoiceStatus.Cancelled => "bg-dark",
        _ => "bg-secondary"
    };

    private void ShowDeleteConfirmation() => showDeleteModal = true;
    private void CancelDelete() => showDeleteModal = false;

    private async Task DeleteInvoice()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var invoiceToDelete = await db.Invoices.FindAsync(Id);
            if (invoiceToDelete != null)
            {
                // Soft delete - mark as deleted instead of removing
                invoiceToDelete.IsDeleted = true;
                invoiceToDelete.DeletedAt = DateTime.UtcNow;
                await db.SaveChangesAsync();
                Navigation.NavigateTo("/invoices");
            }
        }
        catch
        {
            showDeleteModal = false;
        }
    }
}
