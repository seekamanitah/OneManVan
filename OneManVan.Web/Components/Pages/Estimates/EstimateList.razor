@page "/estimates"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Estimates - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0">Estimates</h1>
            <p class="text-muted mb-0">Create and manage customer estimates</p>
        </div>
        <div class="d-flex gap-2">
            <ImportButton EntityType="estimates" EntityDisplayName="Estimates" DuplicateField="EstimateNumber" OnImportComplete="OnImportComplete" />
            <ExportButton EntityType="estimates" />
            <button class="btn btn-primary" @onclick="CreateEstimate">
                <i class="bi bi-plus-circle me-2"></i>New Estimate
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <small class="text-muted d-block">Total Value</small>
                    <h3 class="mb-0">@totalValue.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <small class="text-muted d-block">Pending</small>
                    <h3 class="mb-0">@pendingCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <small class="text-muted d-block">Accepted</small>
                    <h3 class="mb-0 text-success">@acceptedCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <small class="text-muted d-block">Expired</small>
                    <h3 class="mb-0 text-danger">@expiredCount</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" 
                               placeholder="Search estimates..." 
                               @bind="searchText" 
                               @bind:event="oninput"
                               @onkeyup="OnSearchChanged" />
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="filterStatus">
                        <option value="">All Status</option>
                        <option value="Draft">Draft</option>
                        <option value="Sent">Sent</option>
                        <option value="Accepted">Accepted</option>
                        <option value="Declined">Rejected</option>
                        <option value="Expired">Expired</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100" @onclick="ApplyFilters">
                        <i class="bi bi-funnel me-2"></i>Filter
                    </button>
                </div>
                <div class="col-md-2">
                    <button class="btn @(showDeleted ? "btn-primary" : "btn-outline-secondary") w-100" @onclick="ToggleShowDeleted">
                        <i class="bi bi-@(showDeleted ? "eye-slash" : "eye") me-1"></i>@(showDeleted ? "Hide" : "Show") Deleted
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Estimate List -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                    <p class="mt-2 text-muted">Loading estimates...</p>
                </div>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger m-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                </div>
            }
            else if (filteredEstimates.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Estimate #</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Valid Until</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var estimate in filteredEstimates)
                            {
                                <tr class="@(estimate.IsDeleted ? "table-secondary" : "")" style="cursor: pointer;" @onclick="@(() => ViewEstimate(estimate.Id))">
                                    <td>
                                        <span class="badge bg-secondary">@estimate.Title</span>
                                        @if (estimate.IsDeleted)
                                        {
                                            <span class="badge bg-warning text-dark ms-2">Deleted</span>
                                        }
                                    </td>
                                    <td>@estimate.Customer?.Name</td>
                                    <td>@estimate.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (estimate.ExpiresAt.HasValue)
                                        {
                                            <span class="@(estimate.ExpiresAt < DateTime.Now ? "text-danger" : "")">
                                                @estimate.ExpiresAt.Value.ToString("MMM dd, yyyy")
                                            </span>
                                        }
                                    </td>
                                    <td>@estimate.Total.ToString("C")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(estimate.Status)">
                                            @estimate.Status
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" @onclick:stopPropagation="true">
                                            @if (estimate.IsDeleted)
                                            {
                                                <button class="btn btn-outline-success" title="Restore" @onclick="@(() => RestoreEstimate(estimate))">
                                                    <i class="bi bi-arrow-counterclockwise"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" title="Delete Permanently" @onclick="@(() => ShowPermanentDeleteConfirmation(estimate))">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-outline-primary" @onclick="@(() => ViewEstimate(estimate.Id))">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-secondary" @onclick="@(() => EditEstimate(estimate.Id))">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" title="Delete" @onclick="@(() => ShowDeleteConfirmation(estimate))">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            Showing @filteredEstimates.Count of @allEstimates.Count estimates
                        </small>
                        @if (filteredEstimates.Count < allEstimates.Count)
                        {
                            <button class="btn btn-sm btn-outline-primary" @onclick="LoadMore">
                                Load More
                            </button>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-file-earmark-text fs-1 text-muted mb-3 d-block"></i>
                    <h5>No estimates found</h5>
                    <p class="text-muted mb-3">Create your first estimate</p>
                    <button class="btn btn-primary" @onclick="CreateEstimate">
                        <i class="bi bi-plus-circle me-2"></i>New Estimate
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<DeleteConfirmationModal 
    IsVisible="showDeleteModal"
    EntityType="estimate"
    EntityName="@(estimateToDelete?.Title)"
    OnConfirm="DeleteEstimate"
    OnCancel="CancelDelete" />

<DeleteConfirmationModal 
    IsVisible="showPermanentDeleteModal"
    EntityType="estimate"
    EntityName="@(estimateToPermanentlyDelete?.Title)"
    AdditionalWarning="This will permanently delete the estimate and cannot be undone."
    OnConfirm="PermanentlyDeleteEstimate"
    OnCancel="CancelPermanentDelete" />

@code {
    private bool isLoading = true;
    private string errorMessage = "";
    private List<Estimate> allEstimates = new();
    private List<Estimate> filteredEstimates = new();
    
    private string searchText = "";
    private string filterStatus = "";
    private int displayCount = 50;
    private bool showDeleted = false;

    // Summary stats
    private decimal totalValue = 0;
    private int pendingCount = 0;
    private int acceptedCount = 0;
    private int expiredCount = 0;
    
    private bool showDeleteModal = false;
    private Estimate? estimateToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadEstimatesAsync();
    }

    private async Task LoadEstimatesAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = "";

            await using var db = await DbFactory.CreateDbContextAsync();
            
            var query = db.Estimates
                .Include(e => e.Customer)
                .AsQueryable();

            // Filter deleted estimates unless showing them
            if (!showDeleted)
            {
                query = query.Where(e => !e.IsDeleted);
            }

            allEstimates = await query
                .OrderByDescending(e => e.CreatedAt)
                .AsNoTracking()
                .ToListAsync();

            // Calculate stats (only for non-deleted)
            var activeEstimates = allEstimates.Where(e => !e.IsDeleted).ToList();
            totalValue = activeEstimates.Where(e => e.Status == EstimateStatus.Sent || e.Status == EstimateStatus.Accepted).Sum(e => e.Total);
            pendingCount = activeEstimates.Count(e => e.Status == EstimateStatus.Sent);
            acceptedCount = activeEstimates.Count(e => e.Status == EstimateStatus.Accepted);
            expiredCount = activeEstimates.Count(e => e.Status == EstimateStatus.Expired || (e.ExpiresAt.HasValue && e.ExpiresAt < DateTime.Now));

            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load estimates: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        var query = allEstimates.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchText))
        {
            var search = searchText.ToLower();
            query = query.Where(e =>
                (e.Title?.ToLower().Contains(search) ?? false) ||
                (e.Customer?.Name?.ToLower().Contains(search) ?? false));
        }

        if (!string.IsNullOrWhiteSpace(filterStatus))
        {
            var status = Enum.Parse<EstimateStatus>(filterStatus);
            query = query.Where(e => e.Status == status);
        }

        filteredEstimates = query.Take(displayCount).ToList();
    }

    private void OnSearchChanged(KeyboardEventArgs e)
    {
        ApplyFilters();
    }

    private void LoadMore()
    {
        displayCount += 50;
        ApplyFilters();
    }

    private void CreateEstimate()
    {
        Navigation.NavigateTo("/estimates/new");
    }

    private void ViewEstimate(int id)
    {
        Navigation.NavigateTo($"/estimates/{id}");
    }

    private void EditEstimate(int id)
    {
        Navigation.NavigateTo($"/estimates/{id}/edit");
    }

    private string GetStatusBadgeClass(EstimateStatus status)
    {
        return status switch
        {
            EstimateStatus.Draft => "bg-secondary",
            EstimateStatus.Sent => "bg-info",
            EstimateStatus.Accepted => "bg-success",
            EstimateStatus.Declined => "bg-danger",
            EstimateStatus.Expired => "bg-warning",
            _ => "bg-secondary"
        };
    }

    private async Task OnImportComplete()
    {
        await LoadEstimatesAsync();
    }

    private void ShowDeleteConfirmation(Estimate estimate)
    {
        estimateToDelete = estimate;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        estimateToDelete = null;
    }

    private async Task DeleteEstimate()
    {
        if (estimateToDelete == null) return;
        
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var estimate = await db.Estimates.FindAsync(estimateToDelete.Id);
            if (estimate != null)
            {
                // Soft delete - mark as deleted instead of removing
                estimate.IsDeleted = true;
                estimate.DeletedAt = DateTime.UtcNow;
                await db.SaveChangesAsync();
            }
            
            showDeleteModal = false;
            estimateToDelete = null;
            await LoadEstimatesAsync();
        }
        catch
        {
            showDeleteModal = false;
            estimateToDelete = null;
        }
    }

    private async Task ToggleShowDeleted()
    {
        showDeleted = !showDeleted;
        await LoadEstimatesAsync();
    }

    private async Task RestoreEstimate(Estimate estimate)
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var dbEstimate = await db.Estimates.FindAsync(estimate.Id);
            if (dbEstimate != null)
            {
                dbEstimate.IsDeleted = false;
                dbEstimate.DeletedAt = null;
                dbEstimate.DeletedBy = null;
                await db.SaveChangesAsync();
            }
            await LoadEstimatesAsync();
        }
        catch
        {
            // Could show error toast
        }
    }

    private bool showPermanentDeleteModal = false;
    private Estimate? estimateToPermanentlyDelete;

    private void ShowPermanentDeleteConfirmation(Estimate estimate)
    {
        estimateToPermanentlyDelete = estimate;
        showPermanentDeleteModal = true;
    }

    private void CancelPermanentDelete()
    {
        showPermanentDeleteModal = false;
        estimateToPermanentlyDelete = null;
    }

    private async Task PermanentlyDeleteEstimate()
    {
        if (estimateToPermanentlyDelete == null) return;
        
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var estimate = await db.Estimates.FindAsync(estimateToPermanentlyDelete.Id);
            if (estimate != null)
            {
                db.Estimates.Remove(estimate);
                await db.SaveChangesAsync();
            }
            
            showPermanentDeleteModal = false;
            estimateToPermanentlyDelete = null;
            await LoadEstimatesAsync();
        }
        catch
        {
            showPermanentDeleteModal = false;
            estimateToPermanentlyDelete = null;
        }
    }
}
