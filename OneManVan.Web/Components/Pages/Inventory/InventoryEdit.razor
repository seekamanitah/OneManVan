@page "/inventory/new"
@page "/inventory/{Id:int}/edit"
@page "/inventory/{Id:int}/adjust"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@attribute [Authorize]
@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@GetPageTitle() - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/inventory">Inventory</a></li>
                        <li class="breadcrumb-item active">@GetPageTitle()</li>
                    </ol>
                </nav>
                <h1 class="h2">@GetPageTitle()</h1>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    @if (IsAdjust)
                    {
                        <!-- Stock Adjustment Mode -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0">Adjust Stock for: @model.Name</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Current Quantity</label>
                                        <input type="text" class="form-control" value="@originalQuantity @model.Unit" disabled />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Adjustment Type</label>
                                        <select class="form-select" @bind="adjustmentType">
                                            <option value="add">Add Stock</option>
                                            <option value="remove">Remove Stock</option>
                                            <option value="set">Set Quantity</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Quantity</label>
                                        <input type="number" class="form-control" @bind="adjustmentQuantity" min="0" step="1" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">New Quantity</label>
                                        <input type="text" class="form-control fw-bold" value="@GetNewQuantity() @model.Unit" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Basic Info -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0">Item Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label">Name *</label>
                                        <InputText class="form-control" @bind-Value="model.Name" />
                                        <ValidationMessage For="@(() => model.Name)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">SKU</label>
                                        <InputText class="form-control" @bind-Value="model.Sku" placeholder="Optional" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Part Number</label>
                                        <InputText class="form-control" @bind-Value="model.PartNumber" placeholder="Optional" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Category</label>
                                        <InputSelect class="form-select" @bind-Value="model.Category">
                                            @foreach (var cat in Enum.GetValues<InventoryCategory>())
                                            {
                                                <option value="@cat">@cat</option>
                                            }
                                        </InputSelect>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Unit</label>
                                        <InputText class="form-control" @bind-Value="model.Unit" placeholder="ea, box, ft, etc." />
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Description</label>
                                        <InputTextArea class="form-control" rows="3" @bind-Value="model.Description" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Stock & Pricing -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0">Stock & Pricing</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label">Quantity on Hand</label>
                                        <InputNumber class="form-control" @bind-Value="model.QuantityOnHand" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Reorder Point</label>
                                        <InputNumber class="form-control" @bind-Value="model.ReorderPoint" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Location</label>
                                        <InputText class="form-control" @bind-Value="model.Location" placeholder="Shelf, bin, etc." />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Cost</label>
                                        <InputNumber class="form-control" @bind-Value="model.Cost" step="0.01" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Price</label>
                                        <InputNumber class="form-control" @bind-Value="model.Price" step="0.01" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Supplier</label>
                                        <InputText class="form-control" @bind-Value="model.Supplier" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isSaving">
                                    Cancel
                                </button>
                                <div class="d-flex gap-2">
                                    @if (!IsNew && !IsAdjust)
                                    {
                                        <button type="button" class="btn btn-outline-danger" @onclick="DeleteItem" disabled="@isSaving">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-2"></i>
                                        }
                                        @(IsAdjust ? "Apply Adjustment" : IsNew ? "Create Item" : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        </div>
                    }
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private bool IsNew => !Id.HasValue;
    private bool IsAdjust => Navigation.Uri.Contains("/adjust");
    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = "";
    private InventoryItem model = new();

    // Adjustment mode fields
    private string adjustmentType = "add";
    private decimal adjustmentQuantity = 0;
    private decimal originalQuantity = 0;

    protected override async Task OnInitializedAsync()
    {
        if (IsNew)
        {
            model = new InventoryItem
            {
                Unit = "ea",
                Category = InventoryCategory.General,
                IsActive = true
            };
            isLoading = false;
        }
        else
        {
            await LoadItemAsync();
        }
    }

    private async Task LoadItemAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            var item = await db.InventoryItems
                .FirstOrDefaultAsync(i => i.Id == Id!.Value);

            if (item != null)
            {
                model = item;
                originalQuantity = item.QuantityOnHand;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load item: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private decimal GetNewQuantity()
    {
        return adjustmentType switch
        {
            "add" => originalQuantity + adjustmentQuantity,
            "remove" => Math.Max(0, originalQuantity - adjustmentQuantity),
            "set" => adjustmentQuantity,
            _ => originalQuantity
        };
    }

    private string GetPageTitle()
    {
        if (IsAdjust) return "Adjust Stock";
        if (IsNew) return "New Item";
        return $"Edit: {model.Name}";
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            await using var db = await DbFactory.CreateDbContextAsync();

            if (IsAdjust)
            {
                var item = await db.InventoryItems.FindAsync(Id!.Value);
                if (item != null)
                {
                    item.QuantityOnHand = GetNewQuantity();
                    item.LastRestockedAt = adjustmentType == "add" ? DateTime.UtcNow : item.LastRestockedAt;
                    await db.SaveChangesAsync();
                }
            }
            else if (IsNew)
            {
                model.CreatedAt = DateTime.UtcNow;
                db.InventoryItems.Add(model);
                await db.SaveChangesAsync();
            }
            else
            {
                db.InventoryItems.Update(model);
                await db.SaveChangesAsync();
            }

            Navigation.NavigateTo(IsNew ? "/inventory" : $"/inventory/{model.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteItem()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this item?"))
            return;

        try
        {
            isSaving = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            model.IsActive = false;
            db.InventoryItems.Update(model);
            await db.SaveChangesAsync();

            Navigation.NavigateTo("/inventory");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete: {ex.Message}";
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsNew)
            Navigation.NavigateTo("/inventory");
        else
            Navigation.NavigateTo($"/inventory/{Id}");
    }
}
