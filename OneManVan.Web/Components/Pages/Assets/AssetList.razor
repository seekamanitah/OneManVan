@page "/assets"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Assets - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0">Assets</h1>
            <p class="text-muted mb-0">Customer equipment and installations</p>
        </div>
        <div class="d-flex gap-2">
            <ExportButton EntityType="assets" />
            <button class="btn btn-primary" @onclick="CreateAsset">
                <i class="bi bi-plus-circle me-2"></i>Add Asset
            </button>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" 
                               placeholder="Search assets..." 
                               @bind="searchText" 
                               @bind:event="oninput"
                               @onkeyup="OnSearchChanged" />
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="filterType" @bind:after="ApplyFilters">
                        <option value="">All Types</option>
                        @foreach (var type in Enum.GetValues<EquipmentType>())
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" @bind="filterStatus" @bind:after="ApplyFilters">
                        <option value="">All Statuses</option>
                        @foreach (var status in Enum.GetValues<AssetStatus>())
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Asset List -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                    <p class="mt-2 text-muted">Loading assets...</p>
                </div>
            }
            else if (filteredAssets.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Asset</th>
                                <th>Customer</th>
                                <th>Type</th>
                                <th>Serial</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var asset in filteredAssets)
                            {
                                <tr style="cursor: pointer;" @onclick="@(() => ViewAsset(asset.Id))">
                                    <td>
                                        <div class="fw-semibold">@(asset.AssetName ?? asset.Nickname ?? $"{asset.Brand} {asset.Model}")</div>
                                        @if (!string.IsNullOrEmpty(asset.Location))
                                        {
                                            <small class="text-muted">@asset.Location</small>
                                        }
                                    </td>
                                    <td>@(asset.Customer?.Name ?? "-")</td>
                                    <td>@asset.EquipmentType</td>
                                    <td>
                                        <code class="text-muted">@asset.Serial</code>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadge(asset.Status)">@asset.Status</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" @onclick:stopPropagation="true">
                                            <button class="btn btn-outline-primary" @onclick="@(() => ViewAsset(asset.Id))">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-secondary" @onclick="@(() => EditAsset(asset.Id))">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white border-top">
                    <small class="text-muted">
                        Showing @filteredAssets.Count of @allAssets.Count assets
                    </small>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-tools fs-1 text-muted mb-3 d-block"></i>
                    <h5>No assets found</h5>
                    <p class="text-muted mb-3">Add your first asset</p>
                    <button class="btn btn-primary" @onclick="CreateAsset">
                        <i class="bi bi-plus-circle me-2"></i>Add Asset
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool isLoading = true;
    private List<Asset> allAssets = new();
    private List<Asset> filteredAssets = new();
    
    private string searchText = "";
    private string filterType = "";
    private string filterStatus = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadAssetsAsync();
    }

    private async Task LoadAssetsAsync()
    {
        try
        {
            isLoading = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            
            allAssets = await db.Assets
                .Include(a => a.Customer)
                .OrderByDescending(a => a.CreatedAt)
                .AsNoTracking()
                .ToListAsync();

            ApplyFilters();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        var query = allAssets.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchText))
        {
            var search = searchText.ToLower();
            query = query.Where(a =>
                (a.AssetName?.ToLower().Contains(search) ?? false) ||
                (a.Nickname?.ToLower().Contains(search) ?? false) ||
                a.Serial.ToLower().Contains(search) ||
                (a.Brand?.ToLower().Contains(search) ?? false) ||
                (a.Model?.ToLower().Contains(search) ?? false) ||
                (a.Customer?.Name?.ToLower().Contains(search) ?? false));
        }

        if (!string.IsNullOrWhiteSpace(filterType) && Enum.TryParse<EquipmentType>(filterType, out var type))
        {
            query = query.Where(a => a.EquipmentType == type);
        }

        if (!string.IsNullOrWhiteSpace(filterStatus) && Enum.TryParse<AssetStatus>(filterStatus, out var status))
        {
            query = query.Where(a => a.Status == status);
        }

        filteredAssets = query.ToList();
    }

    private void OnSearchChanged(KeyboardEventArgs e)
    {
        ApplyFilters();
    }

    private void CreateAsset()
    {
        Navigation.NavigateTo("/assets/new");
    }

    private void ViewAsset(int id)
    {
        Navigation.NavigateTo($"/assets/{id}");
    }

    private void EditAsset(int id)
    {
        Navigation.NavigateTo($"/assets/{id}/edit");
    }

    private string GetStatusBadge(AssetStatus status)
    {
        return status switch
        {
            AssetStatus.Active => "bg-success",
            AssetStatus.Inactive => "bg-secondary",
            AssetStatus.Decommissioned => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
