@page "/assets/new"
@page "/assets/{Id:int}/edit"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(IsNew ? "New Asset" : $"Edit Asset") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/assets">Assets</a></li>
                        <li class="breadcrumb-item active">@(IsNew ? "New" : "Edit")</li>
                    </ol>
                </nav>
                <h1 class="h2">@(IsNew ? "New Asset" : $"Edit: {model.AssetName ?? model.Serial}")</h1>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Basic Info -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Equipment Information</h5>
                        </div>
                        <div class="card-body">
                            <!-- Populate from Product -->
                            <div class="alert alert-info mb-3" role="alert">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <label class="form-label mb-1"><i class="bi bi-magic me-2"></i>Populate from Product</label>
                                        <InputSelect class="form-select" @bind-Value="selectedProductId" @bind-Value:after="PopulateFromProduct">
                                            <option value="">Select a product to auto-fill...</option>
                                            @foreach (var product in products)
                                            {
                                            <option value="@product.Id">@product.Manufacturer @product.ModelNumber - @product.Description</option>
                                            }
                                        </InputSelect>
                                        <small class="text-muted">Auto-fills brand, model, tonnage, SEER, and warranty info</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Customer</label>
                                    <InputSelect class="form-select" @bind-Value="model.CustomerId">
                                        <option value="">Select customer...</option>
                                        @foreach (var customer in customers)
                                        {
                                            <option value="@customer.Id">@customer.Name</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Company</label>
                                    <InputSelect class="form-select" @bind-Value="model.CompanyId">
                                        <option value="">Select company...</option>
                                        @foreach (var company in companies)
                                        {
                                            <option value="@company.Id">@company.Name</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Site</label>
                                    <InputSelect class="form-select" @bind-Value="model.SiteId">
                                        <option value="">Select site...</option>
                                        @foreach (var site in sites)
                                        {
                                            <option value="@site.Id">@site.SiteName</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Asset Name</label>
                                    <InputText class="form-control" @bind-Value="model.AssetName" placeholder="Optional friendly name" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Serial Number *</label>
                                    <InputText class="form-control" @bind-Value="model.Serial" />
                                    <ValidationMessage For="@(() => model.Serial)" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Asset Tag</label>
                                    <InputText class="form-control" @bind-Value="model.AssetTag" placeholder="Barcode/QR code" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Brand</label>
                                    <InputText class="form-control" @bind-Value="model.Brand" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Model</label>
                                    <InputText class="form-control" @bind-Value="model.Model" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Nickname</label>
                                    <InputText class="form-control" @bind-Value="model.Nickname" placeholder="e.g., Upstairs Unit" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Location</label>
                                    <InputText class="form-control" @bind-Value="model.Location" placeholder="Physical location" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Equipment Type -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Equipment Type</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Equipment Type</label>
                                    <InputSelect class="form-select" @bind-Value="model.EquipmentType">
                                        @foreach (var et in Enum.GetValues<EquipmentType>())
                                        {
                                            <option value="@et">@et</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Fuel Type</label>
                                    <InputSelect class="form-select" @bind-Value="model.FuelType">
                                        @foreach (var ft in Enum.GetValues<FuelType>())
                                        {
                                            <option value="@ft">@ft</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Status</label>
                                    <InputSelect class="form-select" @bind-Value="model.Status">
                                        @foreach (var s in Enum.GetValues<AssetStatus>())
                                        {
                                            <option value="@s">@s</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Unit Config</label>
                                    <InputSelect class="form-select" @bind-Value="model.UnitConfig">
                                        @foreach (var uc in Enum.GetValues<UnitConfig>())
                                        {
                                            <option value="@uc">@uc</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Capacity & Efficiency -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Capacity & Efficiency</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Tonnage</label>
                                    <InputNumber class="form-control" @bind-Value="model.TonnageX10" placeholder="e.g., 25 = 2.5 ton" />
                                    <small class="text-muted">x10 (25 = 2.5 ton)</small>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">BTU Rating</label>
                                    <InputNumber class="form-control" @bind-Value="model.BtuRating" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">SEER</label>
                                    <InputNumber class="form-control" @bind-Value="model.SeerRating" step="0.1" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">SEER2</label>
                                    <InputNumber class="form-control" @bind-Value="model.Seer2Rating" step="0.1" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">AFUE %</label>
                                    <InputNumber class="form-control" @bind-Value="model.AfueRating" step="0.01" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">HSPF</label>
                                    <InputNumber class="form-control" @bind-Value="model.HspfRating" step="0.1" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">HSPF2</label>
                                    <InputNumber class="form-control" @bind-Value="model.Hspf2Rating" step="0.1" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">EER</label>
                                    <InputNumber class="form-control" @bind-Value="model.EerRating" step="0.1" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Refrigerant & Electrical -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Refrigerant & Electrical</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Refrigerant Type</label>
                                    <InputSelect class="form-select" @bind-Value="model.RefrigerantType">
                                        @foreach (var rt in Enum.GetValues<RefrigerantType>())
                                        {
                                            <option value="@rt">@rt</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Charge (oz)</label>
                                    <InputNumber class="form-control" @bind-Value="model.RefrigerantChargeOz" step="0.1" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Voltage</label>
                                    <InputNumber class="form-control" @bind-Value="model.Voltage" placeholder="120, 240, 208" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Phase Type</label>
                                    <InputText class="form-control" @bind-Value="model.PhaseType" placeholder="Single, Three" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Filter Information -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Filter Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Filter Size</label>
                                    <InputText class="form-control" @bind-Value="model.FilterSize" placeholder="16x25x1" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Filter Type</label>
                                    <InputSelect class="form-select" @bind-Value="model.FilterType">
                                        @foreach (var ft in Enum.GetValues<FilterType>())
                                        {
                                            <option value="@ft">@ft</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Change Interval</label>
                                    <InputNumber class="form-control" @bind-Value="model.FilterChangeMonths" />
                                    <small class="text-muted">months</small>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Last Changed</label>
                                    <InputDate class="form-control" @bind-Value="model.LastFilterChange" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Next Due</label>
                                    <InputDate class="form-control" @bind-Value="model.NextFilterDue" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thermostat -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Thermostat</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Thermostat Brand</label>
                                    <InputText class="form-control" @bind-Value="model.ThermostatBrand" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Thermostat Model</label>
                                    <InputText class="form-control" @bind-Value="model.ThermostatModel" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Thermostat Type</label>
                                    <InputSelect class="form-select" @bind-Value="model.ThermostatType">
                                        @foreach (var tt in Enum.GetValues<ThermostatType>())
                                        {
                                            <option value="@tt">@tt</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-check mt-4">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.HasWifi" />
                                        <label class="form-check-label">WiFi Enabled</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Warranty -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Installation & Warranty</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Install Date</label>
                                    <InputDate class="form-control" @bind-Value="model.InstallDate" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Warranty Start</label>
                                    <InputDate class="form-control" @bind-Value="model.WarrantyStartDate" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Warranty Expiration</label>
                                    <InputDate class="form-control" @bind-Value="model.WarrantyExpiration" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Manufacture Date</label>
                                    <InputDate class="form-control" @bind-Value="model.ManufactureDate" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Installed By</label>
                                    <InputText class="form-control" @bind-Value="model.InstalledBy" />
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check mt-4">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.IsWarrantiedBySEHVAC" />
                                        <label class="form-check-label">Warrantied by SE HVAC</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check mt-4">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.IsRegisteredOnline" />
                                        <label class="form-check-label">Registered Online</label>
                                    </div>
                                </div>
                                @if (model.IsRegisteredOnline)
                                {
                                    <div class="col-md-4">
                                        <label class="form-label">Registration Date</label>
                                        <InputDate class="form-control" @bind-Value="model.RegistrationDate" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Registration Confirmation</label>
                                        <InputText class="form-control" @bind-Value="model.RegistrationConfirmation" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isSaving">
                                    Cancel
                                </button>
                                <div class="d-flex gap-2">
                                    @if (!IsNew)
                                    {
                                        <button type="button" class="btn btn-outline-danger" @onclick="DeleteAsset" disabled="@isSaving">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-2"></i>
                                        }
                                        @(IsNew ? "Create Asset" : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        </div>
                    }
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private bool IsNew => !Id.HasValue;
    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = "";
    private Asset model = new();
    private List<Customer> customers = new();
    private List<Company> companies = new();
    private List<Site> sites = new();
    private List<Product> products = new();
    private int? selectedProductId;

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomersAsync();
        
        if (IsNew)
        {
            model = new Asset
            {
                EquipmentType = EquipmentType.Unknown,
                FuelType = FuelType.Unknown,
                Status = AssetStatus.Active
            };
            isLoading = false;
        }
        else
        {
            await LoadAssetAsync();
        }
    }

    private async Task LoadCustomersAsync()
    {
        await using var db = await DbFactory.CreateDbContextAsync();
        customers = await db.Customers
            .Where(c => c.Status == CustomerStatus.Active)
            .OrderBy(c => c.Name)
            .AsNoTracking()
            .ToListAsync();

        companies = await db.Companies
            .OrderBy(c => c.Name)
            .AsNoTracking()
            .ToListAsync();

        sites = await db.Sites
            .OrderBy(s => s.SiteName)
            .AsNoTracking()
            .ToListAsync();

        products = await db.Products
            .OrderBy(p => p.Manufacturer).ThenBy(p => p.ModelNumber)
            .AsNoTracking()
            .ToListAsync();
    }

    private void PopulateFromProduct()
    {
        if (!selectedProductId.HasValue) return;
        
        var product = products.FirstOrDefault(p => p.Id == selectedProductId.Value);
        if (product == null) return;

        // Populate asset fields from product
        model.Brand = product.Manufacturer;
        model.Model = product.ModelNumber;
        model.EquipmentType = product.EquipmentType;
        model.FuelType = product.FuelType;
        model.TonnageX10 = product.TonnageX10;
        model.BtuRating = product.CoolingBtu ?? product.HeatingBtu;
        model.SeerRating = product.SeerRating;
        model.Seer2Rating = product.Seer2Rating;
        model.RefrigerantType = product.RefrigerantType;
        model.RefrigerantChargeOz = product.RefrigerantChargeOz;
        
        // Set warranty period if available
        if (product.PartsWarrantyYears.HasValue && product.PartsWarrantyYears > 0)
        {
            model.WarrantyStartDate = DateTime.Today;
            model.WarrantyExpiration = DateTime.Today.AddYears(product.PartsWarrantyYears.Value);
            model.PartsWarrantyYears = product.PartsWarrantyYears.Value;
        }
        if (product.LaborWarrantyYears.HasValue)
        {
            model.LaborWarrantyYears = product.LaborWarrantyYears.Value;
        }
        if (product.CompressorWarrantyYears.HasValue)
        {
            model.CompressorWarrantyYears = product.CompressorWarrantyYears.Value;
        }
    }

    private async Task LoadAssetAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            var asset = await db.Assets.FirstOrDefaultAsync(a => a.Id == Id!.Value);

            if (asset != null)
            {
                // Create a new instance to avoid tracking issues
                model = new Asset
                {
                    Id = asset.Id,
                    AssetNumber = asset.AssetNumber,
                    AssetName = asset.AssetName,
                    Description = asset.Description,
                    CustomerId = asset.CustomerId,
                    CompanyId = asset.CompanyId,
                    SiteId = asset.SiteId,
                    AssetTag = asset.AssetTag,
                    Serial = asset.Serial,
                    Brand = asset.Brand,
                    Model = asset.Model,
                    Nickname = asset.Nickname,
                    EquipmentType = asset.EquipmentType,
                    FuelType = asset.FuelType,
                    UnitConfig = asset.UnitConfig,
                    BtuRating = asset.BtuRating,
                    TonnageX10 = asset.TonnageX10,
                    SeerRating = asset.SeerRating,
                    Seer2Rating = asset.Seer2Rating,
                    AfueRating = asset.AfueRating,
                    HspfRating = asset.HspfRating,
                    Hspf2Rating = asset.Hspf2Rating,
                    EerRating = asset.EerRating,
                    Voltage = asset.Voltage,
                    PhaseType = asset.PhaseType,
                    RefrigerantType = asset.RefrigerantType,
                    RefrigerantChargeOz = asset.RefrigerantChargeOz,
                    FilterSize = asset.FilterSize,
                    FilterType = asset.FilterType,
                    FilterChangeMonths = asset.FilterChangeMonths,
                    LastFilterChange = asset.LastFilterChange,
                    NextFilterDue = asset.NextFilterDue,
                    ThermostatBrand = asset.ThermostatBrand,
                    ThermostatModel = asset.ThermostatModel,
                    ThermostatType = asset.ThermostatType,
                    HasWifi = asset.HasWifi,
                    ManufactureDate = asset.ManufactureDate,
                    InstallDate = asset.InstallDate,
                    InstalledBy = asset.InstalledBy,
                    IsWarrantiedBySEHVAC = asset.IsWarrantiedBySEHVAC,
                    WarrantyStartDate = asset.WarrantyStartDate,
                    WarrantyExpiration = asset.WarrantyExpiration,
                    WarrantyTermYears = asset.WarrantyTermYears,
                    PartsWarrantyYears = asset.PartsWarrantyYears,
                    LaborWarrantyYears = asset.LaborWarrantyYears,
                    IsRegisteredOnline = asset.IsRegisteredOnline,
                    RegistrationDate = asset.RegistrationDate,
                    RegistrationConfirmation = asset.RegistrationConfirmation,
                    CompressorWarrantyYears = asset.CompressorWarrantyYears,
                    HasExtendedWarranty = asset.HasExtendedWarranty,
                    ExtendedWarrantyEnd = asset.ExtendedWarrantyEnd,
                    WarrantyNotes = asset.WarrantyNotes,
                    Location = asset.Location,
                    PurchasePrice = asset.PurchasePrice,
                    EstimatedReplacementCost = asset.EstimatedReplacementCost,
                    ExpectedLifeYears = asset.ExpectedLifeYears,
                    LastServiceDate = asset.LastServiceDate,
                    ServiceIntervalMonths = asset.ServiceIntervalMonths,
                    NextServiceDue = asset.NextServiceDue,
                    Condition = asset.Condition,
                    ConditionNotes = asset.ConditionNotes,
                    DuctworkNotes = asset.DuctworkNotes,
                    TechnicalNotes = asset.TechnicalNotes,
                    Notes = asset.Notes,
                    PhotoPath = asset.PhotoPath,
                    Status = asset.Status,
                    CreatedAt = asset.CreatedAt,
                    DecommissionedDate = asset.DecommissionedDate,
                    ReplacedByAssetId = asset.ReplacedByAssetId
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load asset: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            await using var db = await DbFactory.CreateDbContextAsync();

            if (IsNew)
            {
                model.CreatedAt = DateTime.UtcNow;
                db.Assets.Add(model);
            }
            else
            {
                db.Assets.Update(model);
            }

            await db.SaveChangesAsync();

            Navigation.NavigateTo(IsNew ? "/assets" : $"/assets/{model.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteAsset()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this asset?"))
            return;

        try
        {
            isSaving = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            model.Status = AssetStatus.Decommissioned;
            model.DecommissionedDate = DateTime.UtcNow;
            db.Assets.Update(model);
            await db.SaveChangesAsync();

            Navigation.NavigateTo("/assets");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete: {ex.Message}";
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsNew)
            Navigation.NavigateTo("/assets");
        else
            Navigation.NavigateTo($"/assets/{Id}");
    }
}
