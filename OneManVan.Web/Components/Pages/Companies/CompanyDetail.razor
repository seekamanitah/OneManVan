@page "/companies/{Id:int}"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>@(company?.Name ?? "Company") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (company == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Company not found
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/companies">Companies</a></li>
                        <li class="breadcrumb-item active">@company.Name</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-3" style="width: 60px; height: 60px; font-size: 24px;">
                        @(company.Name?.FirstOrDefault())
                    </div>
                    <div>
                        <h1 class="h2 mb-1">@company.Name</h1>
                        <span class="badge @GetTypeBadge()">@company.CompanyType</span>
                        <span class="badge @(company.IsActive ? "bg-success" : "bg-secondary") ms-1">
                            @(company.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </button>
                <button class="btn btn-primary" @onclick="EditCompany">
                    <i class="bi bi-pencil me-2"></i>Edit
                </button>
            </div>
        </div>

        <div class="row g-3">
            <!-- Main Info -->
            <div class="col-md-8">
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Company Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (!string.IsNullOrEmpty(company.LegalName))
                            {
                                <div class="col-md-6">
                                    <label class="text-muted small d-block mb-1">Legal Name</label>
                                    <span>@company.LegalName</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(company.TaxId))
                            {
                                <div class="col-md-6">
                                    <label class="text-muted small d-block mb-1">Tax ID</label>
                                    <span>@company.TaxId</span>
                                </div>
                            }
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Email</label>
                                @if (!string.IsNullOrEmpty(company.Email))
                                {
                                    <a href="mailto:@company.Email">@company.Email</a>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block mb-1">Phone</label>
                                @if (!string.IsNullOrEmpty(company.Phone))
                                {
                                    <a href="tel:@company.Phone">@company.Phone</a>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(company.Website))
                            {
                                <div class="col-md-6">
                                    <label class="text-muted small d-block mb-1">Website</label>
                                    <a href="@company.Website" target="_blank">@company.Website</a>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(company.Industry))
                            {
                                <div class="col-md-6">
                                    <label class="text-muted small d-block mb-1">Industry</label>
                                    <span>@company.Industry</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Billing Address -->
                @if (!string.IsNullOrEmpty(company.BillingAddress))
                {
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Billing Address</h5>
                        </div>
                        <div class="card-body">
                            <address class="mb-0">
                                @company.BillingAddress<br />
                                @if (!string.IsNullOrEmpty(company.BillingCity) || !string.IsNullOrEmpty(company.BillingState))
                                {
                                    @company.BillingCity@(!string.IsNullOrEmpty(company.BillingCity) && !string.IsNullOrEmpty(company.BillingState) ? ", " : "")@company.BillingState @company.BillingZipCode
                                }
                            </address>
                        </div>
                    </div>
                }

                <!-- Notes -->
                @if (!string.IsNullOrEmpty(company.Notes))
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Notes</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0 text-muted">@company.Notes</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" @onclick="EditCompany">
                                <i class="bi bi-pencil me-2"></i>Edit Company
                            </button>
                            @if (!string.IsNullOrEmpty(company.Phone))
                            {
                                <a href="tel:@company.Phone" class="btn btn-outline-success">
                                    <i class="bi bi-telephone me-2"></i>Call
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(company.Email))
                            {
                                <a href="mailto:@company.Email" class="btn btn-outline-info">
                                    <i class="bi bi-envelope me-2"></i>Email
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!-- Created/Updated Info -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <small class="text-muted d-block">Created</small>
                        <span>@company.CreatedAt.ToString("MMM dd, yyyy")</span>
                        @if (company.UpdatedAt.HasValue)
                        {
                            <small class="text-muted d-block mt-2">Last Updated</small>
                            <span>@company.UpdatedAt.Value.ToString("MMM dd, yyyy")</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .avatar-circle {
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }
</style>

@code {
    [Parameter]
    public int Id { get; set; }

    private bool isLoading = true;
    private Company? company;

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanyAsync();
    }

    private async Task LoadCompanyAsync()
    {
        try
        {
            isLoading = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            
            company = await db.Companies
                .AsNoTracking()
                .FirstOrDefaultAsync(c => c.Id == Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack() => Navigation.NavigateTo("/companies");
    private void EditCompany() => Navigation.NavigateTo($"/companies/{Id}/edit");

    private string GetTypeBadge() => company?.CompanyType switch
    {
        CompanyType.Customer => "bg-primary",
        CompanyType.Vendor => "bg-secondary",
        CompanyType.Contractor => "bg-success",
        CompanyType.PropertyManagement => "bg-warning text-dark",
        _ => "bg-secondary"
    };
}
