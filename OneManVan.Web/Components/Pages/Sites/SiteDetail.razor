@page "/sites/{Id:int}"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>@(site?.Address ?? "Site") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (site == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Site not found
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/sites">Sites</a></li>
                        <li class="breadcrumb-item active">@(site.SiteNumber ?? $"S-{site.Id:D4}")</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-info bg-opacity-10 text-info me-3" style="width: 60px; height: 60px; font-size: 24px;">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                    <div>
                        <h1 class="h2 mb-1">@(site.SiteNumber ?? $"Site #{site.Id}")</h1>
                        <span class="text-muted">@site.Address</span>
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </button>
                <button class="btn btn-primary" @onclick="EditSite">
                    <i class="bi bi-pencil me-2"></i>Edit
                </button>
                <button class="btn btn-outline-danger" @onclick="ShowDeleteConfirmation">
                    <i class="bi bi-trash me-2"></i>Delete
                </button>
            </div>
        </div>

        <div class="row g-3">
            <!-- Main Info -->
            <div class="col-md-8">
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">Location Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="text-muted small d-block mb-1">Full Address</label>
                                <address class="mb-0">
                                    @site.Address<br />
                                    @if (!string.IsNullOrEmpty(site.Address2))
                                    {
                                        @site.Address2<br />
                                    }
                                    @if (!string.IsNullOrEmpty(site.City) || !string.IsNullOrEmpty(site.State))
                                    {
                                        @site.City@(!string.IsNullOrEmpty(site.City) && !string.IsNullOrEmpty(site.State) ? ", " : "")@site.State @site.ZipCode
                                    }
                                </address>
                            </div>
                            @if (site.Latitude.HasValue && site.Longitude.HasValue)
                            {
                                <div class="col-md-6">
                                    <label class="text-muted small d-block mb-1">Coordinates</label>
                                    <span>@site.Latitude.Value.ToString("F6"), @site.Longitude.Value.ToString("F6")</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Notes -->
                @if (!string.IsNullOrEmpty(site.Notes))
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Notes</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0 text-muted">@site.Notes</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- Customer -->
                @if (site.Customer != null)
                {
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Customer</h5>
                        </div>
                        <div class="card-body">
                            <a href="/customers/@site.CustomerId" class="text-decoration-none">
                                <div class="fw-semibold">@site.Customer.Name</div>
                            </a>
                        </div>
                    </div>
                }

                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" @onclick="EditSite">
                                <i class="bi bi-pencil me-2"></i>Edit Site
                            </button>
                            @if (site.Latitude.HasValue && site.Longitude.HasValue)
                            {
                                <a href="https://www.google.com/maps?q=@site.Latitude,@site.Longitude" 
                                   target="_blank" class="btn btn-outline-info">
                                    <i class="bi bi-map me-2"></i>View on Map
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<DeleteConfirmationModal 
    IsVisible="showDeleteModal"
    EntityType="site"
    EntityName="@(site?.SiteNumber ?? site?.Address)"
    AdditionalWarning="Related jobs and assets may be affected."
    OnConfirm="DeleteSite"
    OnCancel="CancelDelete" />

<style>
    .avatar-circle {
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }
</style>

@code {
    [Parameter]
    public int Id { get; set; }

    private bool isLoading = true;
    private Site? site;
    private bool showDeleteModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadSiteAsync();
    }

    private async Task LoadSiteAsync()
    {
        try
        {
            isLoading = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            
            site = await db.Sites
                .Include(s => s.Customer)
                .AsNoTracking()
                .FirstOrDefaultAsync(s => s.Id == Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack() => Navigation.NavigateTo("/sites");
    private void EditSite() => Navigation.NavigateTo($"/sites/{Id}/edit");

    private void ShowDeleteConfirmation() => showDeleteModal = true;
    private void CancelDelete() => showDeleteModal = false;

    private async Task DeleteSite()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var siteToDelete = await db.Sites.FindAsync(Id);
            if (siteToDelete != null)
            {
                db.Sites.Remove(siteToDelete);
                await db.SaveChangesAsync();
                Navigation.NavigateTo("/sites");
            }
        }
        catch
        {
            showDeleteModal = false;
        }
    }
}
