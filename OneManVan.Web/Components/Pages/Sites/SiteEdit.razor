@page "/sites/new"
@page "/sites/{Id:int}/edit"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums

@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(IsNew ? "New Site" : $"Edit Site") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/sites">Sites</a></li>
                        <li class="breadcrumb-item active">@(IsNew ? "New" : "Edit")</li>
                    </ol>
                </nav>
                <h1 class="h2">@(IsNew ? "New Site" : $"Edit: {model.Address}")</h1>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Customer -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Location Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Customer *</label>
                                    <InputSelect class="form-select" @bind-Value="model.CustomerId">
                                        <option value="0">Select customer...</option>
                                        @foreach (var customer in customers)
                                        {
                                            <option value="@customer.Id">@customer.Name</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => model.CustomerId)" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Site Name</label>
                                    <InputText class="form-control" @bind-Value="model.SiteName" placeholder="e.g., Main Office, Rental #1" />
                                    <small class="text-muted">Friendly name to distinguish this location</small>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Company (Optional)</label>
                                    <InputSelect class="form-select" @bind-Value="model.CompanyId">
                                        <option value="">No company</option>
                                        @foreach (var company in companies)
                                        {
                                            <option value="@company.Id">@company.Name</option>
                                        }
                                    </InputSelect>
                                    <small class="text-muted">Link this site to a company</small>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Location Description</label>
                                    <InputTextArea class="form-control" rows="2" @bind-Value="model.LocationDescription" placeholder="Additional details about this location..." />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Address</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Street Address *</label>
                                    <InputText class="form-control" @bind-Value="model.Address" />
                                    <ValidationMessage For="@(() => model.Address)" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Address Line 2</label>
                                    <InputText class="form-control" @bind-Value="model.Address2" placeholder="Unit, Suite, Apt..." />
                                </div>
                                <div class="col-md-5">
                                    <label class="form-label">City</label>
                                    <InputText class="form-control" @bind-Value="model.City" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">State</label>
                                    <InputText class="form-control" @bind-Value="model.State" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">ZIP Code</label>
                                    <InputText class="form-control" @bind-Value="model.ZipCode" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Notes</h5>
                        </div>
                        <div class="card-body">
                            <InputTextArea class="form-control" rows="3" @bind-Value="model.Notes" placeholder="Site notes, access instructions..." />
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isSaving">
                                    Cancel
                                </button>
                                <div class="d-flex gap-2">
                                    @if (!IsNew)
                                    {
                                        <button type="button" class="btn btn-outline-danger" @onclick="DeleteSite" disabled="@isSaving">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-2"></i>
                                        }
                                        @(IsNew ? "Create Site" : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        </div>
                    }
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private bool IsNew => !Id.HasValue;
    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = "";
    private Site model = new();
    private List<Customer> customers = new();
    private List<Company> companies = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadLookupsAsync();
        
        if (IsNew)
        {
            model = new Site { Country = "USA" };
            isLoading = false;
        }
        else
        {
            await LoadSiteAsync();
        }
    }

    private async Task LoadLookupsAsync()
    {
        await using var db = await DbFactory.CreateDbContextAsync();
        
        customers = await db.Customers
            .Where(c => c.Status == CustomerStatus.Active)
            .OrderBy(c => c.Name)
            .AsNoTracking()
            .ToListAsync();

        companies = await db.Companies
            .Where(c => c.IsActive)
            .OrderBy(c => c.Name)
            .AsNoTracking()
            .ToListAsync();
    }

    private async Task LoadSiteAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            var site = await db.Sites.FirstOrDefaultAsync(s => s.Id == Id!.Value);

            if (site != null)
            {
                // Create a new instance to avoid tracking issues
                model = new Site
                {
                    Id = site.Id,
                    CustomerId = site.CustomerId,
                    CompanyId = site.CompanyId,
                    SiteName = site.SiteName,
                    LocationDescription = site.LocationDescription,
                    SiteNumber = site.SiteNumber,
                    Address = site.Address,
                    Address2 = site.Address2,
                    City = site.City,
                    State = site.State,
                    ZipCode = site.ZipCode,
                    Country = site.Country,
                    Latitude = site.Latitude,
                    Longitude = site.Longitude,
                    GooglePlaceId = site.GooglePlaceId,
                    CrossStreets = site.CrossStreets,
                    PropertyType = site.PropertyType,
                    YearBuilt = site.YearBuilt,
                    SquareFootage = site.SquareFootage,
                    Stories = site.Stories,
                    GateCode = site.GateCode,
                    LockboxCode = site.LockboxCode,
                    AccessInstructions = site.AccessInstructions,
                    ParkingInstructions = site.ParkingInstructions,
                    HasDog = site.HasDog,
                    HasGate = site.HasGate,
                    RequiresAppointment = site.RequiresAppointment,
                    PetNotes = site.PetNotes,
                    SiteContactName = site.SiteContactName,
                    SiteContactPhone = site.SiteContactPhone,
                    SiteContactEmail = site.SiteContactEmail,
                    ServiceZone = site.ServiceZone,
                    TravelSurcharge = site.TravelSurcharge,
                    EstimatedDriveMinutes = site.EstimatedDriveMinutes,
                    ElectricalPanelLocation = site.ElectricalPanelLocation,
                    GasShutoffLocation = site.GasShutoffLocation,
                    WaterShutoffLocation = site.WaterShutoffLocation,
                    HvacLocation = site.HvacLocation,
                    ThermostatLocation = site.ThermostatLocation,
                    FilterLocation = site.FilterLocation,
                    AccessNotes = site.AccessNotes,
                    Notes = site.Notes,
                    IsPrimary = site.IsPrimary,
                    IsActive = site.IsActive,
                    CreatedAt = site.CreatedAt
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load site: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            await using var db = await DbFactory.CreateDbContextAsync();

            if (IsNew)
            {
                // Generate site number
                var count = await db.Sites.CountAsync() + 1;
                model.SiteNumber = $"S-{count:D4}";
                
                db.Sites.Add(model);
            }
            else
            {
                db.Sites.Update(model);
            }

            await db.SaveChangesAsync();

            Navigation.NavigateTo(IsNew ? "/sites" : $"/sites/{model.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteSite()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this site?"))
            return;

        try
        {
            isSaving = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            db.Sites.Remove(model);
            await db.SaveChangesAsync();

            Navigation.NavigateTo("/sites");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete: {ex.Message}";
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsNew)
            Navigation.NavigateTo("/sites");
        else
            Navigation.NavigateTo($"/sites/{Id}");
    }
}
