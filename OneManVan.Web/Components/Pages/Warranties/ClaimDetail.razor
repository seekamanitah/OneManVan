@page "/warranties/claims/{Id:int}"
@page "/warranties/claims/{Id:int}/edit"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@* [Authorize] temporarily disabled for development *@
@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>@(claim?.ClaimNumber ?? "Warranty Claim") - OneManVan</PageTitle>

<div class="container-fluid py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (claim == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Claim not found.
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/warranties/claims">Claims</a></li>
                                <li class="breadcrumb-item active">@claim.ClaimNumber</li>
                            </ol>
                        </nav>
                        <h1 class="h2 mb-1">Claim @claim.ClaimNumber</h1>
                        <div class="d-flex gap-2 align-items-center">
                            <span class="badge @GetStatusBadge(claim.Status)">@claim.Status</span>
                            @if (claim.IsCoveredByWarranty)
                            {
                                <span class="badge bg-success">Covered by Warranty</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Covered</span>
                            }
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary" @onclick="GoBack">
                            <i class="bi bi-arrow-left me-2"></i>Back
                        </button>
                        @if (!isEditMode)
                        {
                            <button class="btn btn-primary" @onclick="EnableEdit">
                                <i class="bi bi-pencil me-2"></i>Edit
                            </button>
                        }
                    </div>
                </div>

                @if (isEditMode)
                {
                    <!-- Edit Form -->
                    <EditForm Model="claim" OnValidSubmit="HandleUpdate">
                        <DataAnnotationsValidator />

                        <!-- Claim Details Card -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-bottom">
                                <h5 class="mb-0">Claim Details</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Status</label>
                                        <InputSelect @bind-Value="claim.Status" class="form-select">
                                            @foreach (var status in Enum.GetValues<ClaimStatus>())
                                            {
                                                <option value="@status">@status</option>
                                            }
                                        </InputSelect>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Resolved Date</label>
                                        <InputDate @bind-Value="claim.ResolvedDate" class="form-control" />
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Issue Description</label>
                                        <InputTextArea @bind-Value="claim.IssueDescription" class="form-control" rows="3" />
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Resolution</label>
                                        <InputTextArea @bind-Value="claim.Resolution" class="form-control" rows="3" 
                                                       placeholder="Describe how the issue was resolved..." />
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Repair Cost</label>
                                        <InputNumber @bind-Value="claim.RepairCost" class="form-control" step="0.01" />
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Customer Charge</label>
                                        <InputNumber @bind-Value="claim.CustomerCharge" class="form-control" step="0.01" />
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Parts Replaced</label>
                                        <InputTextArea @bind-Value="claim.PartsReplaced" class="form-control" rows="2" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Manufacturer Response Card -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-bottom">
                                <h5 class="mb-0">Manufacturer Response</h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Manufacturer Claim Number</label>
                                        <InputText @bind-Value="claim.ManufacturerClaimNumber" class="form-control" />
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Response Date</label>
                                        <InputDate @bind-Value="claim.ManufacturerResponseDate" class="form-control" />
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Manufacturer Response</label>
                                        <InputTextArea @bind-Value="claim.ManufacturerResponse" class="form-control" rows="3" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Technician Notes Card -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-bottom">
                                <h5 class="mb-0">Technician Notes</h5>
                            </div>
                            <div class="card-body">
                                <InputTextArea @bind-Value="claim.TechnicianNotes" class="form-control" rows="4" />
                            </div>
                        </div>

                        <!-- Error Message -->
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                @errorMessage
                            </div>
                        }

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-outline-secondary" @onclick="CancelEdit">
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                        </div>
                    </EditForm>
                }
                else
                {
                    <!-- View Mode -->
                    <!-- Asset Info -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="mb-0">Asset Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Asset Tag:</strong> @claim.Asset?.AssetTag</p>
                                    <p class="mb-2"><strong>Description:</strong> @claim.Asset?.Description</p>
                                    <p class="mb-2"><strong>Customer:</strong> @claim.Asset?.Customer?.Name</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Install Date:</strong> @(claim.Asset?.InstallDate?.ToString("MMM dd, yyyy") ?? "-")</p>
                                    <p class="mb-2"><strong>Warranty Expires:</strong> @(claim.Asset?.WarrantyExpiration?.ToString("MMM dd, yyyy") ?? "-")</p>
                                    <a href="/assets/@claim.AssetId" class="btn btn-sm btn-outline-primary mt-2">
                                        <i class="bi bi-box-arrow-up-right me-1"></i>View Asset
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Claim Details -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="mb-0">Claim Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Claim Date:</strong> @claim.ClaimDate.ToString("MMM dd, yyyy")</p>
                                    <p class="mb-2"><strong>Resolved Date:</strong> @(claim.ResolvedDate?.ToString("MMM dd, yyyy") ?? "Not resolved")</p>
                                    <p class="mb-2"><strong>Filed By:</strong> @(claim.FiledBy ?? "-")</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Repair Cost:</strong> @claim.RepairCost.ToString("C")</p>
                                    <p class="mb-2"><strong>Customer Charge:</strong> @claim.CustomerCharge.ToString("C")</p>
                                </div>
                            </div>
                            <hr />
                            <h6>Issue Description</h6>
                            <p>@claim.IssueDescription</p>

                            @if (!string.IsNullOrEmpty(claim.Resolution))
                            {
                                <h6>Resolution</h6>
                                <p>@claim.Resolution</p>
                            }

                            @if (!string.IsNullOrEmpty(claim.PartsReplaced))
                            {
                                <h6>Parts Replaced</h6>
                                <p>@claim.PartsReplaced</p>
                            }
                        </div>
                    </div>

                    <!-- Manufacturer Response -->
                    @if (!string.IsNullOrEmpty(claim.ManufacturerResponse))
                    {
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-bottom">
                                <h5 class="mb-0">Manufacturer Response</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>Claim Number:</strong> @claim.ManufacturerClaimNumber</p>
                                <p class="mb-2"><strong>Response Date:</strong> @claim.ManufacturerResponseDate?.ToString("MMM dd, yyyy")</p>
                                <hr />
                                <p>@claim.ManufacturerResponse</p>
                            </div>
                        </div>
                    }

                    <!-- Technician Notes -->
                    @if (!string.IsNullOrEmpty(claim.TechnicianNotes))
                    {
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-bottom">
                                <h5 class="mb-0">Technician Notes</h5>
                            </div>
                            <div class="card-body">
                                <p>@claim.TechnicianNotes</p>
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Timeline -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">Timeline</h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-marker bg-primary"></div>
                                <div class="timeline-content">
                                    <small class="text-muted">@claim.ClaimDate.ToString("MMM dd, yyyy")</small>
                                    <p class="mb-0"><strong>Claim Filed</strong></p>
                                </div>
                            </div>

                            @if (claim.ManufacturerResponseDate.HasValue)
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-info"></div>
                                    <div class="timeline-content">
                                        <small class="text-muted">@claim.ManufacturerResponseDate.Value.ToString("MMM dd, yyyy")</small>
                                        <p class="mb-0"><strong>Manufacturer Responded</strong></p>
                                    </div>
                                </div>
                            }

                            @if (claim.ResolvedDate.HasValue)
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-success"></div>
                                    <div class="timeline-content">
                                        <small class="text-muted">@claim.ResolvedDate.Value.ToString("MMM dd, yyyy")</small>
                                        <p class="mb-0"><strong>Claim Resolved</strong></p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }

    .timeline-item:not(:last-child):before {
        content: '';
        position: absolute;
        left: -22px;
        top: 15px;
        height: calc(100% + 5px);
        width: 2px;
        background: #dee2e6;
    }

    .timeline-marker {
        position: absolute;
        left: -26px;
        top: 5px;
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }

    .timeline-content {
        padding-left: 10px;
    }
</style>

@code {
    [Parameter]
    public int Id { get; set; }

    private bool isLoading = true;
    private bool isEditMode = false;
    private bool isSaving = false;
    private WarrantyClaim? claim;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadClaimAsync();
    }

    private async Task LoadClaimAsync()
    {
        try
        {
            isLoading = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            claim = await db.WarrantyClaims
                .Include(c => c.Asset)
                .ThenInclude(a => a.Customer)
                .FirstOrDefaultAsync(c => c.Id == Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EnableEdit()
    {
        isEditMode = true;
    }

    private void CancelEdit()
    {
        isEditMode = false;
        LoadClaimAsync();
    }

    private async Task HandleUpdate()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            await using var db = await DbFactory.CreateDbContextAsync();
            
            claim!.UpdatedAt = DateTime.UtcNow;
            db.WarrantyClaims.Update(claim);
            await db.SaveChangesAsync();

            isEditMode = false;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating claim: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/warranties/claims");
    }

    private string GetStatusBadge(ClaimStatus status) => status switch
    {
        ClaimStatus.Pending => "bg-secondary",
        ClaimStatus.UnderReview => "bg-info",
        ClaimStatus.Approved => "bg-success",
        ClaimStatus.Denied => "bg-danger",
        ClaimStatus.Completed => "bg-primary",
        ClaimStatus.Cancelled => "bg-dark",
        _ => "bg-secondary"
    };
}
