@* Delete Confirmation Modal - Reusable component for confirming deletions *@

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="Cancel" disabled="@isDeleting"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-2">Are you sure you want to delete this @EntityType?</p>
                    @if (!string.IsNullOrEmpty(EntityName))
                    {
                        <p class="fw-bold text-danger mb-3">@EntityName</p>
                    }
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone.
                        @if (!string.IsNullOrEmpty(AdditionalWarning))
                        {
                            <br /><span class="mt-1 d-block">@AdditionalWarning</span>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isDeleting">
                        <i class="bi bi-x-lg me-1"></i>Cancel
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Deleting...</span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                            <span>Delete</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string EntityType { get; set; } = "item";
    [Parameter] public string? EntityName { get; set; }
    [Parameter] public string? AdditionalWarning { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private bool isDeleting = false;

    private async Task ConfirmDelete()
    {
        isDeleting = true;
        StateHasChanged();
        
        try
        {
            await OnConfirm.InvokeAsync();
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }

    private async Task Cancel()
    {
        await OnCancel.InvokeAsync();
    }
}
