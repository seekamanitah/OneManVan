@inject IJSRuntime JS

<div class="dropdown">
    <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" id="@DropdownId" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-download"></i> Export
    </button>
    <ul class="dropdown-menu" aria-labelledby="@DropdownId">
        <li>
            <a class="dropdown-item" href="@CsvUrl" download>
                <i class="bi bi-filetype-csv"></i> CSV
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="@ExcelUrl" download>
                <i class="bi bi-filetype-xlsx"></i> Excel
            </a>
        </li>
    </ul>
</div>

@code {
    [Parameter, EditorRequired]
    public string EntityType { get; set; } = string.Empty;

    private string DropdownId => $"exportDropdown{EntityType}";
    private string CsvUrl => $"/api/export/{EntityType.ToLower()}/csv";
    private string ExcelUrl => $"/api/export/{EntityType.ToLower()}/excel";
}
