<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="OneManVan.Controls.ProductFormContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StackPanel>
        <!-- Manufacturer -->
        <TextBlock Text="Manufacturer *" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="ManufacturerTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Model Number -->
        <TextBlock Text="Model Number *" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="ModelNumberTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Serial Number -->
        <TextBlock Text="Serial Number (Optional)" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SerialNumberTextBox"
                     Grid.Column="0"
                     Background="{DynamicResource SurfaceBrush}"
                     Foreground="{DynamicResource TextBrush}"
                     BorderBrush="{DynamicResource Surface2Brush}"
                     BorderThickness="1"
                     Padding="10,8"
                     FontSize="13"
                     LostFocus="OnSerialNumberLostFocus"/>
            <Border Grid.Column="1"
                    x:Name="SerialValidationIndicator"
                    Width="28"
                    Height="28"
                    CornerRadius="14"
                    Background="#10B981"
                    Margin="8,0,0,0"
                    Visibility="Collapsed">
                <TextBlock Text="?" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!-- Product Name -->
        <TextBlock Text="Product Name" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="ProductNameTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Category -->
        <TextBlock Text="Category" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <ComboBox x:Name="CategoryCombo"
                  Background="{DynamicResource SurfaceBrush}"
                  Foreground="{DynamicResource TextBrush}"
                  BorderBrush="{DynamicResource Surface2Brush}"
                  BorderThickness="1"
                  Padding="10,8"
                  FontSize="13"
                  Margin="0,0,0,15"/>
        
        <!-- Wholesale Cost -->
        <TextBlock Text="Wholesale Cost" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="WholesaleCostTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Suggested Sell Price -->
        <TextBlock Text="Suggested Sell Price" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="SuggestedSellPriceTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Description -->
        <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="DescriptionTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Height="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</UserControl>
