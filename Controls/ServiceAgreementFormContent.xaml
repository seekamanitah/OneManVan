<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="OneManVan.Controls.ServiceAgreementFormContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StackPanel>
        <!-- Name -->
        <TextBlock Text="Agreement Name *" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="NameTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Customer -->
        <TextBlock Text="Customer *" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <ComboBox x:Name="CustomerCombo"
                  Background="{DynamicResource SurfaceBrush}"
                  Foreground="{DynamicResource TextBrush}"
                  BorderBrush="{DynamicResource Surface2Brush}"
                  BorderThickness="1"
                  Padding="10,8"
                  FontSize="13"
                  SelectionChanged="OnCustomerChanged"
                  Margin="0,0,0,15"/>
        
        <!-- Site -->
        <TextBlock Text="Site (Optional)" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <ComboBox x:Name="SiteCombo"
                  Background="{DynamicResource SurfaceBrush}"
                  Foreground="{DynamicResource TextBrush}"
                  BorderBrush="{DynamicResource Surface2Brush}"
                  BorderThickness="1"
                  Padding="10,8"
                  FontSize="13"
                  Margin="0,0,0,15"/>
        
        <!-- Type -->
        <TextBlock Text="Agreement Type" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <ComboBox x:Name="TypeCombo"
                  Background="{DynamicResource SurfaceBrush}"
                  Foreground="{DynamicResource TextBrush}"
                  BorderBrush="{DynamicResource Surface2Brush}"
                  BorderThickness="1"
                  Padding="10,8"
                  FontSize="13"
                  Margin="0,0,0,15"/>
        
        <!-- Start Date -->
        <TextBlock Text="Start Date" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <DatePicker x:Name="StartDatePicker"
                    Background="{DynamicResource SurfaceBrush}"
                    Foreground="{DynamicResource TextBrush}"
                    BorderBrush="{DynamicResource Surface2Brush}"
                    BorderThickness="1"
                    Padding="10,8"
                    FontSize="13"
                    Margin="0,0,0,15"/>
        
        <!-- End Date -->
        <TextBlock Text="End Date" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <DatePicker x:Name="EndDatePicker"
                    Background="{DynamicResource SurfaceBrush}"
                    Foreground="{DynamicResource TextBrush}"
                    BorderBrush="{DynamicResource Surface2Brush}"
                    BorderThickness="1"
                    Padding="10,8"
                    FontSize="13"
                    Margin="0,0,0,15"/>
        
        <!-- Annual Price -->
        <TextBlock Text="Annual Price" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="AnnualPriceTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Description -->
        <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="DescriptionTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Height="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</UserControl>
