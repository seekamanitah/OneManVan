<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="OneManVan.Controls.CompanyFormContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StackPanel>
        <!-- Basic Information Section -->
        <TextBlock Text="Basic Information" FontSize="14" FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,0,10"/>
        
        <!-- Company Name -->
        <TextBlock Text="Company Name *" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="NameTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Legal Name -->
        <TextBlock Text="Legal Name" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="LegalNameTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Company Type and Industry -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Company Type" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <ComboBox x:Name="CompanyTypeCombo"
                          Background="{DynamicResource SurfaceBrush}"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource Surface2Brush}"
                          BorderThickness="1"
                          Padding="10,8"
                          FontSize="13">
                    <ComboBoxItem Content="Customer"/>
                    <ComboBoxItem Content="Vendor"/>
                    <ComboBoxItem Content="Supplier"/>
                    <ComboBoxItem Content="Partner"/>
                    <ComboBoxItem Content="Competitor"/>
                </ComboBox>
            </StackPanel>
            
            <StackPanel Grid.Column="2">
                <TextBlock Text="Industry" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="IndustryTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"/>
            </StackPanel>
        </Grid>
        
        <!-- Tax ID -->
        <TextBlock Text="Tax ID" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,15,0,4"/>
        <TextBox x:Name="TaxIdTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Contact Information Section -->
        <TextBlock Text="Contact Information" FontSize="14" FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryBrush}" Margin="0,5,0,10"/>
        
        <!-- Primary Contact (Customer Picker) -->
        <TextBlock Text="Primary Contact" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox x:Name="ContactCustomerCombo"
                      Grid.Column="0"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="Id"
                      Background="{DynamicResource SurfaceBrush}"
                      Foreground="{DynamicResource TextBrush}"
                      BorderBrush="{DynamicResource Surface2Brush}"
                      BorderThickness="1"
                      Padding="10,8"
                      FontSize="13"
                      SelectionChanged="ContactCustomerCombo_SelectionChanged"/>
            
            <Button Grid.Column="1"
                    x:Name="NewContactButton"
                    Content="New Contact"
                    Click="OnNewContactClick"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"
                    Padding="15,8"
                    Margin="10,0,0,0"
                    FontSize="12"
                    Cursor="Hand"/>
        </Grid>
        
        <!-- Contact Info Preview -->
        <Border x:Name="ContactInfoPanel"
                Visibility="Collapsed"
                Background="{DynamicResource Surface2Brush}"
                Padding="12"
                Margin="0,10,0,0"
                CornerRadius="6">
            <StackPanel>
                <TextBlock x:Name="ContactNameDisplay" FontWeight="SemiBold" FontSize="13"
                           Foreground="{DynamicResource TextBrush}"/>
                <TextBlock x:Name="ContactEmailDisplay" FontSize="12" Margin="0,4,0,0"
                           Foreground="{DynamicResource MutedTextBrush}"/>
                <TextBlock x:Name="ContactPhoneDisplay" FontSize="12" Margin="0,2,0,0"
                           Foreground="{DynamicResource MutedTextBrush}"/>
            </StackPanel>
        </Border>
        
        <TextBlock Text="Select or create a customer to be the primary contact"
                   FontSize="11" FontStyle="Italic"
                   Foreground="{DynamicResource MutedTextBrush}" Margin="0,8,0,15"/>
        
        <!-- Phone and Email -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Phone" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="PhoneTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         LostFocus="PhoneTextBox_LostFocus"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2">
                <TextBlock Text="Email" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="EmailTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"/>
            </StackPanel>
        </Grid>
        
        <!-- Website -->
        <TextBlock Text="Website" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,15,0,4"/>
        <TextBox x:Name="WebsiteTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- Billing Address Section -->
        <TextBlock Text="Billing Address" FontSize="14" FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryBrush}" Margin="0,5,0,10"/>
        
        <!-- Address -->
        <TextBlock Text="Street Address" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
        <TextBox x:Name="BillingAddressTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Margin="0,0,0,15"/>
        
        <!-- City, State, Zip -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="City" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="BillingCityTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2">
                <TextBlock Text="State" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="BillingStateTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"/>
            </StackPanel>
            
            <StackPanel Grid.Column="4">
                <TextBlock Text="Zip Code" FontSize="12" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="BillingZipCodeTextBox"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource Surface2Brush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"/>
            </StackPanel>
        </Grid>
        
        <!-- Notes -->
        <TextBlock Text="Notes" FontSize="12" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}" Margin="0,15,0,4"/>
        <TextBox x:Name="NotesTextBox"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource Surface2Brush}"
                 BorderThickness="1"
                 Padding="10,8"
                 FontSize="13"
                 Height="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</UserControl>
