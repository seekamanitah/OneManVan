<Window x:Class="OneManVan.MainShell"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:controls="clr-namespace:OneManVan.Controls"
mc:Ignorable="d"
Title="OneManVan - HVAC Job Estimator" 
Height="750" Width="1250"
MinHeight="600" MinWidth="900"
WindowStartupLocation="CenterScreen"
Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SubtextBrush}"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6" Margin="5,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Surface2Brush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Brand -->
                <StackPanel Grid.Row="0" Margin="20,25,20,30">
                    <TextBlock Text="OneManVan" FontSize="22" FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryBrush}"/>
                    <TextBlock Text="by MtnManApps" FontSize="12" 
                               Foreground="{DynamicResource SubtextBrush}"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Navigation Items -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10,0">
                        <Button x:Name="NavHome" Content="Home" 
                                Style="{StaticResource NavButton}" 
                                Click="NavHome_Click" Tag="Active"/>
                        
                        <TextBlock Text="MANAGEMENT" FontSize="10" FontWeight="SemiBold"
                                   Foreground="{DynamicResource SubtextBrush}"
                                   Margin="20,20,0,10"/>
                        
                        <Button x:Name="NavCustomers" Content="Customers" 
                                Style="{StaticResource NavButton}" 
                                Click="NavCustomers_Click"/>
                        
                        <Button x:Name="NavAssets" Content="Assets" 
                                Style="{StaticResource NavButton}" 
                                Click="NavAssets_Click"/>
                        
                        <Button x:Name="NavProducts" Content="Products" 
                                Style="{StaticResource NavButton}" 
                                Click="NavProducts_Click"/>
                        
                        <Button x:Name="NavEstimates" Content="Estimates" 
                                Style="{StaticResource NavButton}" 
                                Click="NavEstimates_Click"/>
                        
                        <Button x:Name="NavInventory" Content="Inventory" 
                                Style="{StaticResource NavButton}" 
                                Click="NavInventory_Click"/>

                        <TextBlock Text="OPERATIONS" FontSize="10" FontWeight="SemiBold"
                                   Foreground="{DynamicResource SubtextBrush}"
                                   Margin="20,20,0,10"/>
                        
                        <Button x:Name="NavSchedule" Content="Jobs" 
                                Style="{StaticResource NavButton}" 
                                Click="NavSchedule_Click"/>
                        
                        <Button x:Name="NavKanban" Content="Kanban Board" 
                                Style="{StaticResource NavButton}" 
                                Click="NavKanban_Click"/>
                        
                        <Button x:Name="NavCalendar" Content="Calendar" 
                                Style="{StaticResource NavButton}" 
                                Click="NavCalendar_Click"/>
                        
                        <Button x:Name="NavServiceAgreements" Content="Agreements" 
                                Style="{StaticResource NavButton}" 
                                Click="NavServiceAgreements_Click"/>
                        
                        <Button x:Name="NavInvoices" Content="Invoices" 
                                Style="{StaticResource NavButton}" 
                                Click="NavInvoices_Click"/>
                        
                        <Button x:Name="NavReports" Content="Reports" 
                                Style="{StaticResource NavButton}" 
                                Click="NavReports_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="15,0,15,20">
                    <Border Height="1" Background="{DynamicResource Surface2Brush}" Margin="0,0,0,15"/>
                    
                    <Button x:Name="NavSchema" Content="Schema Editor" Style="{StaticResource NavButton}"
                            Click="NavSchema_Click"/>
                    
                    <Button x:Name="NavSettings" Content="Settings" Style="{StaticResource NavButton}"
                            Click="NavSettings_Click"/>
                    
                    <Button Content="Backup" Style="{StaticResource NavButton}"
                            Click="NavBackup_Click"/>
                    
                    <Button x:Name="NavTestRunner" Content="Test Runner" Style="{StaticResource NavButton}"
                            Click="NavTestRunner_Click"/>
                    
                    <TextBlock Text="v1.0.0 - HVAC Preset" FontSize="10"
                               Foreground="{DynamicResource SubtextBrush}"
                               Margin="20,15,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Search Bar -->
            <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="6" Padding="10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="&#x1F50D;" FontSize="14" VerticalAlignment="Center" 
                                       Margin="0,0,8,0" Foreground="{DynamicResource SubtextBrush}"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1" 
                                     Background="Transparent" BorderThickness="0"
                                     Foreground="{DynamicResource TextBrush}" FontSize="13"
                                     VerticalAlignment="Center" Padding="0,8"
                                     KeyUp="SearchBox_KeyUp"
                                     GotFocus="SearchBox_GotFocus"
                                     LostFocus="SearchBox_LostFocus"/>
                            <TextBlock x:Name="SearchPlaceholder" Grid.Column="1" 
                                       Text="Search customers, assets, jobs... (Ctrl+F)"
                                       Foreground="{DynamicResource SubtextBrush}" FontSize="13"
                                       VerticalAlignment="Center" IsHitTestVisible="False"/>
                            <TextBlock Grid.Column="2" Text="Ctrl+F" FontSize="10" 
                                       Foreground="{DynamicResource Surface2Brush}" 
                                       VerticalAlignment="Center" Margin="8,0,0,0"
                                       FontFamily="Consolas"/>
                        </Grid>
                    </Border>
                    
                    <!-- Search Results Popup -->
                    <Popup x:Name="SearchResultsPopup" PlacementTarget="{Binding ElementName=SearchBox}" 
                           Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                                BorderBrush="{DynamicResource Surface2Brush}" BorderThickness="1"
                                Width="380" MaxHeight="350">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                            </Border.Effect>
                            <StackPanel>
                                <ListBox x:Name="SearchResultsList" Background="Transparent" 
                                         BorderThickness="0" MaxHeight="300"
                                         SelectionChanged="SearchResultsList_SelectionChanged">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="12,10"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border x:Name="itemBorder" Background="{TemplateBinding Background}" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="itemBorder" Property="Background" Value="{DynamicResource Surface2Brush}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="itemBorder" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Icon}" FontSize="16" 
                                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}" 
                                                               Foreground="{DynamicResource TextBrush}"
                                                               FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding Subtitle}" FontSize="11"
                                                               Foreground="{DynamicResource SubtextBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <TextBlock x:Name="NoResultsText" Text="No results found" 
                                           Foreground="{DynamicResource SubtextBrush}"
                                           HorizontalAlignment="Center" Padding="20"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>
            </Border>
            
            <!-- Scalable Content Area -->
            <Border x:Name="ScalableContent" Grid.Row="1" ClipToBounds="True">
                <Border.LayoutTransform>
                    <ScaleTransform x:Name="ContentScaleTransform" ScaleX="1" ScaleY="1"/>
                </Border.LayoutTransform>
                <ContentControl x:Name="MainContent"/>
            </Border>
            
            <!-- Toast Container -->
            <StackPanel x:Name="ToastContainer" Grid.Row="1"
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right"
                        Margin="20"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="{DynamicResource SurfaceBrush}" 
                Padding="15,8" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource Surface2Brush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Status Message -->
                <TextBlock x:Name="StatusMessage" Text="Ready" 
                           FontSize="12" Foreground="{DynamicResource SubtextBrush}"
                           VerticalAlignment="Center"/>

                <!-- Database Mode -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <TextBlock Text="&#x1F4BE;" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="DbModeText" Text="SQLite (Local)" 
                               FontSize="11" Foreground="{DynamicResource SubtextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Last Backup -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0">
                    <TextBlock Text="Refresh" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="LastBackupText" Text="No backup" 
                                FontSize="11" Foreground="{DynamicResource SubtextBrush}"
                                VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Time -->
                <TextBlock x:Name="CurrentTimeText" Grid.Column="3" 
                           FontSize="11" Foreground="{DynamicResource SubtextBrush}"
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
            </Grid>
        </Border>
        
        <!-- Global Drawer Panel (spans all columns and rows) -->
        <controls:DrawerPanel x:Name="GlobalDrawer"
                              Grid.Row="0"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Grid.RowSpan="2"
                              Panel.ZIndex="1000"/>
    </Grid>
</Window>

