@page "/jobs"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@attribute [Authorize]
@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Jobs - TradeFlow</PageTitle>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0">Jobs</h1>
            <p class="text-muted mb-0">Schedule and manage service jobs</p>
        </div>
        <button class="btn btn-primary" @onclick="CreateJob">
            <i class="bi bi-plus-circle me-2"></i>New Job
        </button>
    </div>

    <!-- Search and Filters -->
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" 
                               placeholder="Search jobs..." 
                               @bind="searchText" 
                               @bind:event="oninput"
                               @onkeyup="OnSearchChanged" />
                    </div>
                </div>
                <div class="col-md-2">
                    <select class="form-select" @bind="filterStatus">
                        <option value="">All Status</option>
                        <option value="Scheduled">Scheduled</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" @bind="filterDateRange">
                        <option value="">All Dates</option>
                        <option value="today">Today</option>
                        <option value="week">This Week</option>
                        <option value="month">This Month</option>
                        <option value="upcoming">Upcoming</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" @bind="viewMode">
                        <option value="list">List View</option>
                        <option value="calendar">Calendar View</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100" @onclick="ApplyFilters">
                        <i class="bi bi-funnel me-2"></i>Filter
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Job List -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                    <p class="mt-2 text-muted">Loading jobs...</p>
                </div>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger m-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                </div>
            }
            else if (filteredJobs.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Job #</th>
                                <th @onclick='@(() => SortBy("Title"))' style="cursor: pointer;">
                                    Title
                                    @if (sortColumn == "Title")
                                    {
                                        <i class="bi @(sortAscending ? "bi-arrow-up" : "bi-arrow-down")"></i>
                                    }
                                </th>
                                <th>Customer</th>
                                <th>Scheduled</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in filteredJobs)
                            {
                                <tr style="cursor: pointer;" @onclick="@(() => ViewJob(job.Id))">
                                    <td>
                                        <span class="badge bg-secondary">@job.JobNumber</span>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-semibold">@job.Title</div>
                                            @if (!string.IsNullOrEmpty(job.Description) && job.Description.Length > 50)
                                            {
                                                <small class="text-muted">@job.Description.Substring(0, 50)...</small>
                                            }
                                        </div>
                                    </td>
                                    <td>@job.Customer?.Name</td>
                                    <td>
                                        @if (job.ScheduledDate.HasValue)
                                        {
                                            <span>@job.ScheduledDate.Value.ToString("MMM dd, yyyy")</span>
                                            @if (job.ScheduledStartTime.HasValue)
                                            {
                                                <br />
                                                <small class="text-muted">@job.ScheduledStartTime.Value.ToString(@"hh\:mm")</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not scheduled</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(job.Status)">
                                            @job.Status
                                        </span>
                                    </td>
                                    <td>@job.TotalAmount.ToString("C")</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" @onclick:stopPropagation="true">
                                            <button class="btn btn-outline-primary" @onclick="@(() => ViewJob(job.Id))">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-secondary" @onclick="@(() => EditJob(job.Id))">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            Showing @filteredJobs.Count of @allJobs.Count jobs
                        </small>
                        @if (filteredJobs.Count < allJobs.Count)
                        {
                            <button class="btn btn-sm btn-outline-primary" @onclick="LoadMore">
                                Load More
                            </button>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-briefcase fs-1 text-muted mb-3 d-block"></i>
                    <h5>No jobs found</h5>
                    <p class="text-muted mb-3">Schedule your first service job</p>
                    <button class="btn btn-primary" @onclick="CreateJob">
                        <i class="bi bi-plus-circle me-2"></i>New Job
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool isLoading = true;
    private string errorMessage = "";
    private List<Job> allJobs = new();
    private List<Job> filteredJobs = new();
    
    private string searchText = "";
    private string filterStatus = "";
    private string filterDateRange = "";
    private string viewMode = "list";
    private string sortColumn = "ScheduledDate";
    private bool sortAscending = false;
    private int displayCount = 50;

    protected override async Task OnInitializedAsync()
    {
        await LoadJobsAsync();
    }

    private async Task LoadJobsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = "";

            await using var db = await DbFactory.CreateDbContextAsync();
            
            allJobs = await db.Jobs
                .Include(j => j.Customer)
                .AsNoTracking()
                .ToListAsync();

            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load jobs: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        var query = allJobs.AsEnumerable();

        // Search filter
        if (!string.IsNullOrWhiteSpace(searchText))
        {
            var search = searchText.ToLower();
            query = query.Where(j =>
                (j.Title?.ToLower().Contains(search) ?? false) ||
                (j.Description?.ToLower().Contains(search) ?? false) ||
                (j.JobNumber?.ToLower().Contains(search) ?? false) ||
                (j.Customer?.Name?.ToLower().Contains(search) ?? false));
        }

        // Status filter
        if (!string.IsNullOrWhiteSpace(filterStatus))
        {
            var status = Enum.Parse<JobStatus>(filterStatus);
            query = query.Where(j => j.Status == status);
        }

        // Date range filter
        if (!string.IsNullOrWhiteSpace(filterDateRange))
        {
            var now = DateTime.Now;
            query = filterDateRange switch
            {
                "today" => query.Where(j => j.ScheduledDate.HasValue && j.ScheduledDate.Value.Date == now.Date),
                "week" => query.Where(j => j.ScheduledDate.HasValue && j.ScheduledDate.Value >= now && j.ScheduledDate.Value < now.AddDays(7)),
                "month" => query.Where(j => j.ScheduledDate.HasValue && j.ScheduledDate.Value.Month == now.Month && j.ScheduledDate.Value.Year == now.Year),
                "upcoming" => query.Where(j => j.ScheduledDate.HasValue && j.ScheduledDate.Value >= now),
                _ => query
            };
        }

        // Sorting
        query = sortColumn switch
        {
            "Title" => sortAscending ? query.OrderBy(j => j.Title) : query.OrderByDescending(j => j.Title),
            "ScheduledDate" => sortAscending ? query.OrderBy(j => j.ScheduledDate) : query.OrderByDescending(j => j.ScheduledDate),
            _ => query.OrderByDescending(j => j.ScheduledDate)
        };

        filteredJobs = query.Take(displayCount).ToList();
    }

    private void OnSearchChanged(KeyboardEventArgs e)
    {
        ApplyFilters();
    }

    private void SortBy(string column)
    {
        if (sortColumn == column)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = column;
            sortAscending = true;
        }
        ApplyFilters();
    }

    private void LoadMore()
    {
        displayCount += 50;
        ApplyFilters();
    }

    private void CreateJob()
    {
        Navigation.NavigateTo("/jobs/new");
    }

    private void ViewJob(int id)
    {
        Navigation.NavigateTo($"/jobs/{id}");
    }

    private void EditJob(int id)
    {
        Navigation.NavigateTo($"/jobs/{id}/edit");
    }

    private string GetStatusBadgeClass(JobStatus status)
    {
        return status switch
        {
            JobStatus.Scheduled => "bg-info",
            JobStatus.InProgress => "bg-warning",
            JobStatus.Completed => "bg-success",
            JobStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
