@page "/jobs/new"
@page "/jobs/{Id:int}/edit"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@attribute [Authorize]
@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(IsNew ? "New Job" : "Edit Job") - TradeFlow</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/jobs">Jobs</a></li>
                        <li class="breadcrumb-item active">@(IsNew ? "New" : "Edit")</li>
                    </ol>
                </nav>
                <h1 class="h2">@(IsNew ? "Schedule New Job" : $"Edit Job: {model.Title}")</h1>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Customer & Basic Info -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Job Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Customer *</label>
                                    <select class="form-select" @bind="model.CustomerId">
                                        <option value="0">Select customer...</option>
                                        @foreach (var customer in customers)
                                        {
                                            <option value="@customer.Id">@customer.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Job Title *</label>
                                    <InputText class="form-control" @bind-Value="model.Title" placeholder="e.g., HVAC Maintenance" />
                                    <ValidationMessage For="@(() => model.Title)" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Description</label>
                                    <InputTextArea class="form-control" rows="3" @bind-Value="model.Description" 
                                                   placeholder="Describe the work to be performed..." />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Schedule -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Schedule</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Scheduled Date</label>
                                    <InputDate class="form-control" @bind-Value="model.ScheduledDate" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Start Time</label>
                                    <input type="time" class="form-control" @bind="startTimeString" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">End Time</label>
                                    <input type="time" class="form-control" @bind="endTimeString" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Service Location</label>
                                    <InputText class="form-control" @bind-Value="model.ServiceLocation" 
                                               placeholder="Address or location description" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Job Details -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Job Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Status</label>
                                    <InputSelect class="form-select" @bind-Value="model.Status">
                                        <option value="@JobStatus.Scheduled">Scheduled</option>
                                        <option value="@JobStatus.InProgress">In Progress</option>
                                        <option value="@JobStatus.Completed">Completed</option>
                                        <option value="@JobStatus.Cancelled">Cancelled</option>
                                    </InputSelect>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Total Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <InputNumber class="form-control" @bind-Value="model.TotalAmount" step="0.01" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Notes</h5>
                        </div>
                        <div class="card-body">
                            <InputTextArea class="form-control" rows="4" @bind-Value="model.Notes" 
                                           placeholder="Add any additional notes or instructions..." />
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isSaving">
                                    Cancel
                                </button>
                                <div class="d-flex gap-2">
                                    @if (!IsNew)
                                    {
                                        <button type="button" class="btn btn-outline-danger" @onclick="DeleteJob" disabled="@isSaving">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-2"></i>
                                        }
                                        @(IsNew ? "Schedule Job" : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        </div>
                    }
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private bool IsNew => !Id.HasValue;
    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = "";
    private Job model = new();
    private List<Customer> customers = new();
    private string startTimeString = "";
    private string endTimeString = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomersAsync();

        if (IsNew)
        {
            // Check for customerId query parameter
            var uri = new Uri(Navigation.Uri);
            var queryParams = System.Web.HttpUtility.ParseQueryString(uri.Query);
            if (int.TryParse(queryParams["customerId"], out int customerId))
            {
                model.CustomerId = customerId;
            }

            model = new Job
            {
                Status = JobStatus.Scheduled,
                TotalAmount = 0
            };
            isLoading = false;
        }
        else
        {
            await LoadJobAsync();
        }
    }

    private async Task LoadCustomersAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            customers = await db.Customers
                .Where(c => c.Status == CustomerStatus.Active)
                .OrderBy(c => c.Name)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load customers: {ex.Message}";
        }
    }

    private async Task LoadJobAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            var job = await db.Jobs.FindAsync(Id!.Value);
            if (job != null)
            {
                model = job;
                
                // Convert TimeSpan to string for time inputs
                if (model.ScheduledStartTime.HasValue)
                {
                    startTimeString = model.ScheduledStartTime.Value.ToString(@"hh\:mm");
                }
                if (model.ScheduledEndTime.HasValue)
                {
                    endTimeString = model.ScheduledEndTime.Value.ToString(@"hh\:mm");
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load job: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            // Validate
            if (model.CustomerId == 0)
            {
                errorMessage = "Please select a customer";
                return;
            }

            // Convert time strings to TimeSpan
            if (!string.IsNullOrEmpty(startTimeString) && TimeSpan.TryParse(startTimeString, out TimeSpan startTime))
            {
                model.ScheduledStartTime = startTime;
            }
            if (!string.IsNullOrEmpty(endTimeString) && TimeSpan.TryParse(endTimeString, out TimeSpan endTime))
            {
                model.ScheduledEndTime = endTime;
            }

            await using var db = await DbFactory.CreateDbContextAsync();

            if (IsNew)
            {
                // Generate job number
                var maxNumber = await db.Jobs
                    .Where(j => j.JobNumber != null && j.JobNumber.StartsWith("J-"))
                    .Select(j => j.JobNumber)
                    .ToListAsync();

                var nextNumber = 1;
                if (maxNumber.Any())
                {
                    nextNumber = maxNumber
                        .Select(n => int.TryParse(n?.Substring(2), out int num) ? num : 0)
                        .DefaultIfEmpty(0)
                        .Max() + 1;
                }
                model.JobNumber = $"J-{nextNumber:D4}";
                model.CreatedAt = DateTime.UtcNow;

                db.Jobs.Add(model);
            }
            else
            {
                model.ModifiedAt = DateTime.UtcNow;
                db.Jobs.Update(model);
            }

            await db.SaveChangesAsync();

            Navigation.NavigateTo(IsNew ? "/jobs" : $"/jobs/{model.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save job: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteJob()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this job?"))
            return;

        try
        {
            isSaving = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            db.Jobs.Remove(model);
            await db.SaveChangesAsync();

            Navigation.NavigateTo("/jobs");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete job: {ex.Message}";
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsNew)
        {
            Navigation.NavigateTo("/jobs");
        }
        else
        {
            Navigation.NavigateTo($"/jobs/{Id}");
        }
    }
}
