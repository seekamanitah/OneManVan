@page "/assets/new"
@page "/assets/{Id:int}/edit"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@attribute [Authorize]
@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(IsNew ? "New Asset" : "Edit Asset") - TradeFlow</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/assets">Assets</a></li>
                        <li class="breadcrumb-item active">@(IsNew ? "New" : "Edit")</li>
                    </ol>
                </nav>
                <h1 class="h2">@(IsNew ? "Add New Asset" : $"Edit Asset")</h1>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Product & Customer Selection -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Product & Customer</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Product *</label>
                                    <select class="form-select" @bind="model.ProductId">
                                        <option value="0">Select product...</option>
                                        @foreach (var product in products)
                                        {
                                            <option value="@product.Id">@product.Name (@product.Manufacturer @product.Model)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Customer *</label>
                                    <select class="form-select" @bind="model.CustomerId">
                                        <option value="0">Select customer...</option>
                                        @foreach (var customer in customers)
                                        {
                                            <option value="@customer.Id">@customer.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Asset Details -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Asset Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Serial Number</label>
                                    <InputText class="form-control" @bind-Value="model.Serial" placeholder="Optional" />
                                    <small class="text-muted">Unique identifier for this specific unit</small>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Location</label>
                                    <InputText class="form-control" @bind-Value="model.Location" 
                                               placeholder="e.g., Main Floor, Basement, Unit 202" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Install Date</label>
                                    <InputDate class="form-control" @bind-Value="model.InstallDate" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Last Service Date</label>
                                    <InputDate class="form-control" @bind-Value="model.LastServiceDate" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Warranty Information -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Warranty & Registration</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="form-check">
                                        <InputCheckbox class="form-check-input" @bind-Value="model.IsRegisteredOnline" id="isRegistered" />
                                        <label class="form-check-label" for="isRegistered">
                                            Warranty Registered
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Warranty Expiration</label>
                                    <InputDate class="form-control" @bind-Value="model.WarrantyExpiration" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Registration Number</label>
                                    <InputText class="form-control" @bind-Value="model.RegistrationConfirmation" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Registration Date</label>
                                    <InputDate class="form-control" @bind-Value="model.RegistrationDate" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Notes</h5>
                        </div>
                        <div class="card-body">
                            <InputTextArea class="form-control" rows="4" @bind-Value="model.Notes" 
                                           placeholder="Add any additional notes about this asset..." />
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isSaving">
                                    Cancel
                                </button>
                                <div class="d-flex gap-2">
                                    @if (!IsNew)
                                    {
                                        <button type="button" class="btn btn-outline-danger" @onclick="DeleteAsset" disabled="@isSaving">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-2"></i>
                                        }
                                        @(IsNew ? "Create Asset" : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        </div>
                    }
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private bool IsNew => !Id.HasValue;
    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = "";
    private Asset model = new();
    private List<Product> products = new();
    private List<Customer> customers = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDropdownsAsync();

        if (IsNew)
        {
            // Check for productId query parameter
            var uri = new Uri(Navigation.Uri);
            var queryParams = System.Web.HttpUtility.ParseQueryString(uri.Query);
            if (int.TryParse(queryParams["productId"], out int productId))
            {
                model.ProductId = productId;
            }

            model = new Asset
            {
                IsRegistered = false
            };
            isLoading = false;
        }
        else
        {
            await LoadAssetAsync();
        }
    }

    private async Task LoadDropdownsAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            products = await db.Products
                .OrderBy(p => p.Name)
                .AsNoTracking()
                .ToListAsync();

            customers = await db.Customers
                .Where(c => c.Status == CustomerStatus.Active)
                .OrderBy(c => c.Name)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load data: {ex.Message}";
        }
    }

    private async Task LoadAssetAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            var asset = await db.Assets.FindAsync(Id!.Value);
            if (asset != null)
            {
                model = asset;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load asset: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            // Validate
            if (model.ProductId == 0)
            {
                errorMessage = "Please select a product";
                return;
            }

            if (model.CustomerId == 0)
            {
                errorMessage = "Please select a customer";
                return;
            }

            await using var db = await DbFactory.CreateDbContextAsync();

            if (IsNew)
            {
                model.CreatedAt = DateTime.UtcNow;
                db.Assets.Add(model);
            }
            else
            {
                model.ModifiedAt = DateTime.UtcNow;
                db.Assets.Update(model);
            }

            await db.SaveChangesAsync();

            // Navigate back
            Navigation.NavigateTo(IsNew ? "/assets" : $"/assets/{model.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save asset: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteAsset()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this asset?"))
            return;

        try
        {
            isSaving = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            db.Assets.Remove(model);
            await db.SaveChangesAsync();

            Navigation.NavigateTo("/assets");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete asset: {ex.Message}";
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsNew)
        {
            Navigation.NavigateTo("/assets");
        }
        else
        {
            Navigation.NavigateTo($"/assets/{Id}");
        }
    }
}
