@page "/estimates/new"
@page "/estimates/{Id:int}/edit"
@using Microsoft.EntityFrameworkCore
@using OneManVan.Shared.Data
@using OneManVan.Shared.Models
@using OneManVan.Shared.Models.Enums
@attribute [Authorize]
@inject IDbContextFactory<OneManVanDbContext> DbFactory
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@(IsNew ? "New Estimate" : "Edit Estimate") - TradeFlow</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/estimates">Estimates</a></li>
                        <li class="breadcrumb-item active">@(IsNew ? "New" : "Edit")</li>
                    </ol>
                </nav>
                <h1 class="h2">@(IsNew ? "Create Estimate" : $"Edit Estimate: {model.Title}")</h1>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Customer & Dates -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Estimate Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Customer *</label>
                                    <select class="form-select" @bind="model.CustomerId">
                                        <option value="0">Select customer...</option>
                                        @foreach (var customer in customers)
                                        {
                                            <option value="@customer.Id">@customer.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Estimate Date *</label>
                                    <InputDate class="form-control" @bind-Value="model.CreatedAt" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Valid Until</label>
                                    <InputDate class="form-control" @bind-Value="model.ExpiresAt" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Status</label>
                                    <InputSelect class="form-select" @bind-Value="model.Status">
                                        <option value="@EstimateStatus.Draft">Draft</option>
                                        <option value="@EstimateStatus.Sent">Sent</option>
                                        <option value="@EstimateStatus.Accepted">Accepted</option>
                                        <option value="@EstimateStatus.Rejected">Rejected</option>
                                        <option value="@EstimateStatus.Expired">Expired</option>
                                    </InputSelect>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Line Items -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Line Items</h5>
                            <button type="button" class="btn btn-sm btn-primary" @onclick="AddLineItem">
                                <i class="bi bi-plus-circle me-1"></i>Add Item
                            </button>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 40%;">Description</th>
                                            <th style="width: 15%;" class="text-center">Quantity</th>
                                            <th style="width: 15%;" class="text-end">Unit Price</th>
                                            <th style="width: 20%;" class="text-end">Total</th>
                                            <th style="width: 10%;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (lineItems.Any())
                                        {
                                            @for (int i = 0; i < lineItems.Count; i++)
                                            {
                                                var item = lineItems[i];
                                                var index = i;
                                                <tr>
                                                    <td>
                                                        <input type="text" class="form-control form-control-sm" @bind="item.Description" placeholder="Item description" />
                                                    </td>
                                                    <td>
                                                        <input type="number" class="form-control form-control-sm text-center" @bind="item.Quantity" @bind:event="oninput" @onchange="CalculateTotals" min="0" step="1" />
                                                    </td>
                                                    <td>
                                                        <input type="number" class="form-control form-control-sm text-end" @bind="item.UnitPrice" @bind:event="oninput" @onchange="CalculateTotals" min="0" step="0.01" />
                                                    </td>
                                                    <td class="text-end align-middle">
                                                        <span class="fw-semibold">@((item.Quantity * item.UnitPrice).ToString("C"))</span>
                                                    </td>
                                                    <td class="text-center">
                                                        <button type="button" class="btn btn-sm btn-outline-danger" @onclick="@(() => RemoveLineItem(index))">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center py-4 text-muted">
                                                    No line items. Click "Add Item" to get started.
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    @if (lineItems.Any())
                                    {
                                        <tfoot class="table-light">
                                            <tr>
                                                <td colspan="3" class="text-end fw-semibold">Subtotal:</td>
                                                <td class="text-end fw-semibold">@model.SubTotal.ToString("C")</td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2" class="text-end">Tax:</td>
                                                <td>
                                                    <input type="number" class="form-control form-control-sm text-end" @bind="model.TaxAmount" @bind:event="oninput" @onchange="CalculateTotals" min="0" step="0.01" />
                                                </td>
                                                <td class="text-end">@model.TaxAmountAmount.ToString("C")</td>
                                                <td></td>
                                            </tr>
                                            <tr class="fw-bold">
                                                <td colspan="3" class="text-end">Total:</td>
                                                <td class="text-end">@model.Total.ToString("C")</td>
                                                <td></td>
                                            </tr>
                                        </tfoot>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0">Notes & Terms</h5>
                        </div>
                        <div class="card-body">
                            <InputTextArea class="form-control" rows="4" @bind-Value="model.Notes" 
                                           placeholder="Add any notes, terms, or conditions..." />
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel" disabled="@isSaving">
                                    Cancel
                                </button>
                                <div class="d-flex gap-2">
                                    @if (!IsNew)
                                    {
                                        <button type="button" class="btn btn-outline-danger" @onclick="DeleteEstimate" disabled="@isSaving">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle me-2"></i>
                                        }
                                        @(IsNew ? "Create Estimate" : "Save Changes")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        </div>
                    }
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private bool IsNew => !Id.HasValue;
    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = "";
    private Estimate model = new();
    private List<Customer> customers = new();
    private List<EstimateLine> lineItems = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomersAsync();

        if (IsNew)
        {
            model = new Estimate
            {
                CreatedAt = DateTime.Now,
                ExpiresAt = DateTime.Now.AddDays(30),
                Status = EstimateStatus.Draft
            };
            lineItems = new List<EstimateLine>();
            isLoading = false;
        }
        else
        {
            await LoadEstimateAsync();
        }
    }

    private async Task LoadCustomersAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            customers = await db.Customers
                .Where(c => c.Status == CustomerStatus.Active)
                .OrderBy(c => c.Name)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load customers: {ex.Message}";
        }
    }

    private async Task LoadEstimateAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            
            var estimate = await db.Estimates
                .Include(e => e.Lines)
                .FirstOrDefaultAsync(e => e.Id == Id!.Value);

            if (estimate != null)
            {
                model = estimate;
                lineItems = estimate.Lines?.ToList() ?? new List<EstimateLine>();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load estimate: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddLineItem()
    {
        lineItems.Add(new EstimateLine
        {
            Quantity = 1,
            UnitPrice = 0
        });
    }

    private void RemoveLineItem(int index)
    {
        if (index >= 0 && index < lineItems.Count)
        {
            lineItems.RemoveAt(index);
            CalculateTotals();
        }
    }

    private void CalculateTotals()
    {
        model.SubTotal = lineItems.Sum(item => item.Quantity * item.UnitPrice);
        model.Total = model.SubTotal + model.TaxAmount;
        StateHasChanged();
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            if (model.CustomerId == 0)
            {
                errorMessage = "Please select a customer";
                return;
            }

            if (!lineItems.Any())
            {
                errorMessage = "Please add at least one line item";
                return;
            }

            await using var db = await DbFactory.CreateDbContextAsync();

            if (IsNew)
            {
                // Generate estimate number
                var maxNumber = await db.Estimates
                    .Where(e => e.Title != null && e.Title.StartsWith("EST-"))
                    .Select(e => e.Title)
                    .ToListAsync();

                var nextNumber = 1;
                if (maxNumber.Any())
                {
                    nextNumber = maxNumber
                        .Select(n => int.TryParse(n?.Substring(4), out int num) ? num : 0)
                        .DefaultIfEmpty(0)
                        .Max() + 1;
                }
                model.Title = $"EST-{nextNumber:D4}";
                model.CreatedAt = DateTime.UtcNow;

                model.Lines = lineItems;
                db.Estimates.Add(model);
            }
            else
            {
                // model.ModifiedAt = DateTime.UtcNow;

                // Remove old line items and add new ones
                var existingLineItems = await db.EstimateLines.Where(li => li.EstimateId == model.Id).ToListAsync();
                db.EstimateLines.RemoveRange(existingLineItems);

                foreach (var item in lineItems)
                {
                    item.EstimateId = model.Id;
                    db.EstimateLines.Add(item);
                }

                db.Estimates.Update(model);
            }

            await db.SaveChangesAsync();

            Navigation.NavigateTo(IsNew ? "/estimates" : $"/estimates/{model.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save estimate: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteEstimate()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this estimate?"))
            return;

        try
        {
            isSaving = true;

            await using var db = await DbFactory.CreateDbContextAsync();
            db.Estimates.Remove(model);
            await db.SaveChangesAsync();

            Navigation.NavigateTo("/estimates");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete estimate: {ex.Message}";
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsNew)
        {
            Navigation.NavigateTo("/estimates");
        }
        else
        {
            Navigation.NavigateTo($"/estimates/{Id}");
        }
    }
}
